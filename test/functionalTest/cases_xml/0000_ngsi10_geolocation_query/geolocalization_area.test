# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Geo-localization test

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "0: ++++++++++++++++++++"
url="/v1/updateContext"
payload='<?xml version="1.0"?>
<updateContextRequest>
  <contextElementList>
    <contextElement>
      <entityId type="Room" isPattern="false">
        <id>OfficeRoom</id>
      </entityId>
      <contextAttributeList>
        <contextAttribute>
          <name>location</name>
          <type>centigrade</type>
          <contextValue>-3.5, 45.20</contextValue>
          <metadata>
            <contextMetadata>
              <name>location</name>
              <type>string</type>
              <value>WGS84</value>
            </contextMetadata>
          </metadata>
        </contextAttribute>
      </contextAttributeList>
    </contextElement>
  </contextElementList>
  <updateAction>APPEND</updateAction>
</updateContextRequest>'
orionCurl --url "$url" --payload "$payload"

echo "1: ++++++++++++++++++++"
url="/v1/subscribeContext"
payload='<?xml version="1.0"?>
<subscribeContextRequest>
  <entityIdList>
    <entityId type="Room" isPattern="false">
      <id>OfficeRoom</id>
    </entityId>
  </entityIdList>
  <attributeList>
    <attribute>temperature</attribute>
    <attribute>lightstatus</attribute>
  </attributeList>
  <reference>http://127.0.0.1:${LISTENER_PORT}/notify</reference>
  <duration>PT1H</duration>
  <restriction>
    <scope>
      <operationScope>
        <scopeType>FIWARE::Location</scopeType>
        <scopeValue>
          <circle>
            <centerLatitude>40</centerLatitude>
            <centerLongitude>20</centerLongitude>
            <radius>5</radius>
          </circle>
        </scopeValue>
      </operationScope>
    </scope>
  </restriction>
  <notifyConditions>
    <notifyCondition>
      <type>ONCHANGE</type>
      <condValueList>
        <condValue>temperature</condValue>
        <condValue>lightstatus</condValue>
      </condValueList>          
    </notifyCondition>
  </notifyConditions>
</subscribeContextRequest>'
orionCurl --url "$url" --payload "$payload"

echo "2: ++++++++++++++++++++"
url="/v1/subscribeContext"
payload='<?xml version="1.0"?>
<subscribeContextRequest>
  <entityIdList>
    <entityId type="Room" isPattern="false">
      <id>OfficeRoom</id>
    </entityId>
  </entityIdList>
  <attributeList>
    <attribute>temperature</attribute>
    <attribute>lightstatus</attribute>
  </attributeList>
  <reference>http://127.0.0.1:${LISTENER_PORT}/notify</reference>
  <duration>PT1H</duration>
  <restriction>
    <scope>
      <operationScope>
        <scopeType>FIWARE::Location</scopeType>
        <scopeValue>
          <polygon>
            <vertexList>
              <vertex>
                <latitude>40</latitude>
                <longitude>20</longitude>
              </vertex>
              <vertex>
                <latitude>45</latitude>
                <longitude>45</longitude>
              </vertex>
              <vertex>
                <latitude>35</latitude>
                <longitude>10</longitude>
              </vertex>
            </vertexList>
          </polygon>
        </scopeValue>
      </operationScope>
    </scope>
  </restriction>
  <notifyConditions>
    <notifyCondition>
      <type>ONCHANGE</type>
      <condValueList>
        <condValue>temperature</condValue>
        <condValue>lightstatus</condValue>
      </condValueList>          
    </notifyCondition>
  </notifyConditions>
</subscribeContextRequest>'
orionCurl --url "$url" --payload "$payload"

--REGEXPECT--
0: ++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 864
Content-Type: application/json
Date: REGEX(.*)

<?xml version="1.0"?>
<updateContextResponse>
  <contextResponseList>
    <contextElementResponse>
      <contextElement>
        <entityId type="Room" isPattern="false">
          <id>OfficeRoom</id>
        </entityId>
        <contextAttributeList>
          <contextAttribute>
            <name>location</name>
            <type>centigrade</type>
            <contextValue/>
            <metadata>
              <contextMetadata>
                <name>location</name>
                <type>string</type>
                <value>WGS84</value>
              </contextMetadata>
            </metadata>
          </contextAttribute>
        </contextAttributeList>
      </contextElement>
      <statusCode>
        <code>200</code>
        <reasonPhrase>OK</reasonPhrase>
      </statusCode>
    </contextElementResponse>
  </contextResponseList>
</updateContextResponse>
1: ++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 192
Content-Type: application/json
Date: REGEX(.*)

<?xml version="1.0"?>
<subscribeContextResponse>
  <subscribeResponse>
    <subscriptionId>REGEX([0-9a-f]{24})</subscriptionId>
    <duration>PT1H</duration>
  </subscribeResponse>
</subscribeContextResponse>
2: ++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 192
Content-Type: application/json
Date: REGEX(.*)

<?xml version="1.0"?>
<subscribeContextResponse>
  <subscribeResponse>
    <subscriptionId>REGEX([0-9a-f]{24})</subscriptionId>
    <duration>PT1H</duration>
  </subscribeResponse>
</subscribeContextResponse>
--TEARDOWN--
brokerStop CB
dbDrop CB
