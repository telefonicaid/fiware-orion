# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Individual Context Entity Attribute - DELETE OK

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. create an entity +++++"
url="/v1/contextEntities/entity01"
payload='<?xml version="1.0" encoding="UTF-8"?>
<appendContextElementRequest>
  <attributeDomainName></attributeDomainName>
  <contextAttributeList>
    <contextAttribute>
      <name>temperature</name>
      <type>degree</type>
      <contextValue>10</contextValue>
    </contextAttribute>
  </contextAttributeList>
</appendContextElementRequest>'
orionCurl --url "$url" --payload "$payload"

echo "+++++ 2. delete the entity attribute +++++"
orionCurl --url "/v1/contextEntities/entity01/attributes/temperature" -X "DELETE"

--REGEXPECT--
+++++ 1. create an entity +++++
HTTP/1.1 200 OK
Content-Length: 573
Content-Type: application/json
Date: REGEX(.*)

<?xml version="1.0"?>
<appendContextElementResponse>
  <entityId type="" isPattern="false">
    <id>entity01</id>
  </entityId>
  <contextResponseList>
    <contextAttributeResponse>
      <contextAttributeList>
        <contextAttribute>
          <name>temperature</name>
          <type>degree</type>
          <contextValue/>
        </contextAttribute>
      </contextAttributeList>
      <statusCode>
        <code>200</code>
        <reasonPhrase>OK</reasonPhrase>
      </statusCode>
    </contextAttributeResponse>
  </contextResponseList>
</appendContextElementResponse>
+++++ 2. delete the entity attribute +++++
HTTP/1.1 200 OK
Content-Length: 80
Content-Type: application/json
Date: REGEX(.*)

<?xml version="1.0"?>
<statusCode>
  <code>200</code>
  <reasonPhrase>OK</reasonPhrase>
</statusCode>
--TEARDOWN--
brokerStop CB
dbDrop CB
