# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Attribute Value Instance - GET OK

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. creating base entity +++++"
url="/v1/contextEntities/Room1"
payload='{
  "attributes" : [
  {
    "name" : "temperature",
    "type" : "centigrade",
    "value" : "23",
    "metadatas" : [
      {
        "name" : "ID",
        "type" : "string",
        "value" : "ground"
      }
    ]
  },
  {
    "name" : "temperature",
    "type" : "centigrade",
    "value" : "23.5",
    "metadatas" : [
      {
        "name" : "ID",
        "type" : "string",
        "value" : "wall"
      }
    ]
  }
  ]
}'
orionCurl --url "$url" --payload "$payload" --json

echo "+++++ 2. lookup the entity +++++"
orionCurl --url "/v1/contextEntities/Room1" --json

echo "+++++ 3. lookup an attribute by valueID in JSON +++++"
orionCurl --url "/v1/contextEntities/Room1/attributes/temperature/ground" --json

echo "+++++ 4. lookup an attribute by the other valueID in XML +++++"
orionCurl --url "/v1/contextEntities/Room1/attributes/temperature/wall"

--REGEXPECT--
+++++ 1. creating base entity +++++
HTTP/1.1 200 OK
Content-Length: 763
Content-Type: application/json
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "attributes": [
                {
                    "metadatas": [
                        {
                            "name": "ID",
                            "type": "string",
                            "value": "ground"
                        }
                    ],
                    "name": "temperature",
                    "type": "centigrade",
                    "value": ""
                },
                {
                    "metadatas": [
                        {
                            "name": "ID",
                            "type": "string",
                            "value": "wall"
                        }
                    ],
                    "name": "temperature",
                    "type": "centigrade",
                    "value": ""
                }
            ],
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ],
    "id": "Room1", 
    "isPattern": "false", 
    "type": ""
}
+++++ 2. lookup the entity +++++
HTTP/1.1 200 OK
Content-Length: 693
Content-Type: application/json
Date: REGEX(.*)

{
    "contextElement": {
        "attributes": [
            {
                "metadatas": [
                    {
                        "name": "ID",
                        "type": "string",
                        "value": "ground"
                    }
                ],
                "name": "temperature",
                "type": "centigrade",
                "value": "23"
            },
            {
                "metadatas": [
                    {
                        "name": "ID",
                        "type": "string",
                        "value": "wall"
                    }
                ],
                "name": "temperature",
                "type": "centigrade",
                "value": "23.5"
            }
        ],
        "id": "Room1",
        "isPattern": "false",
        "type": ""
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}
+++++ 3. lookup an attribute by valueID in JSON +++++
HTTP/1.1 200 OK
Content-Length: 323
Content-Type: application/json
Date: REGEX(.*)

{
    "attributes": [
        {
            "metadatas": [
                {
                    "name": "ID",
                    "type": "string",
                    "value": "ground"
                }
            ],
            "name": "temperature",
            "type": "centigrade",
            "value": "23"
        }
    ],
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}
+++++ 4. lookup an attribute by the other valueID in XML +++++
HTTP/1.1 200 OK
Content-Length: 516
Content-Type: application/json
Date: REGEX(.*)

<?xml version="1.0"?>
<contextAttributeResponse>
  <contextAttributeList>
    <contextAttribute>
      <name>temperature</name>
      <type>centigrade</type>
      <contextValue>23.5</contextValue>
      <metadata>
        <contextMetadata>
          <name>ID</name>
          <type>string</type>
          <value>wall</value>
        </contextMetadata>
      </metadata>
    </contextAttribute>
  </contextAttributeList>
  <statusCode>
    <code>200</code>
    <reasonPhrase>OK</reasonPhrase>
  </statusCode>
</contextAttributeResponse>
--TEARDOWN--
brokerStop CB
dbDrop CB
