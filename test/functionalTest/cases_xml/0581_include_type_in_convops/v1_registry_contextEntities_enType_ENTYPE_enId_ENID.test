# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Context Entities By EntityId And EntityType

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. GET /v1/registry/contextEntities/type/ET1/id/entity01 and see it fail
# 02. POST /v1/registry/contextEntities/type/ET1/id/entity01 OK
# 03. GET /v1/registry/contextEntities/type/ET1/id/entity01 OK
# 04. POST /v1/registry/contextEntities/type/ET1/id/entity02 with XML
# 05. GET /v1/registry/contextEntities/type/ET1/id/entity02 OK
#


echo "01. GET /v1/registry/contextEntities/type/ET1/id/entity01 and see it fail"
echo "========================================================================="
orionCurl --url /v1/registry/contextEntities/type/ET1/id/entity01 --json
echo
echo

echo "02. POST /v1/registry/contextEntities/type/ET1/id/entity01 OK"
echo "============================================================="
payload='{
  "metadatas": [
    {
      "name": "ID",
      "type": "string",
      "value": "1110"
    },
    {
      "name": "cm2",
      "type": "string",
      "value": "XXX"
    }
  ],
  "duration": "PT1H",
  "providingApplication": "http://kz.tid.es/abc"
}'
orionCurl --url /v1/registry/contextEntities/type/ET1/id/entity01 --payload "$payload" --json
echo
echo

echo "03. GET /v1/registry/contextEntities/type/ET1/id/entity01 OK"
echo "============================================================"
orionCurl --url /v1/registry/contextEntities/type/ET1/id/entity01 --json
echo
echo


echo "04. POST /v1/registry/contextEntities/type/ET1/id/entity02 with XML"
echo "==================================================================="
payload='<?xml version="1.0"?>
<registerProviderRequest>
  <metadata>
    <contextMetadata>
      <name>cm2</name>
      <type>string</type>
      <value>XXX</value>
    </contextMetadata>
  </metadata>
  <duration>PT1H</duration>
  <providingApplication>http://kz.tid.es/abc</providingApplication>
</registerProviderRequest>'
orionCurl --url /v1/registry/contextEntities/type/ET1/id/entity02 --payload "$payload"
echo
echo


echo "05. GET /v1/registry/contextEntities/type/ET1/id/entity02 OK"
echo "============================================================"
orionCurl --url /v1/registry/contextEntities/type/ET1/id/entity02
echo
echo


--REGEXPECT--
01. GET /v1/registry/contextEntities/type/ET1/id/entity01 and see it fail
=========================================================================
HTTP/1.1 200 OK
Content-Length: 94
Content-Type: application/json
Date: REGEX(.*)

{
    "errorCode": {
        "code": "404", 
        "reasonPhrase": "No context element found"
    }
}


02. POST /v1/registry/contextEntities/type/ET1/id/entity01 OK
=============================================================
HTTP/1.1 200 OK
Content-Length: 75
Content-Type: application/json
Date: REGEX(.*)

{
    "duration": "PT1H", 
    "registrationId": "REGEX([0-9a-f]{24})"
}


03. GET /v1/registry/contextEntities/type/ET1/id/entity01 OK
============================================================
HTTP/1.1 200 OK
Content-Length: 304
Content-Type: application/json
Date: REGEX(.*)

{
    "contextRegistrationResponses": [
        {
            "contextRegistration": {
                "entities": [
                    {
                        "id": "entity01", 
                        "isPattern": "false", 
                        "type": "ET1"
                    }
                ], 
                "providingApplication": "http://kz.tid.es/abc"
            }
        }
    ]
}


04. POST /v1/registry/contextEntities/type/ET1/id/entity02 with XML
===================================================================
HTTP/1.1 200 OK
Content-Length: 141
Content-Type: application/json
Date: REGEX(.*)

<?xml version="1.0"?>
<registerContextResponse>
  <duration>PT1H</duration>
  <registrationId>REGEX([0-9a-f]{24})</registrationId>
</registerContextResponse>


05. GET /v1/registry/contextEntities/type/ET1/id/entity02 OK
============================================================
HTTP/1.1 200 OK
Content-Length: 499
Content-Type: application/json
Date: REGEX(.*)

<?xml version="1.0"?>
<discoverContextAvailabilityResponse>
  <contextRegistrationResponseList>
    <contextRegistrationResponse>
      <contextRegistration>
        <entityIdList>
          <entityId type="ET1" isPattern="false">
            <id>entity02</id>
          </entityId>
        </entityIdList>
        <providingApplication>http://kz.tid.es/abc</providingApplication>
      </contextRegistration>
    </contextRegistrationResponse>
  </contextRegistrationResponseList>
</discoverContextAvailabilityResponse>


--TEARDOWN--
brokerStop CB
dbDrop CB
