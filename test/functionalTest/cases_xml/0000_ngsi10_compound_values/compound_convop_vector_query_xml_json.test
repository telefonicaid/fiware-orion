# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Create and query compound vector XML-JSON

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "1: +++++++++ create vector compound +++++++++++"
url="/v1/contextEntities/EVector"
payload='<?xml version="1.0" encoding="UTF-8"?>
<appendContextElementRequest>
  <contextAttributeList>
    <contextAttribute>
      <name>att</name>
      <type>compound</type>
      <contextValue type="vector">
         <item>22</item>
         <item>
           <x type="vector">
             <item>x1</item>
             <item>x2</item>
           </x>
           <y>3</y>
         </item>
         <item type="vector">
           <item>z1</item>
           <item>z2</item>
         </item>
      </contextValue>
    </contextAttribute>
  </contextAttributeList>
</appendContextElementRequest>'
orionCurl --url "$url" --payload "$payload"

echo "2: ++++++++++ query for vector compound in JSON ++++++++++"
url="/v1/queryContext"
payload='{
    "entities": [
        {
            "type": "",
            "isPattern": "false",
            "id": "EVector"
        }
    ]
}'
orionCurl --url "$url" --payload "$payload" --json

--REGEXPECT--
1: +++++++++ create vector compound +++++++++++
HTTP/1.1 200 OK
Content-Length: 566
Content-Type: application/json
Date: REGEX(.*)

<?xml version="1.0"?>
<appendContextElementResponse>
  <entityId type="" isPattern="false">
    <id>EVector</id>
  </entityId>
  <contextResponseList>
    <contextAttributeResponse>
      <contextAttributeList>
        <contextAttribute>
          <name>att</name>
          <type>compound</type>
          <contextValue/>
        </contextAttribute>
      </contextAttributeList>
      <statusCode>
        <code>200</code>
        <reasonPhrase>OK</reasonPhrase>
      </statusCode>
    </contextAttributeResponse>
  </contextResponseList>
</appendContextElementResponse>
2: ++++++++++ query for vector compound in JSON ++++++++++
HTTP/1.1 200 OK
Content-Length: 646
Content-Type: application/json
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "att", 
                        "type": "compound", 
                        "value": [
                            "22", 
                            {
                                "x": [
                                    "x1", 
                                    "x2"
                                ], 
                                "y": "3"
                            }, 
                            [
                                "z1", 
                                "z2"
                            ]
                        ]
                    }
                ], 
                "id": "EVector", 
                "isPattern": "false", 
                "type": ""
            }, 
            "statusCode": {
                "code": "200", 
                "reasonPhrase": "OK"
            }
        }
    ]
}
--TEARDOWN--
brokerStop CB
dbDrop CB
