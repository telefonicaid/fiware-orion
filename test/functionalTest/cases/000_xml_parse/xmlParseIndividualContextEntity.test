    <contextAttribute>
      <name>pressure</name>
      <type>clima</type>
      <contextValue>p50</contextValue>
    </contextAttribute>
  </contextAttributeList>
</updateContextElementRequest>'
orionCurl --url "$url" --payload "${payload}" "-X PUT"

echo "8: +++++++++++++ DELETE that is OK ++++++++++++++++"
