# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Custom notification HTTP with NGSI payload mapping attribute with filtering

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create custom sub1 with ngsi attributes covering all JSON types with filtering
# 02. Create entity E1
# 03. Update entity E1
# 04. Dump accumulator and see two notifications with replaced values
#


echo "01. Create custom sub1 with ngsi attributes covering all JSON types with filtering"
echo "=================================================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1",
        "type": "T"
      }
    ]
  },
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "ngsi": {
        "A1": {
          "value": "${A6}",
          "type": "None"
        },
        "A2": {
          "value": "${A5}",
          "type": "Array"
        },
        "A3": {
          "value": "${A4}",
          "type": "Object"
        },
        "A4": {
          "value": "${A3}",
          "type": "Boolean"
        },
        "A5": {
          "value": "${A2}",
          "type": "Number"
        },
        "A6": {
          "value": "${A1}",
          "type": "Text"
        }
      }
    },
    "attrs": [ "A3", "A4", "A5" ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create entity E1"
echo "===================="
payload='{
  "id": "E1",
  "type": "T",
  "A1": {
    "value": "foo",
    "type": "irrelevant"
  },
  "A2": {
    "value": 1,
    "type": "irrelevant"
  },
  "A3": {
    "value": true,
    "type": "irrelevant"
  },
  "A4": {
    "value": { "x": 1, "y": 2},
    "type": "irrelevant"
  },
  "A5": {
    "value": [ 1, true, "zzz" ],
    "type": "irrelevant"
  },
  "A6": {
    "value": null,
    "type": "irrelevant"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Update entity E1"
echo "===================="
payload='{
  "A1": {
    "value": "bar",
    "type": "irrelevant"
  },
  "A2": {
    "value": 10,
    "type": "irrelevant"
  },
  "A3": {
    "value": false,
    "type": "irrelevant"
  },
  "A4": {
    "value": { "z": 10, "w": "ttt"},
    "type": "irrelevant"
  },
  "A5": {
    "value": [ 4, null, {"r": 2} ],
    "type": "irrelevant"
  },
  "A6": {
    "value": null,
    "type": "irrelevant"
  }
}'
orionCurl --url /v2/entities/E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "04. Dump accumulator and see two notifications with replaced values"
echo "==================================================================="
accumulatorDump
echo
echo


