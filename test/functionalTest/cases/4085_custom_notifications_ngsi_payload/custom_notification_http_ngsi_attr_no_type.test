# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Custom notification HTTP with NGSI payload basic CRUD with attributes without type

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create custom sub1 with ngsi field with attributes without type
# 02. Get sub1 to see how attributes are set using defaults
#


echo "01. Create custom sub1 with ngsi field with attributes without type"
echo "==================================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1",
        "type": "T"
      }
    ]
  },
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "ngsi": {
        "id": "E1",
        "type": "T1",
        "A": {
          "value": 1,
          "type": "SomeType"
        },
        "B": {
          "value": 1
        },
        "C": {
          "value": "foo"
        },
        "D": {
          "value": true
        },
        "E": {
          "value": [1, 2]
        },
        "F": {
          "value": {
            "x": 3,
            "y": 4
          }
        }
      }
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


SUB_ID=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")


echo "02. Get sub1 to see how attributes are set using defaults"
echo "========================================================="
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


--REGEXPECT--
01. Create custom sub1 with ngsi field with attributes without type
===================================================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/subscriptions/REGEX([0-9a-f]{24})
Content-Length: 0



02. Get sub1 to see how attributes are set using defaults
=========================================================
HTTP/1.1 200 OK
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Content-Type: application/json
Content-Length: 567

{
    "id": "REGEX([0-9a-f]{24})",
    "notification": {
        "attrs": [],
        "attrsFormat": "normalized",
        "covered": false,
        "httpCustom": {
            "ngsi": {
                "A": {
                    "type": "SomeType",
                    "value": 1
                },
                "B": {
                    "type": "Number",
                    "value": 1
                },
                "C": {
                    "type": "Text",
                    "value": "foo"
                },
                "D": {
                    "type": "Boolean",
                    "value": true
                },
                "E": {
                    "type": "StructuredValue",
                    "value": [
                        1,
                        2
                    ]
                },
                "F": {
                    "type": "StructuredValue",
                    "value": {
                        "x": 3,
                        "y": 4
                    }
                },
                "id": "E1",
                "type": "T1"
            },
            "url": "http://127.0.0.1:9997/notify"
        },
        "onlyChangedAttrs": false
    },
    "status": "active",
    "subject": {
        "condition": {
            "attrs": [],
            "notifyOnMetadataChange": true
        },
        "entities": [
            {
                "id": "E1",
                "type": "T"
            }
        ]
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
