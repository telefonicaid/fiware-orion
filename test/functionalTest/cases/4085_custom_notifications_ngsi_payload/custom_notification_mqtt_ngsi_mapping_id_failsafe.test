# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Custom notification MQTT with NGSI payload mapping id failsafe

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print --mqttHost ${MQTT_HOST} --mqttPort ${MQTT_PORT} --mqttTopic "#"

--SHELL--

#
# 01. Create custom sub1 with ngsi id mapped from A attribute
# 02. Create entity E1 without A attribute
# 03. Dump accumulator and see notification with id E1
#


echo "01. Create custom sub1 with ngsi id mapped from A attribute"
echo "==========================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1",
        "type": "T"
      }
    ]
  },
  "notification": {
    "mqttCustom": {
      "topic": "topic1",
      "url": "mqtt://localhost:1883",
      "ngsi": {
        "id": "${A}"
      }
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create entity E1 without A attribute"
echo "========================================"
payload='{
  "id": "E1",
  "type": "T",
  "B": {
    "value": 1,
    "type": "Number"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Dump accumulator and see notification with id E1"
echo "===================================================="
accumulatorDump
echo
echo


--REGEXPECT--
01. Create custom sub1 with ngsi id mapped from A attribute
===========================================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/subscriptions/REGEX([0-9a-f]{24})
Content-Length: 0



02. Create entity E1 without A attribute
========================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/E1?type=T
Content-Length: 0



03. Dump accumulator and see notification with id E1
====================================================
MQTT message at topic topic1:
{
    "data": [
        {
            "B": {
                "metadata": {},
                "type": "Number",
                "value": 1
            },
            "id": "E1",
            "type": "T"
        }
    ],
    "subscriptionId": "REGEX([0-9a-f]{24})"
}
=======================================


--TEARDOWN--
brokerStop CB
dbDrop CB
accumulatorStop
