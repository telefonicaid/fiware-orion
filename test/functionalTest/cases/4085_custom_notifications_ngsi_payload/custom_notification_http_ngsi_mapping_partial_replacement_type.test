# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Custom notification HTTP with NGSI payload mapping type macro partial replacement

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create custom sub1 with ngsi type with the value of A and B attributes combined
# 02. Create entity E1
# 03. Update entity E1
# 04. Dump accumulator and see two notifications with type set to A and B attributes combined
#


echo "01. Create custom sub1 with ngsi type with the value of A and B attributes combined"
echo "==================================================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1",
        "type": "T"
      }
    ]
  },
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "ngsi": {
        "type": "${A}:${B}"
      }
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create entity E1"
echo "===================="
payload='{
  "id": "E1",
  "type": "T",
  "A": {
    "value": "A1",
    "type": "Text"
  },
  "B": {
    "value": "B1",
    "type": "Text"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Update entity E1"
echo "===================="
payload='{
  "A": {
    "value": "A2",
    "type": "Text"
  },
  "B": {
    "value": "B2",
    "type": "Text"
  }
}'
orionCurl --url /v2/entities/E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "04. Dump accumulator and see two notifications with type set to A and B attributes combined"
echo "==========================================================================================="
accumulatorDump
echo
echo


--REGEXPECT--
