--NAME--
Custom notification HTTP with NGSI payload basic CRUD with compounds

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create custom sub1 with ngsi field with attribute using JSON object
# 02. Get sub1 to see it
# 03. Update sub1 to remove ngsi field
# 04. Get sub1 to see changes
# 05. Update sub1 to add ngsi field with attribute using JSON array
# 06. Get sub1 to see changes
# 07. Update sub1 to modify ngsi field with attribute using JSON object
# 08. Get sub1 to see changes
# 09. Update sub1 to remove ngsi field
# 10. Get sub1 to see changes
# 11. Create custom sub2 without ngsi field
# 12. Get sub2 to see it
# 13. Update custom sub2 to add ngsi field with attribute using JSON array
# 14. Get sub2 to see changes
#


echo "01. Create custom sub1 with ngsi field with attribute using JSON object"
echo "======================================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1",
        "type": "T"
      }
    ]
  },
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "ngsi": {
        "id": "E1",
        "type": "T1",
        "A": {
          "value": {
            "x": {
              "x1": "a",
              "x2": "b"
            },
            "y": [ "y1", "y2" ]
          },
          "type": "StructuredValue"
        }
      }
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


SUB_ID=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")


echo "02. Get sub1 to see it"
echo "======================"
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


echo "03. Update sub1 to remove ngsi field"
echo "===================================="
payload='{
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "payload": "foo"
    }
  }
}'
orionCurl --url /v2/subscriptions/$SUB_ID -X PATCH --payload "$payload"
echo
echo


echo "04. Get sub1 to see changes"
echo "==========================="
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


echo "05. Update sub1 to add ngsi field with attribute using JSON array"
echo "================================================================="
payload='{
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "ngsi": {
        "id": "E2",
        "type": "T2",
        "B": {
          "value": [
            "22",
            {
              "x" : [ "x1", "x2" ],
              "y" : 3
            },
            [ "z1", "z2" ]
          ],
          "type": "StructuredValue"
        }
      }
    }
  }
}'
orionCurl --url /v2/subscriptions/$SUB_ID -X PATCH --payload "$payload"
echo
echo


echo "06. Get sub1 to see changes"
echo "==========================="
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


echo "07. Update sub1 to modify ngsi field with attribute using JSON object"
echo "====================================================================="
payload='{
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "ngsi": {
        "id": "E3",
        "type": "T3",
        "C": {
          "value": {
            "x": {
              "x1": 1,
              "x2": 2
            },
            "y": [ true, "zzz" ]
          },
          "type": "StructuredValue"
        }
      }
    }
  }
}'
orionCurl --url /v2/subscriptions/$SUB_ID -X PATCH --payload "$payload"
echo
echo


echo "08. Get sub1 to see changes"
echo "==========================="
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


echo "09. Update sub1 to remove ngsi field"
echo "===================================="
payload='{
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "payload": "bar"
    }
  }
}'
orionCurl --url /v2/subscriptions/$SUB_ID -X PATCH --payload "$payload"
echo
echo


echo "10. Get sub1 to see changes"
echo "==========================="
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


echo "11. Create custom sub2 without ngsi field"
echo "========================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E2",
        "type": "T"
      }
    ]
  },
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "payload": "zzz"
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


SUB_ID=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")


echo "12. Get sub2 to see it"
echo "======================"
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


echo "13. Update custom sub2 to add ngsi field with attribute using JSON array"
echo "========================================================================"
payload='{
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "ngsi": {
        "id": "E4",
        "type": "T4",
        "D": {
          "value": [
            "42",
            {
              "a" : [ 4, null ],
              "b" : false
            },
            [ true, "foo" ]
          ],
          "type": "StructuredValue"
        }
      }
    }
  }
}'
orionCurl --url /v2/subscriptions/$SUB_ID -X PATCH --payload "$payload"
echo
echo

echo "14. Get sub1 to see changes"
echo "==========================="
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


