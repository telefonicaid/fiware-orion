# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
String filters for compound values of metadata: more than one filter in 'mq'

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create E1 with A1 having a metadata M1 compound value, including i==10 and s='test_string'
# 02. GET /v2/entities?mq=A1.M1.i:10, see E1
# 03. GET /v2/entities?mq=A1.M1.i:10;A1.M1.s:test_string, see E1
# 04. GET /v2/entities?mq=A1.M1.i:10;A1.M1.s:teststring, see nothing
#

echo "01. Create E1 with A1 having a metadata M1 compound value, including i==10 and s='test_string'"
echo "=============================================================================================="
payload='{
  "id": "E1",
  "A1": {
    "value": "not important",
    "metadata": {
      "M1": {
        "value": {
          "i": 10,
          "s": "test_string"
        }
      }
    }
  }
}'
orionCurl --url /v2/entities --payload "${payload}"
echo
echo


echo "02. GET /v2/entities?mq=A1.M1.i:10, see E1"
echo "=========================================="
orionCurl --url '/v2/entities?mq=A1.M1.i:10'
echo
echo


echo "03. GET /v2/entities?mq=A1.M1.i:10;A1.M1.s:test_string, see E1"
echo "=============================================================="
orionCurl --url '/v2/entities?mq=A1.M1.i:10;A1.M1.s:test_string'
echo
echo


echo "04. GET /v2/entities?mq=A1.M1.i:10;A1.M1.s:teststring, see nothing"
echo "=================================================================="
orionCurl --url '/v2/entities?mq=A1.M1.i:10;A1.M1.s:teststring'
echo
echo


--REGEXPECT--
01. Create E1 with A1 having a metadata M1 compound value, including i==10 and s='test_string'
==============================================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=none
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET /v2/entities?mq=A1.M1.i:10, see E1
==========================================
HTTP/1.1 200 OK
Content-Length: 141
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "A1": {
            "metadata": {
                "M1": {
                    "type": "none",
                    "value": {
                        "i": 10,
                        "s": "test_string"
                    }
                }
            },
            "type": "none",
            "value": "not important"
        },
        "id": "E1",
        "type": "none"
    }
]


03. GET /v2/entities?mq=A1.M1.i:10;A1.M1.s:test_string, see E1
==============================================================
HTTP/1.1 200 OK
Content-Length: 141
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "A1": {
            "metadata": {
                "M1": {
                    "type": "none",
                    "value": {
                        "i": 10,
                        "s": "test_string"
                    }
                }
            },
            "type": "none",
            "value": "not important"
        },
        "id": "E1",
        "type": "none"
    }
]


04. GET /v2/entities?mq=A1.M1.i:10;A1.M1.s:teststring, see nothing
==================================================================
HTTP/1.1 200 OK
Content-Length: 2
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[]


--TEARDOWN--
brokerStop CB
dbDrop CB
