# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
statistics

--SHELL-INIT--
dbInit CB
brokerStart CB 0 IPv4 -statSemWait -statTiming

--SHELL--

echo "+++++ 1. statistics in JSON"
orionCurl --url /statistics
echo
echo

echo "+++++ 2. statistics in JSON (a second time, to see more things)"
orionCurl --url /statistics
echo
echo

--REGEXPECT--
+++++ 1. statistics in JSON
HTTP/1.1 200 OK
Content-Length: REGEX(\d+)
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "measuring_interval_in_secs": REGEX(1?\d),
    "semWait": {
        "connectionContext": REGEX(.*.A*),
        "dbConnectionPool": REGEX(.*.A*),
        "metrics": REGEX(.*),
        "request": REGEX(.*.A*),
        "subCache": REGEX(.*.A*),
        "timeStat": REGEX(.*.A*),
        "transaction": REGEX(.*.A*)
    },
    "timing": {},
    "uptime_in_secs": REGEX(1?\d)
}


+++++ 2. statistics in JSON (a second time, to see more things)
HTTP/1.1 200 OK
Content-Length: REGEX(\d+)
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "measuring_interval_in_secs": REGEX(1?\d),
    "semWait": {
        "connectionContext": REGEX(.*.A*),
        "dbConnectionPool": REGEX(.*.A*),
        "metrics": REGEX(.*),
        "request": REGEX(.*.A*),
        "subCache": REGEX(.*.A*),
        "timeStat": REGEX(.*.A*),
        "transaction": REGEX(.*.A*)
    },
    "timing": {
        "accumulated": {
            "total": REGEX(.*.A*)
        },
        "last": {
            "total": REGEX(.*.A*)
        }
    },
    "uptime_in_secs": REGEX(1?\d)
}


--TEARDOWN--
brokerStop CB
dbDrop CB
