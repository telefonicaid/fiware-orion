# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
MQTT Subcription basic crud errors

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create mqtt sub with default qos
# 02. Create mqtt sub with explicit qos
# 03. Get subs
#
# FIXME PR: same tests for mqttCustom (maybe in separate file, for simplicity)
#

echo "01. Create mqtt sub with default qos"
echo "===================================="
payload='{
  "description": "MQTT sub default QoS",
  "subject": {
    "entities": [
      {
        "id": "E1",
        "type": "T1"
      }
    ]
  },
  "notification": {
    "mqtt": {
      "url": "mqtt://localhost:1883",
      "topic": "/orion/notif"
    },
    "attrs": [
      "A1"
    ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create mqtt sub with explicit qos"
echo "====================================="
payload='{
  "description": "MQTT sub explicit QoS",
  "subject": {
    "entities": [
      {
        "id": "E1",
        "type": "T1"
      }
    ]
  },
  "notification": {
    "mqtt": {
      "url": "mqtt://localhost:1883",
      "topic": "/orion/notif",
      "qos": 2
    },
    "attrs": [
      "A1"
    ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "03. Get subs"
echo "============"
orionCurl --url /v2/subscriptions
echo
echo


--REGEXPECT--
01. Create mqtt sub with default qos
====================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/subscriptions/REGEX([0-9a-f]*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Create mqtt sub with explicit qos
=====================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/subscriptions/REGEX([0-9a-f]*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Get subs
============
HTTP/1.1 200 OK
Content-Length: 636
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "description": "MQTT sub default QoS",
        "id": "REGEX([0-9a-f]*)",
        "notification": {
            "attrs": [
                "A1"
            ],
            "attrsFormat": "normalized",
            "mqtt": {
                "qos": 0,
                "topic": "/orion/notif",
                "url": "mqtt://localhost:1883"
            },
            "onlyChangedAttrs": false
        },
        "status": "active",
        "subject": {
            "condition": {
                "attrs": []
            },
            "entities": [
                {
                    "id": "E1",
                    "type": "T1"
                }
            ]
        }
    },
    {
        "description": "MQTT sub explicit QoS",
        "id": "REGEX([0-9a-f]*)",
        "notification": {
            "attrs": [
                "A1"
            ],
            "attrsFormat": "normalized",
            "mqtt": {
                "qos": 2,
                "topic": "/orion/notif",
                "url": "mqtt://localhost:1883"
            },
            "onlyChangedAttrs": false
        },
        "status": "active",
        "subject": {
            "condition": {
                "attrs": []
            },
            "entities": [
                {
                    "id": "E1",
                    "type": "T1"
                }
            ]
        }
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB
