echo "01. Create mqtt sub with default qos, with payload"
echo "=================================================="
payload='{
  "description": "MQTT sub default QoS",
  "subject": {
    "entities": [
      {
        "id": "E1",
        "type": "T1"
      }
    ]
  },
  "notification": {
    "mqttCustom": {
      "url": "mqtt://localhost:1883",
      "topic": "/orion/${dest}",
      "payload": "temperature:${temperature}"
    },
    "attrs": [
      "A1"
    ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


