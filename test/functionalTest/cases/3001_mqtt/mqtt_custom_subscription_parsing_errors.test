echo "01. Create subs with missing notification type, see error"
echo "========================================================="
payload='{
  "description": "Test subscription",
  "subject": {
    "entities": [
      {
        "id": "E1",
        "type": "T1"
      }
    ]
  },
  "notification": {
    "attrs": [
      "A1"
    ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


