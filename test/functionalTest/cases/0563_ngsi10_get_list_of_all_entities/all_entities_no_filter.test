--NAME--
/v1/ ALL Entities without filter

--SHELL-INIT--
dbInit CB
brokerStart CB 0 -statCounters

--SHELL--

echo "0. Query all entities using convop /v1/contextEntities"
echo "======================================================"
orionCurl --url /v1/contextEntities
echo
echo


echo "1. APPEND entity E1, type T1 with attribute A1"
echo "=============================================="
payload='<?xml version="1.0"?>
<updateContextRequest>
  <contextElementList>
    <contextElement>
      <entityId type="T1" isPattern="false">
        <id>E1</id>
      </entityId>
      <contextAttributeList>
        <contextAttribute>
          <name>A1</name>
          <type>A1T</type>
          <contextValue>a1</contextValue>
        </contextAttribute>
      </contextAttributeList>
    </contextElement>
  </contextElementList>
  <updateAction>APPEND</updateAction>
</updateContextRequest>'
orionCurl --url /v1/updateContext --payload "${payload}"
echo
echo


echo "2. APPEND entity E2, WITHOUT TYPE and with attribute A2"
echo "======================================================="
payload='<?xml version="1.0"?>
<updateContextRequest>
  <contextElementList>
    <contextElement>
      <entityId type="" isPattern="false">
        <id>E2</id>
      </entityId>
      <contextAttributeList>
        <contextAttribute>
          <name>A2</name>
          <type>A2T</type>
          <contextValue>a1</contextValue>
        </contextAttribute>
      </contextAttributeList>
    </contextElement>
  </contextElementList>
  <updateAction>APPEND</updateAction>
</updateContextRequest>'
orionCurl --url /v1/updateContext --payload "${payload}"
echo
echo


echo "3. APPEND entity E3, type T3 with attribute A3"
echo "=============================================="
payload='<?xml version="1.0"?>
<updateContextRequest>
  <contextElementList>
    <contextElement>
      <entityId type="T3" isPattern="false">
        <id>E3</id>
      </entityId>
      <contextAttributeList>
        <contextAttribute>
          <name>A3</name>
          <type>A3T</type>
          <contextValue>a1</contextValue>
        </contextAttribute>
      </contextAttributeList>
    </contextElement>
  </contextElementList>
  <updateAction>APPEND</updateAction>
</updateContextRequest>'
orionCurl --url /v1/updateContext --payload "${payload}"
echo
echo


echo "4. Query all entities using convop /v1/contextEntities"
echo "======================================================"
orionCurl --url /v1/contextEntities
echo
echo


echo "5. Statistics"
echo "============="
orionCurl --url /v1/admin/statistics --json
echo
echo


