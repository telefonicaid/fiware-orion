# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
/v1/ ALL Entities without filter

--SHELL-INIT--
dbInit CB
brokerStart CB 0 -statCounters

--SHELL--

echo "0. Query all entities using convop /v1/contextEntities"
echo "======================================================"
orionCurl --url /v1/contextEntities
echo
echo


echo "1. APPEND entity E1, type T1 with attribute A1"
echo "=============================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "isPattern": "false",
      "id": "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "AT1",
          "value": "a1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "${payload}"
echo
echo


echo "2. APPEND entity E2, WITHOUT TYPE and with attribute A2"
echo "======================================================="
payload='{
  "contextElements": [
    {
      "type": "",
      "isPattern": "false",
      "id": "E2",
      "attributes": [
        {
          "name": "A2",
          "type": "AT2",
          "value": "a1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "${payload}"
echo
echo


echo "3. APPEND entity E3, type T3 with attribute A3"
echo "=============================================="
payload='{
  "contextElements": [
    {
      "type": "T3",
      "isPattern": "false",
      "id": "E3",
      "attributes": [
        {
          "name": "A3",
          "type": "AT3",
          "value": "a1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "${payload}"
echo
echo


echo "4. Query all entities using convop /v1/contextEntities"
echo "======================================================"
orionCurl --url /v1/contextEntities
echo
echo


echo "5. Statistics"
echo "============="
orionCurl --url /v1/admin/statistics
echo
echo


