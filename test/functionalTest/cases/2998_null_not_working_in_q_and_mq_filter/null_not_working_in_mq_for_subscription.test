# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
MQ filter in subscription with null value of attribute

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create subscription for entity E*, attribute 't' with a filter mq=t.m==null
# 02. Create entity E1 with attr 't' having a metadata 'm' == null
# 03. Make sure ONE notification has been sent
# 04. Modify E1::t.m to 4
# 05. Make sure no notification has been sent
# 06. Modify E1::t.m to null
# 07. Make sure ONE notification has been sent
# 08. Modify E1::t.m to the string 'null'
# 09. Make sure no notification has been sent
#

echo "01. Create subscription for entity E*, attribute 't' with a filter mq=t.m==null"
echo "==============================================================================="
payload='{
  "subject": {
    "entities": [
      {
        "idPattern": "E.*"
      }
    ],
    "condition": {
      "attrs": [ "t" ],
      "expression": { "mq": "t.m==null" }
    }
  },
  "notification": {
    "http": {
      "url": "http://localhost:'$LISTENER_PORT'/notify"
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create entity E1 with attr 't' having a metadata 'm' == null"
echo "================================================================"
payload='{
  "id": "E1",
  "t": {
    "value": "02",
    "metadata": {
      "m": {
        "value": null
      }
    }
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Make sure ONE notification has been sent"
echo "============================================"
accumulatorDump
accumulatorReset
echo
echo


echo "04. Modify E1::t.m to 4"
echo "======================="
payload='{
  "t": {
    "value": "04",
    "metadata": {
      "m": {
        "value": 4
      }
    }
  }
}'
orionCurl --url /v2/entities/E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "05. Make sure no notification has been sent"
echo "==========================================="
accumulatorDump
accumulatorReset
echo
echo


echo "06. Modify E1::t.m to null"
echo "=========================="
payload='{
  "t": {
    "value": "06",
    "metadata": {
      "m": {
        "value": null
      }
    }
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload"
echo
echo


echo "07. Make sure ONE notification has been sent"
echo "============================================"
accumulatorDump
accumulatorReset
echo
echo


echo "08. Modify E1::t.m to the string 'null'"
echo "======================================="
payload='{
  "t": {
    "value": "08",
    "metadata": {
      "m": {
        "value": "null"
      }
    }
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload"
echo
echo


echo "09. Make sure no notification has been sent"
echo "==========================================="
accumulatorDump
accumulatorReset
echo
echo


