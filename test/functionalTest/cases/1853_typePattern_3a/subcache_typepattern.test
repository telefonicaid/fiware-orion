# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Cache sub behaviour for type pattern susbcriptions

--SHELL-INIT--
dbInit CB
brokerStart CB 0 IPv4 -subCacheIval 1
accumulatorStart --pretty-print

--SHELL--

#
# Note we use sleep in some point to let time the DB to sync with regards to
# cache timeSent value (WAIT_TIME = 1.5 * subCacheIval)
# [ Under VALGRIND we need to sleep a little more ]
#
WAIT_TIME=1.5s
#
# 01. Create subscription
# 02. Create entity (triggers notification)
# 03. Check subscription timesSent value (1)
# 04. Subcription update not involving actual update
# 05. Update entity (triggers notification)
# 10. Accumulator dump


echo "01. Create subscription"
echo "======================="
payload='
{
    "subject": {
        "entities": [
            {
                "idPattern": ".*",
                "typePattern": "T.*"
            }
        ],
        "condition": {
            "attrs": [ "A" ]
         }
    },
    "notification": {
        "http": {"url": "http://localhost:'${LISTENER_PORT}'/notify"},
        "attrs": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z",
    "status": "active"
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo
id1=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")

valgrindSleep 1

echo '02. Create entity (triggers notification)'
echo "========================================="
payload='
{
  "id": "E",
  "type": "T",
  "A": {
    "value": "foo"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


sleep $WAIT_TIME


echo '03. Check subscription timesSent value (1)'
echo "=========================================="
orionCurl --url /v2/subscriptions/$id1
echo
echo


echo '04. Subcription update not involving actual update'
echo "=================================================="
payload='
{
    "expires": "2050-04-05T14:00:00.00Z"
}'
orionCurl --url /v2/subscriptions/$id1 -X PATCH --payload "$payload"
echo
echo


echo '05. Update entity (triggers notification)'
echo "========================================="
payload='
{
  "A": {
    "value": "bar"
  }
}'
orionCurl --url /v2/entities/E/attrs -X PATCH --payload "$payload"
echo
echo


sleep $WAIT_TIME
valgrindSleep 2


echo "09. Accumulator dump"
echo "===================="
accumulatorDump
echo
echo


