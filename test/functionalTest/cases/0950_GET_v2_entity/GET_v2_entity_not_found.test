# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entity V2 Not found

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. GET /v2/entities/E1 (error)
# 02. POST /v2/entities to create E1
# 03. GET /v2/entities/E1 (ok)
#

echo "01. GET /v2/entities/E1 (error)"
echo "==============================="
orionCurl --url /v2/entities/E1 --json
echo
echo


echo "02. POST /v2/entities to create E1"
echo "======================================="
payload='{
  "id":   "E1",
  "type": "T1",
  "A0" : {
    "type": "number",
    "value" : "255"
  },
  "A1" : {
    "value" : "E1/T1/A1"
  },
  "A2" :{
    "value": "E1/T1/A2",
    "type": "AT2" 
  },
  "A3" :{
    "type": "a",
    "value": "E1/T1/A3/M1",
    "metadata": {
      "m1": {
        "value": "M1"
      }
    }
  },
  "A4" : {
    "type": "a4",
    "value": "E1/T1/A4/M1-3",
    "metadata": {
      "m1": {
        "value": "M1"
      },
      "m2": {
        "type": "tm2",
        "value": "M2"
      },
      "m3": {
        "type": "number",
        "value": "3"
      }
    }
  }
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "03. GET /v2/entities/E1 (ok)"
echo "============================"
orionCurl --url /v2/entities/E1 --json
echo
echo


--REGEXPECT--
01. GET /v2/entities/E1 (error)
===============================
HTTP/1.1 404 Not Found
Content-Length: 95
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "The requested entity has not been found. Check type and id", 
    "error": "NotFound"
}


02. POST /v2/entities to create E1
=======================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. GET /v2/entities/E1 (ok)
============================
HTTP/1.1 200 OK
Content-Length: 426
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A0": {
        "metadata": {},
        "type": "number",
        "value": "255"
    },
    "A1": {
        "metadata": {},
        "type": "none",
        "value": "E1/T1/A1"
    },
    "A2": {
        "metadata": {},
        "type": "AT2",
        "value": "E1/T1/A2"
    },
    "A3": {
        "metadata": {
            "m1": {
                "type": "none",
                "value": "M1"
            }
        },
        "type": "a",
        "value": "E1/T1/A3/M1"
    },
    "A4": {
        "metadata": {
            "m1": {
                "type": "none",
                "value": "M1"
            },
            "m2": {
                "type": "tm2",
                "value": "M2"
            },
            "m3": {
                "type": "number",
                "value": "3"
            }
        },
        "type": "a4",
        "value": "E1/T1/A4/M1-3"
    },
    "id": "E1",
    "type": "T1"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

