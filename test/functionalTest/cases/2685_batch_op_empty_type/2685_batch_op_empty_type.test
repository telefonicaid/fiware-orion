# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Cover the bugfix for omitted entity type in POST /v2/op/update

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Update using empty entity type
# 02. Check entity has been created
#


echo "01. Update using empty entity type"
echo "=================================="
payload='{
  "actionType": "append",
  "entities":
  [
    {
      "id":   "E1",
      "A1": {
         "type": "Text",
         "value": "X"
      },
      "A2": {
         "type": "Text",
         "value": "Y"
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "02. Check entity has been created"
echo "================================="
orionCurl --url /v2/entities
echo
echo


--REGEXPECT--
01. Update using empty entity type
==================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Check entity has been created
=================================
HTTP/1.1 200 OK
Content-Length: 122
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "A1": {
            "metadata": {},
            "type": "Text",
            "value": "X"
        },
        "A2": {
            "metadata": {},
            "type": "Text",
            "value": "Y"
        },
        "id": "E1",
        "type": "Thing"
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB

