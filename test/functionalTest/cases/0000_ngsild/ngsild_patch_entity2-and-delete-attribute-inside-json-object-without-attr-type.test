# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Update an entity using Real PATCH - delete attribute with attr: { value: "urn:ngsi-ld:null" } and with attribute type present

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0 IPv4 -experimental

--SHELL--
#
# 01. Create an entity E1 with a property P1, a Relationship R1, and a LanguageProperty LP1
# 02. PATCH E1, deleting P1 using the special string "urn:ngsi-ld:null" for value, and without type=Property present
# 03. GET E1 - make sure P1 is gone
# 04. PATCH E1, deleting R1 using the special string "urn:ngsi-ld:null" for object, and without type=Relationship present
# 05. GET E1 - make sure R1 is gone
# 06. PATCH E1, deleting LP1 using the special string "urn:ngsi-ld:null" for languageMap::@none, and without type=LanguageProperty present
# 07. GET E1 - make sure LP1 is gone
# 08. See E1 in mongo - make sure E1 has no attributes left
#

echo "01. Create an entity E1 with a property P1, a Relationship R1, and a LanguageProperty LP1"
echo "========================================================================================="
payload='{
  "id": "urn:E1",
  "type": "T",
  "P1": 1,
  "R1": {
    "object": "urn:E1"
  },
  "LP1": {
    "languageMap": {
      "en": "yes",
      "es": "si"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo '02. PATCH E1, deleting P1 using the special string "urn:ngsi-ld:null" for value, and without type=Property present'
echo '=================================================================================================================='
payload='{
  "P1": {
    "value": "urn:ngsi-ld:null"
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1 -X PATCH --payload "$payload"
echo
echo


echo "03. GET E1 - make sure P1 is gone"
echo "================================="
orionCurl --url /ngsi-ld/v1/entities/urn:E1?options=simplified
echo
echo


echo '04. PATCH E1, deleting R1 using the special string "urn:ngsi-ld:null" for object, and without type=Relationship present'
echo '======================================================================================================================='
payload='{
  "R1": {
    "object": "urn:ngsi-ld:null"
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1 -X PATCH --payload "$payload"
echo
echo


echo '05. GET E1 - make sure R1 is gone'
echo '================================='
orionCurl --url /ngsi-ld/v1/entities/urn:E1?options=simplified
echo
echo


echo '06. PATCH E1, deleting LP1 using the special string "urn:ngsi-ld:null" for languageMap::@none, and without type=LanguageProperty present'
echo '========================================================================================================================================'
payload='{
  "LP1": {
    "languageMap": {
      "@none": "urn:ngsi-ld:null"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1 -X PATCH --payload "$payload"
echo
echo


echo '07. GET E1 - make sure LP1 is gone'
echo '=================================='
orionCurl --url /ngsi-ld/v1/entities/urn:E1?options=simplified
echo
echo




echo "08. See E1 in mongo - make sure E1 has no attributes left"
echo "========================================================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


--REGEXPECT--
