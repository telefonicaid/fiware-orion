# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Retrieval of Entities with string filter == integer value

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 212-249

--SHELL--

#
# 01. Create E1, with test context, type T and attr A=true
# 02. Create E2, with test context, type T2 and attr A2=true
# 03. Create E3, with test context, type T and attr A=false
# 04. Create E4, with test context, type T2 and attr A2=false
# 05. GET all entities that has an attribute A equal to false - see E3
#

echo "01. Create E1, with test context, type T and attr A=true"
echo "========================================================"
payload='{
  "id": "http://a.b.c/entity/E1",
  "type": "T",
  "A": {
    "type": "Property",
    "value": true
  },
  "@context": "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "02. Create E2, with test context, type T2 and attr A2=true"
echo "=========================================================="
payload='{
  "id": "http://a.b.c/entity/E2",
  "type": "T2",
  "A2": {
    "type": "Property",
    "value": true
  },
  "@context": "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "03. Create E3, with test context, type T and attr A=false"
echo "========================================================="
payload='{
  "id": "http://a.b.c/entity/E3",
  "type": "T",
  "A": {
    "type": "Property",
    "value": false
  },
  "@context": "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "04. Create E4, with test context, type T2 and attr A2=false"
echo "==========================================================="
payload='{
  "id": "http://a.b.c/entity/E4",
  "type": "T2",
  "A2": {
    "type": "Property",
    "value": false
  },
  "@context": "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "05. GET all entities that has an attribute A equal to false - see E3"
echo "===================================================================="
orionCurl --url '/ngsi-ld/v1/entities?q=A==false&prettyPrint=yes&type=T' --noPayloadCheck -H "Accept: application/ld+json" -H 'Link: <https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testContext.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"'
echo
echo


--REGEXPECT--
01. Create E1, with test context, type T and attr A=true
========================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/http://a.b.c/entity/E1
Date: REGEX(.*)



02. Create E2, with test context, type T2 and attr A2=true
==========================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/http://a.b.c/entity/E2
Date: REGEX(.*)



03. Create E3, with test context, type T and attr A=false
=========================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/http://a.b.c/entity/E3
Date: REGEX(.*)



04. Create E4, with test context, type T2 and attr A2=false
===========================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/http://a.b.c/entity/E4
Date: REGEX(.*)



05. GET all entities that has an attribute A equal to false - see E3
====================================================================
HTTP/1.1 200 OK
Content-Length: 129
Content-Type: application/ld+json
Date: REGEX(.*)

[
  {
    "id": "http://a.b.c/entity/E3",
    "type": "T",
    "A": {
      "type": "Property",
      "value": false
    }
  }
]



--TEARDOWN--
brokerStop CB
dbDrop CB
