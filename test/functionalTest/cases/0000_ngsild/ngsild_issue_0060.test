# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Test for issue #60 - crash with strange subscription

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255
accumulatorStart --pretty-print 127.0.0.1 ${LISTENER_PORT}

--SHELL--

#
# 01. Create subscription with entity type: .* and no entity id
# 02. Create the very same subscription again
#


echo "01. Create subscription with entity type: .* and no entity id"
echo "============================================================="
payload='{
  "id": "urn:ngsi-ld:Subscription:testsubscription",
  "type": "Subscription",
  "entities": [
    {
      "type": ".*"
    }
  ],
  "notification": {
    "format": "keyValues",
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  },
  "@context": "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testFullContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "02. Create the very same subscription again"
echo "==========================================="
payload='{
  "id": "urn:ngsi-ld:Subscription:testsubscription",
  "type": "Subscription",
  "entities": [
    {
      "type": ".*"
    }
  ],
  "notification": {
    "format": "keyValues",
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  },
  "@context": "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testFullContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


--REGEXPECT--
01. Create subscription with entity type: .* and no entity id
=============================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/subscriptions/urn:ngsi-ld:Subscription:testsubscription
Date: REGEX(.*)



02. Create the very same subscription again
===========================================
HTTP/1.1 400 Bad Request
Content-Length: 152
Content-Type: application/json
Link: <https://forge.etsi.org/gitlab/NGSI-LD/NGSI-LD/raw/master/defaultContext/defaultContext.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "details": "urn:ngsi-ld:Subscription:testsubscription",
    "title": "subscription already exists",
    "type": "http://uri.etsi.org/ngsi-ld/errors/BadRequestData"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
