    "id": "urn:ngsi-ld:Building:store001",
    "tweets": {
        "type": "Property",
        "value": "I never could get the hang of Thursdays"
    },
    "type": "T"
}


--TEARDOWN--
brokerStop CB
brokerStop CP1
dbDrop CB
dbDrop CP1
