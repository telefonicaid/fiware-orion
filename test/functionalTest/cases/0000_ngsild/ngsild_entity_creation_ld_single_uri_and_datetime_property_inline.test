# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Entity Creation - should create an entity with JSON-LD @context as single URI, DateTime Property inline

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255 --prettyPrint

--SHELL--

#
# 01. POST /ngsi-ld/v1/entities with JSON-LD @context and DateTime Property inline
# 02. GET entity
#

echo "01. POST /ngsi-ld/v1/entities with JSON-LD @context and DateTime Property inline"
echo "================================================================================"
payload='{
  "id": "urn:ngsi-ld:T:12:13:14",
  "type": "T",
  "DateProp": {
    "type":  "Property",
    "value": {
      "@type": "DateTime",
      "@value": "2018-12-04T12:00:00"
    }
  },
  "P2": {
    "type": "GeoProperty",
    "value": {
      "type": "Point",
      "coordinates": [-8, 40]
    }
  },
  "P3": {
    "type": "Property",
    "value": "Hola"
  },
  "R1": {
    "type": "Relationship",
    "object": "urn:ngsi-ld:T2:6789"
  },
  "@context": "https://fiware.github.io/NGSI-LD_Tests/ldContext/testFullContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "02. GET entity"
echo "=============="
orionCurl --url '/ngsi-ld/v1/entities/urn:ngsi-ld:T:12:13:14?prettyPrint=yes&spaces=2' --noPayloadCheck  -H "Accept: application/ld+json"
echo
echo


--REGEXPECT--
01. POST /ngsi-ld/v1/entities with JSON-LD @context and DateTime Property inline
================================================================================
HTTP/1.1 201 Created
Content-Length: 0
Link: https://fiware.github.io/NGSI-LD_Tests/ldContext/testFullContext.jsonld
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:T:12:13:14
Date: REGEX(.*)



02. GET entity
==============
HTTP/1.1 200 OK
Content-Length: 564
Content-Type: application/ld+json
Date: REGEX(.*)

{
  "id": "urn:ngsi-ld:T:12:13:14",
  "type": "T",
  "DateProp": {
    "type": "Property",
    "value": {
      "@type": "DateTime",
      "@value": "2018-12-04T12:00:00"
    }
  },
  "P2": {
    "type": "GeoProperty",
    "value": {
      "type": "Point",
      "coordinates": [
        -8.000000,
        40.000000
      ]
    }
  },
  "P3": {
    "type": "Property",
    "value": "Hola"
  },
  "R1": {
    "type": "Relationship",
    "object": "urn:ngsi-ld:T2:6789"
  },
  "@context": "https://fiware.github.io/NGSI-LD_Tests/ldContext/testFullContext.jsonld"
}



--TEARDOWN--
brokerStop CB
dbDrop CB
