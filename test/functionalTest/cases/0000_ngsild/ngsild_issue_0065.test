# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Crash reported in issue #65

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. GET version
# 02. Create an entity - which makes the broker crash according to issue #65
#

echo "01. GET version"
echo "==============="
orionCurl --url /ngsi-ld/ex/v1/version
echo
echo


echo "02. Create an entity - which makes the broker crash according to issue #65"
echo "=========================================================================="
payload='{
   "@context": [
            "https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld",
            "https://schema.lab.fiware.org/ld/jsonldcontext.jsonld"
        ],
    "id": "urn:ngsi-ld:Room:Room1",
    "type": "Room",
    "temperature": {
        "value": 23,
        "type": "Property",
        "unitCode": "C"
    },
    "pressure": {
        "value": 720,
        "type": "Property",
        "unitCode": "mm Hg"
    }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"  -H "Content-Type: application/ld+json" -H "Accept: application/ld+json"
echo
echo


--REGEXPECT--
01. GET version
===============
HTTP/1.1 200 OK
Content-Length: REGEX(.*)
Content-Type: application/json
Date: REGEX(.*)

{
    "branch": "REGEX(.*)",
    "kalloc version": "REGEX(.*)",
    "kbase version": "REGEX(.*)",
    "kjson version": "REGEX(.*)"
}


02. Create an entity - which makes the broker crash according to issue #65
==========================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:Room:Room1
Date: REGEX(.*)



--TEARDOWN--
brokerStop CB
dbDrop CB
