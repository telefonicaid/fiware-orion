    "myRel1": "http://example.org/Rel1",
    "myRel2": "http://example.org/Rel2"
  },
  "id": "urn:ngsi-ld:ContextSourceRegistration:R1",
  "type": "ContextSourceRegistration",
  "name": "reg_1",
  "description": "description of registration",
  "information": [
    {
      "entities": [
        {
          "id": "urn:ngsi-ld:E1",
          "type": "myT"
        }
      ],
      "properties": [ "myP1", "myP2" ],
