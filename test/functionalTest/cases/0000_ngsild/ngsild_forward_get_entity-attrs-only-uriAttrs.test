	"_id" : "urn:ngsi-ld:ContextSourceRegistration:csr01",
	"servicePath" : "/",
	"contextRegistration" : [
		{
			"entities" : [
				{
					"id" : "urn:ngsi-ld:entities:E1",
					"type" : "https://uri.etsi.org/ngsi-ld/default-context/Entity"
				}
			],
			"attrs" : [ ],
			"providingApplication" : "http://REGEX(.*)"
		}
	],
