    "errors": [
        {
            "entityId": "urn:ngsi-ld:entities:E1",
            "error": {
                "detail": "TT",
                "status": 400,
                "title": "non-matching entity type",
                "type": "https://uri.etsi.org/ngsi-ld/errors/BadRequestData"
            }
        }
