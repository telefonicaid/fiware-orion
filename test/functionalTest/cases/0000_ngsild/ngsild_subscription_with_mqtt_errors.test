Content-Length: 128
Content-Type: application/json
Date: REGEX(.*)

{
    "detail": "Endpoint::notifierInfo::key",
    "title": "Not a JSON String",
    "type": "https://uri.etsi.org/ngsi-ld/errors/BadRequestData"
}


