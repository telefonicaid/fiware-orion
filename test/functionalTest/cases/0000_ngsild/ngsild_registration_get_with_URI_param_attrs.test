  "id": "urn:ngsi-ld:reg01",
  "type": "ContextSourceRegistration",
  "name": "reg_01",
  "description": "description of reg 01",
  "information": [
    {
      "entities": [
        {
          "id": "urn:ngsi-ld:Vehicle:A456",
          "type": "Vehicle"
