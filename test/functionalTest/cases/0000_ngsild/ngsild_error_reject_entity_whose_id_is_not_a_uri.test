# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Entity Creation Error - should reject an entity which id is not a URI

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 212-249

--SHELL--

#
# 01. POST /ngsi-ld/v1/entities with an 'id' that is not a URI
#

echo "01. POST /ngsi-ld/v1/entities with an 'id' that is not a URI"
echo "============================================================"
payload='{
  "id": "abcdef",
  "type": "T"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload"
echo
echo


--REGEXPECT--
01. POST /ngsi-ld/v1/entities with an 'id' that is not a URI
============================================================
HTTP/1.1 400 Bad Request
Content-Length: 120
Content-Type: application/json
Link: <https://forge.etsi.org/gitlab/NGSI-LD/NGSI-LD/raw/master/defaultContext/defaultContext.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "details": "Not a URL nor a URN",
    "title": "Invalid Entity ID",
    "type": "http://uri.etsi.org/ngsi-ld/errors/BadRequestData"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
