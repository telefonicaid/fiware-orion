# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Entity Creation Error - should reject an entity with a relationship without object

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 212-249

--SHELL--

#
# 01. POST /ngsi-ld/v1/entities with a relationship attribute without object 
#

echo "01. POST /ngsi-ld/v1/entities with a relationship attribute without object"
echo "=========================================================================="
payload='{
  "id": "urn:ngsi-ld:T4:9000",
  "type": "T",
  "R1": {
    "type": "Relationship",
    "value": "1234"
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload"
echo
echo


--REGEXPECT--
01. POST /ngsi-ld/v1/entities with a relationship attribute without object
==========================================================================
HTTP/1.1 400 Bad Request
Content-Length: 166
Content-Type: application/json
Link: <https://forge.etsi.org/gitlab/NGSI-LD/NGSI-LD/raw/master/defaultContext/defaultContext.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "details": "http://example.org/ngsi-ld/default/R1",
    "title": "relationship attribute without 'object' field",
    "type": "http://uri.etsi.org/ngsi-ld/errors/BadRequestData"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
