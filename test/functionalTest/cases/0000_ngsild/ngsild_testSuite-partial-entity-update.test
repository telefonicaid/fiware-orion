# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
NGSi-LD Test Suite - Partial Entity Attribute Update

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255 --prettyPrint

--SHELL--

#
# 01. Create an entity E1
# 02. Update the entity partially, the same way as the Test Suite Case 'Partial Attribute Update'
# 03. Get the entity to see that the update was correctly performed
#

echo "01. Create an entity E1"
echo "======================="
payload='{
  "id": "urn:ngsi-ld:Entities:E1",
  "type": "T",
  "P1": {
    "type": "Property",
    "value": 12,
    "observedAt": "2018-12-04T12:00:00.00Z",
    "P1_R1": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:T2:6789"
    },
    "P1_P1": {
      "type": "Property",
      "value": 0.79
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. Update the entity partially, the same way as the Test Suite Case 'Partial Attribute Update'"
echo "==============================================================================================="
payload='{
  "P1": {
    "type": "Relationship",
    "object": "urn:ngsi-ld:T2:6789"
  },
  "location": {
    "type": "GeoProperty",
    "value": {
      "type": "Point",
      "coordinates": [-8.01, 40.01]
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:Entities:E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "03. Get the entity to see that the update was correctly performed"
echo "================================================================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:Entities:E1
echo
echo


--REGEXPECT--
01. Create an entity E1
=======================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:Entities:E1
Date: REGEX(.*)



02. Update the entity partially, the same way as the Test Suite Case 'Partial Attribute Update'
===============================================================================================
HTTP/1.1 207 Multi-Status
Content-Length: 142
Content-Type: application/json
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "notUpdated": [
        {
            "attributeName": "location",
            "reason": "attribute doesn't exist"
        }
    ],
    "updated": [
        "https://uri.etsi.org/ngsi-ld/default-context/P1"
    ]
}


03. Get the entity to see that the update was correctly performed
=================================================================
HTTP/1.1 200 OK
Content-Length: 103
Content-Type: application/json
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "P1": {
        "object": "urn:ngsi-ld:T2:6789",
        "type": "Relationship"
    },
    "id": "urn:ngsi-ld:Entities:E1",
    "type": "T"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
