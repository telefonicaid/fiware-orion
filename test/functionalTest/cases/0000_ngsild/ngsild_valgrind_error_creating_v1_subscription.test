# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Creation of NGSIv1 subscription with geo-localization 

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create a subscription with geolocation using NGSIv1
#

echo "01. Create a subscription with geolocation using NGSIv1"
echo "======================================================="
payload='{
    "entities": [
        {
            "type": "Room",
            "id": "OfficeRoom"
        }
    ],
    "reference": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
    "duration": "PT1H",
    "notifyConditions": [
        {
            "type": "ONCHANGE"
        }
    ]
}'
orionCurl --url /v1/subscribeContext --payload "$payload"
echo
echo


--REGEXPECT--
01. Create a subscription with geolocation using NGSIv1
=======================================================
HTTP/1.1 200 OK
Content-Length: 85
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "subscribeResponse": {
        "duration": "PT1H",
        "subscriptionId": "REGEX([0-9a-f]{24})"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
