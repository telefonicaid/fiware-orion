# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Get entities by id parameter

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create a subscription with escaped slashes in reference
# 02. Make sure it was correctly created
#


echo "01. Create a subscription with escaped slashes in reference"
echo "==========================================================="
payload='{
  "entities": [
    {
      "type": "Device",
      "id": "1234"
    }
  ],
  "attributes": [
    "movement"
  ],
  "reference": "http:\/\/localhost:1028\/accumulate",
  "duration": "P1M",
  "notifyConditions": [
    {
      "type": "ONCHANGE",
      "condValues": [
        "movement"
      ]
    }
  ],
  "throttling": "PT1M"
}'
orionCurl --url /v1/subscribeContext --payload "$payload"
echo
echo


echo "02. Make sure it was correctly created"
echo "======================================"
orionCurl --url /v2/subscriptions
echo
echo


--REGEXPECT--
01. Create a subscription with escaped slashes in reference
===========================================================
HTTP/1.1 200 OK
Content-Length: 104
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "subscribeResponse": {
        "duration": "P1M",
        "subscriptionId": "REGEX([0-9a-f]{24})",
        "throttling": "PT1M"
    }
}


02. Make sure it was correctly created
======================================
HTTP/1.1 200 OK
Content-Length: 348
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "expires": "REGEX(.*)",
        "id": "REGEX([0-9a-f]{24})",
        "notification": {
            "attrs": [
                "movement"
            ],
            "attrsFormat": "legacy",
            "covered": false,
            "http": {
                "url": "http://localhost:1028/accumulate"
            },
            "onlyChangedAttrs": false
        },
        "status": "active",
        "subject": {
            "condition": {
                "attrs": [
                    "movement"
                ]
            },
            "entities": [
                {
                    "id": "1234",
                    "type": "Device"
                }
            ]
        },
        "throttling": 60
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB
