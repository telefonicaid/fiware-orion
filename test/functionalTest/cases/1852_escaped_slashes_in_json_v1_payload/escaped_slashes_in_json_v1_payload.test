# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Get entities by id parameter

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create a subscription with escaped slashes in reference
#


echo "01. Create a subscription with escaped slashes in reference"
echo "==========================================================="
payload='{
  "entities": [
    {
      "type": "Device",
      "id": "1234"
    }
  ],
  "attributes": [
    "movement"
  ],
  "reference": "http:\/\/localhost:1028\/accumulate",
  "duration": "P1M",
  "notifyConditions": [
    {
      "type": "ONCHANGE",
      "condValues": [
        "movement"
      ]
    }
  ],
  "throttling": "PT1M"
}'
orionCurl --url /v1/subscribeContext --payload "$payload" --json
echo
echo


--REGEXPECT--
01. Create a subscription with escaped slashes in reference
===========================================================
HTTP/1.1 200 OK
Content-Length: 135
Content-Type: application/json
Date: REGEX(.*)

{
    "subscribeResponse": {
        "duration": "P1M",
        "subscriptionId": "REGEX([0-9a-f]{24})",
        "throttling": "PT1M"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
