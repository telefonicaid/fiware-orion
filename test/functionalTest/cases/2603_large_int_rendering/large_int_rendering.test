# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Large integers must be returned with the exact value they were given

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Creating entity with integer attribute of 0x7FFFFFFF (2147483647)
# 02. Get entity
#

echo "01. Creating entity with integer attribute of 0x7FFFFFFF (2147483647)"
echo "====================================================================="
payload='{
  "id": "E",
  "bigInt": {
    "value": 2147483647
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Get entity"
echo "=============="
orionCurl --url /v2/entities/E
echo
echo


--REGEXPECT--
01. Creating entity with integer attribute of 0x7FFFFFFF (2147483647)
=====================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E?type=Thing
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Get entity
==============
HTTP/1.1 200 OK
Content-Length: 85
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "bigInt": {
        "metadata": {},
        "type": "Number",
        "value": 2147483647
    },
    "id": "E",
    "type": "Thing"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
