--NAME--
NGSIv1: Empty attribute values in notifications

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create subscription to E1
# 02. Create E1 with empty value
# 03. Update E1 with non-empty value (foo)
# 04. Update E1 with empty value
# 05. Update E1 with non-empty value (bar)
# 06. Update E1 with absent value
# 07. Dump 4 notifications [<"">, <foo>, <"">, <bar>]
#

echo "01. Create subscription to E1"
echo "============================="
payload='{
  "entities": [
    {
        "id":   "E1",
        "type": "T1"
    }
  ],
  "attributes": [
    "attr"
  ],
  "reference": "http://localhost:'${LISTENER_PORT}'/notify",
  "duration": "P1M",
  "notifyConditions": [
    {
        "type": "ONCHANGE",
        "condValues": [
            "attr"
        ]
    }
  ]
}'
orionCurl --url /v1/subscribeContext --payload "$payload"
echo
echo


echo "02. Create E1 with empty value"
echo "=============================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "attr",
          "type": "T",
          "value": ""
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "03. Update E1 with non-empty value (foo)"
echo "========================================"
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "attr",
          "type": "T",
          "value": "foo"
        }
      ]
    }
  ],
  "updateAction": "UPDATE"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "04. Update E1 with empty value"
echo "=============================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "attr",
          "type": "T",
          "value": ""
        }
      ]
    }
  ],
  "updateAction": "UPDATE"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "05. Update E1 with non-empty value (bar)"
echo "========================================"
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "attr",
          "type": "T",
          "value": "bar"
        }
      ]
    }
  ],
  "updateAction": "UPDATE"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "06. Update E1 with absent value"
echo "==============================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "attr",
          "type": "T"
        }
      ]
    }
  ],
  "updateAction": "UPDATE"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "07. Dump 4 notifications [<>, <foo>, <>, <bar>]"
echo "==============================================="
accumulatorDump
echo
echo


