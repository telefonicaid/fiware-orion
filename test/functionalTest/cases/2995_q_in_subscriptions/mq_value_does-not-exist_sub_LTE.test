# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Q filter in subscription for LTE of non existing metadata item

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create subscription for entity E*, attribute 't' with a filter mq=t.m<=20
# 02. Create entity E1 with attr t without metadata 'm'
# 03. Make sure no notification has been sent
# 04. Create entity E2 with attr t with metadata 'm' == 20
# 05. Make sure ONE notification has been sent
#

echo "01. Create subscription for entity E*, attribute 't' with a filter mq=t.m<=20"
echo "============================================================================="
filter="t.m<=20"
payload='{
  "subject": {
    "entities": [
      {
        "idPattern": "E.*"
      }
    ],
    "condition": {
      "attrs": [ "t" ],
      "expression": { "mq": "'$filter'" }
    }
  },
  "notification": {
    "http": {
      "url": "http://localhost:'$LISTENER_PORT'/notify"
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create entity E1 with attr t without metadata 'm'"
echo "====================================================="
payload='{
  "id": "E1",
  "t": {
    "metadata": {
      "m2": {
        "value": 20
      }
    },
    "type": "Number",
    "value": 2
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Make sure no notification has been sent"
echo "==========================================="
accumulatorDump
accumulatorReset
echo
echo


echo "04. Create entity E2 with attr t with metadata 'm' == 20"
echo "========================================================"
payload='{
  "id": "E2",
  "t": {
    "metadata": {
      "m": {
        "value": 20
      }
    },
    "type": "Number",
    "value": 4
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "05. Make sure ONE notification has been sent"
echo "============================================"
accumulatorDump
echo
echo


--REGEXPECT--
