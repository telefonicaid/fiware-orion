# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Subscription sequence ONCHANGE expiration check

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

echo "1: ++++++++++++++++++++"
#Subscribe for 5 seconds
url="/v1/subscribeContext"
payload='{
    "entities": [
        {
            "type": "Room",
            "isPattern": "false",
            "id": "OfficeRoom"
        }
    ],
    "attributes": [
        "temperature"
    ],
    "reference": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
    "duration": "PT5S",
    "notifyConditions": [
        {
            "type": "ONCHANGE",
            "condValues": [
                "temperature"
            ]
        }
    ]
}'
orionCurl --url "$url" --payload "$payload"
SUB_ID=$(echo "$_response" | grep subscriptionId | awk -F\" '{ print $4}')

echo "2: ++++++++++++++++++++"
#Do an update inmediatelly after the subscription: notification is generated
url="/v1/updateContext"
payload='{
  "contextElements": [
  {
    "type": "Room",
    "isPattern": "false",
    "id": "OfficeRoom",
    "attributes": [
    {
      "name": "temperature",
      "type": "degree",
      "value": "27"
    }
    ]
  }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url "$url" --payload "$payload"

echo "3: ++++++++++++++++++++"
#Do an update after subscription expiration: notification is not generated
sleep 6s
url="/v1/updateContext"
payload='{
  "contextElements": [
  {
    "type": "Room",
    "isPattern": "false",
    "id": "OfficeRoom",
    "attributes": [
    {
      "name": "temperature",
      "type": "degree",
      "value": "40"
    }
    ]
  }
  ],
  "updateAction": "UPDATE"
}'
orionCurl --url "$url" --payload "$payload"

echo "4: ++++++++++++++++++++"
#Get accumulated data
accumulatorDump


