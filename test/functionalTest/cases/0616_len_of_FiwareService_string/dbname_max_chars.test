--NAME--
Max 10 chars in db-name

--SHELL-INIT--
dbInit 1234567890
dbInit 12345678901

--SHELL--

echo "01. Starting broker with a -dbName of 11 chars - this must fail"
echo "==============================================================="
$BROKER -pidpath /tmp/orion_${CB_PORT}.pid -port ${CB_PORT} -db 12345678901 > /dev/null
exitCode=$?
echo "exitCode: $exitCode"
echo
echo


echo "02. Starting broker with a -dbName of 10 chars - this must work"
echo "==============================================================="
$BROKER -pidpath /tmp/orion_${CB_PORT}.pid -port ${CB_PORT} -db 1234567890 > /dev/null
echo
echo


--REGEXPECT--
01. Starting broker with a -dbName of 11 chars - this must fail
===============================================================
exitCode: 1


02. Starting broker with a -dbName of 10 chars - this must work
===============================================================


--TEARDOWN--

brokerStop CB
dbDrop 1234567890

# Just in case ...
dbDrop 12345678901
