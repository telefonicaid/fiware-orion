--NAME--
CORS Bad Verbs

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255 IPV4 -corsOrigin __ALL

--SHELL--
echo "01. Bad Verb Entry Points"
echo "========================="
orionCurl --url /v2 -X BADVERB
echo
echo

echo "02. Bad Verb All Entities"
