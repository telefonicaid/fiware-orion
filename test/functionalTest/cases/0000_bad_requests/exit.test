# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
broker version via REST
--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "1: +++++++++++++++++++++++++++++"
curlXmlNoPayload "/exit"
echo

echo "2: +++++++++++++++++++++++++++++"
curlXmlNoPayload "/exit/123"
echo

--REGEXPECT--
1: +++++++++++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 129
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<orionError>
  <code>400</code>
  <reasonPhrase>Bad Request</reasonPhrase>
  <details>Password requested</details>
</orionError>

2: +++++++++++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 146
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<orionError>
  <code>400</code>
  <reasonPhrase>Bad Request</reasonPhrase>
  <details>Request denied - password erroneous</details>
</orionError>

--TEARDOWN--
dbDrop CB
brokerStop CB
