# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
partial_success_HTTP_status_codes_with_strict_append

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity E with attributes A=1 and B=2
# 02. Strict append update E-A=10, we should see 422 response (as operation completely fails in this case)
# 03. GET E to check A=1 and B=2 have not changed
# 04. Strict append update E-A=10,C=30, we should see 207 response (as operation partially success in this case)
# 05. GET E to check partial result C=30 appended (but A=1 and B=2 untouched)
#

echo "01. Create entity E with attributes A=1 and B=2"
echo "==============================================="
payload='{
  "actionType": "appendStrict",
  "entities": [
    {
      "id": "E",
      "type": "T",
      "A": {
        "value": 1
      },
      "B": {
        "value": 2
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "02. Strict append update E-A=10, we should see 422 response (as operation completely fails in this case)"
echo "========================================================================================================"
payload='{
  "actionType": "appendStrict",
  "entities": [
    {
      "id": "E",
      "type": "T",
      "A": {
        "value": 10
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "03. GET E to check A=1 and B=2 have not changed"
echo "==============================================="
orionCurl --url /v2/entities/E
echo
echo



echo "04. Strict append update E-A=10,C=30, we should see 207 response (as operation partially success in this case)"
echo "=============================================================================================================="
payload='{
  "actionType": "appendStrict",
  "entities": [
    {
      "id": "E",
      "type": "T",
      "A": {
        "value": 10
      },
      "C": {
        "value": 30
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "05. GET E to check partial result C=30 appended (but A=1 and B=2 untouched)"
echo "==========================================================================="
orionCurl --url /v2/entities/E
echo
echo


--REGEXPECT--
01. Create entity E with attributes A=1 and B=2
===============================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Strict append update E-A=10, we should see 422 response (as operation completely fails in this case)
========================================================================================================
HTTP/1.1 207 Multi-Status
Content-Length: 107
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "one or more of the attributes in the request already exist: [ A ]",
    "error": "Unprocessable"
}


03. GET E to check A=1 and B=2 have not changed
===============================================
HTTP/1.1 200 OK
Content-Length: 113
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A": {
        "metadata": {},
        "type": "Number",
        "value": 1
    },
    "B": {
        "metadata": {},
        "type": "Number",
        "value": 2
    },
    "id": "E",
    "type": "T"
}


04. Strict append update E-A=10,C=30, we should see 207 response (as operation partially success in this case)
==============================================================================================================
HTTP/1.1 207 Multi-Status
Content-Length: 107
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "one or more of the attributes in the request already exist: [ A ]",
    "error": "Unprocessable"
}


05. GET E to check partial result C=30 appended (but A=1 and B=2 untouched)
===========================================================================
HTTP/1.1 200 OK
Content-Length: 160
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A": {
        "metadata": {},
        "type": "Number",
        "value": 1
    },
    "B": {
        "metadata": {},
        "type": "Number",
        "value": 2
    },
    "C": {
        "metadata": {},
        "type": "Number",
        "value": 30
    },
    "id": "E",
    "type": "T"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
