# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Killer request APIv2 deeply nested attribute value

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255 IPV4 -logForHumans

--SHELL--

#
# 01. Send killer request to CB, get error
#

echo '01. Send killer request to CB, get error'
echo '========================================'
payload='{
    "contextElements": [
        {
            "type": "T",
            "isPattern": "false",
            "id": "E",
            "attributes": [
            {
                "name": "att",
                "type": "compound",
                "value": [[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[[{"x": 1}]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]]
            }
            ]
        }
    ],
    "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


--REGEXPECT--
01. Send killer request to CB, get error
========================================
HTTP/1.1 200 OK
Content-Length: 131
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "errorCode": {
        "code": "400",
        "details": "compound attribute value has overpassed maximum nesting limit",
        "reasonPhrase": "Bad Request"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
