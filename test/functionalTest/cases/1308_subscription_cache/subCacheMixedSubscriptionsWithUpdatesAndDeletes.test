orionCurl --url /v1/updateContextSubscription --payload "$payload"
echo
echo


echo "10. Check statistics, see THREE subCacheItems in subCache"
echo "========================================================="
orionCurl --url /cache/statistics
echo
echo


echo "11. Remove S1"
echo "============="
payload='{
