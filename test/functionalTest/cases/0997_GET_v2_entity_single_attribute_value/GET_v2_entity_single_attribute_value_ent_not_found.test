--NAME--
GET Entity Attribute V2 Entity not found

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. GET /v2/entities/NONE/attrs/ANY/value
#

echo "01. GET /v2/entities/NONE/attrs/ANY/value"
echo "========================================="
orionCurl --url /v2/entities/NONE/attrs/ANY/value --out text
echo
echo

--REGEXPECT--
01. GET /v2/entities/NONE/attrs/ANY/value
=========================================
HTTP/1.1 404 Not Found
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Content-Type: text/plain
Content-Length: 95

{"error":"NotFound","description":"The requested entity has not been found. Check type and id"}


--TEARDOWN--
brokerStop CB
dbDrop CB

