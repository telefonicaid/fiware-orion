# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entity attribute -- Too many entities

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v1/updateContext, creating 2 entities
# 02. GET /v2/entities/E1/attrs/A0/value
#

echo "01. POST /v1/updateContext"
echo "=========================="
payload='{
  "contextElements": [
    {
      "id":   "E1",
      "type": "T1",
      "attributes": [
          {
              "name": "A0",
              "type": "number",
              "value": "1"
          }
      ]
    },
    {
      "id":   "E1",
      "type": "T2",
      "attributes": [
          {
              "name": "A0",
              "type": "number",
              "value": "2"
          }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo

echo "02. GET /v2/entities/E1/attrs/A0/value"
echo "======================================"
orionCurl --url '/v2/entities/E1/attrs/A0/value'
echo
echo

--REGEXPECT--
01. POST /v1/updateContext
==========================
HTTP/1.1 200 OK
Content-Length: 356
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "A0",
                        "type": "number",
                        "value": ""
                    }
                ],
                "id": "E1",
                "isPattern": "false",
                "type": "T1"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        },
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "A0",
                        "type": "number",
                        "value": ""
                    }
                ],
                "id": "E1",
                "isPattern": "false",
                "type": "T2"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


02. GET /v2/entities/E1/attrs/A0/value
======================================
HTTP/1.1 409 Conflict
Content-Length: 98
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "More than one matching entity. Please refine your query",
    "error": "TooManyResults"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

