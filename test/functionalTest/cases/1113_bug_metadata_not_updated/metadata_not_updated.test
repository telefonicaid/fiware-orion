# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST /v2/entities with metadata duplicated

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/entities with metadata 'm1' = 1
# 02. POST /v2/entities with metadata 'm1' = 2
# 03. Mongo Dump
#

echo "01. POST /v2/entities with metadata 'm1' = 1"
echo "============================================"
payload='{
  "type":"T1",
  "id": "E1",
  "temp": {
    "value": "1",
    "metadata": { "m1": { "value": 1 } }
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. POST /v2/entities/E1/attrs with metadata 'm1' = 2"
echo "====================================================="
payload='{
  "temp": {
    "value": "1",
    "metadata": { "m1": { "value": 2 } }
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload"
echo
echo


echo "03. GET /v2/entities/E1"
echo "======================="
orionCurl --url /v2/entities/E1
echo
echo


--REGEXPECT--
01. POST /v2/entities with metadata 'm1' = 1
============================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. POST /v2/entities/E1/attrs with metadata 'm1' = 2
=====================================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. GET /v2/entities/E1
=======================
HTTP/1.1 200 OK
Content-Length: 104
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "id": "E1",
    "temp": {
        "metadata": {
            "m1": {
                "type": "Number",
                "value": 2
            }
        },
        "type": "Text",
        "value": "1"
    },
    "type": "T1"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
