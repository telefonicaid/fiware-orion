# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Dates as ranges in URI param

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity E24 with birthdate 2016-02-24T10:00:00.000Z
# 02. Create entity E23 with birthdate 2016-02-23T10:00:00.000Z
# 03. Create entity E22 with birthdate 2016-02-22T10:00:00.000Z
# 04. GET entities with birthdate FROM 2016-02-25T10:00:00.000Z TO 2016-02-26T10:00:00.000Z, see nothing
# 05. GET entities with birthdate FROM 2016-02-20T10:00:00.000Z TO 2016-02-26T10:00:00.000Z, see all three
# 06. GET entities with birthdate FROM 2016-02-23T10:00:00.000Z TO 2016-02-24T10:00:00.000Z, see E23 and E24
# 07. GET entities with birthdate FROM 2016-02-23T10:00:00.000Z TO '2016-02-24T10:00:00.000Z', see error (as to-value is a string)
#

echo "01. Create entity E24 with birthdate 2016-02-24T10:00:00.000Z"
echo "============================================================="
payload='{
  "id": "E24",
  "birthdate": {
    "value": "2016-02-24T10:00:00.000Z",
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Create entity E23 with birthdate 2016-02-23T10:00:00.000Z"
echo "============================================================="
payload='{
  "id": "E23",
  "birthdate": {
    "value": "2016-02-23T10:00:00.000Z",
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Create entity E22 with birthdate 2016-02-22T10:00:00.000Z"
echo "============================================================="
payload='{
  "id": "E22",
  "birthdate": {
    "value": "2016-02-22T10:00:00.000Z",
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo



echo "04. GET entities with birthdate FROM 2016-02-25T10:00:00.000Z TO 2016-02-26T10:00:00.000Z, see nothing"
echo "======================================================================================================"
orionCurl --url '/v2/entities?q=birthdate==2016-02-25T10:00:00.000Z..2016-02-26T10:00:00.000Z&options=keyValues'
echo
echo


echo "05. GET entities with birthdate FROM 2016-02-20T10:00:00.000Z TO 2016-02-26T10:00:00.000Z, see all three"
echo "========================================================================================================"
orionCurl --url '/v2/entities?q=birthdate==2016-02-20T10:00:00.000Z..2016-02-26T10:00:00.000Z&options=keyValues'
echo
echo


echo "06. GET entities with birthdate FROM 2016-02-23T10:00:00.000Z TO 2016-02-24T10:00:00.000Z, see E23 and E24"
echo "=========================================================================================================="
orionCurl --url '/v2/entities?q=birthdate==2016-02-23T10:00:00.000Z..2016-02-24T10:00:00.000Z&options=keyValues'
echo
echo


echo "07. GET entities with birthdate FROM 2016-02-23T10:00:00.000Z TO '2016-02-24T10:00:00.000Z', see error (as to-value is a string)"
echo "================================================================================================================================"
orionCurl --url "/v2/entities?q=birthdate==2016-02-23T10:00:00.000Z..'2016-02-24T10:00:00.000Z'&options=keyValues"
echo
echo


