# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Date subscription filter (less than)

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create subscription with q: birthday<2016-02-24T10:00:00.00Z
# 02. Create entity with birthdaty: 2016-02-23T10:00:00.00Z (notif)
# 03. Update entity to birthdaty: 2016-02-24T10:00:00.00Z (not notif)
# 04. Update entity to birthdaty: 2016-02-25T10:00:00.00Z (not notif)
# 05. Dump accumulator (1 notifications)
#

echo "01. Create subscription with q: birthday<2016-02-24T10:00:00.00Z"
echo "================================================================"
payload='
{
    "subject": {
        "entities": [
            {
                "id": "E1",
                "type": "T"
            }
        ],
        "condition": {
            "attrs": [ ],
            "expression": {
               "q": "birthday<2016-02-24T10:00:00.00Z"
            }
         }
    },
    "notification": {
        "http": {"url": "http://localhost:'$LISTENER_PORT'/notify"},
        "attrs": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}
'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create entity with birthdaty: 2016-02-23T10:00:00.00Z (notif)"
echo "================================================================="
payload='{
  "id": "E1",
  "type": "T",
  "birthday": {
    "value": "2016-02-23T10:00:00.00Z",
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Update entity to birthdaty: 2016-02-24T10:00:00.00Z (not notif)"
echo "==================================================================="
payload='{
 "birthday": {
   "value": "2016-02-24T10:00:00.00Z",
   "type": "DateTime"
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload" -X PATCH
echo
echo


echo "04. Update entity to birthdaty: 2016-02-25T10:00:00.00Z (not notif)"
echo "==================================================================="
payload='{
 "birthday": {
   "value": "2016-02-25T10:00:00.00Z",
   "type": "DateTime"
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload" -X PATCH
echo
echo


echo "05. Get accumulator dump (1 notifications)"
echo "=========================================="
accumulatorDump
echo
echo


--REGEXPECT--
01. Create subscription with q: birthday<2016-02-24T10:00:00.00Z
================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/subscriptions/REGEX([0-9a-f]{24})
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Create entity with birthdaty: 2016-02-23T10:00:00.00Z (notif)
=================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Update entity to birthdaty: 2016-02-24T10:00:00.00Z (not notif)
===================================================================
HTTP/1.1 204 No Content
Content-Length: 0
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



04. Update entity to birthdaty: 2016-02-25T10:00:00.00Z (not notif)
===================================================================
HTTP/1.1 204 No Content
Content-Length: 0
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



05. Get accumulator dump (1 notifications)
==========================================
POST http://localhost:REGEX(\d+)/notify
Fiware-Servicepath: /
Content-Length: 157
User-Agent: orion/REGEX(\d+\.\d+\.\d+.*)
Ngsiv2-Attrsformat: normalized
Host: localhost:REGEX(\d+)
Accept: application/json
Content-Type: application/json; charset=utf-8
Fiware-Correlator: REGEX([0-9a-f\-]{36})

{
    "data": [
        {
            "birthday": {
                "metadata": {},
                "type": "DateTime",
                "value": "2016-02-23T10:00:00.000Z"
            }, 
            "id": "E1",
            "type": "T"
        }
    ],
    "subscriptionId": "REGEX([0-9a-f]{24})"
}
=======================================


--TEARDOWN--
brokerStop CB
accumulatorStop $LISTENER_PORT
dbDrop CB
