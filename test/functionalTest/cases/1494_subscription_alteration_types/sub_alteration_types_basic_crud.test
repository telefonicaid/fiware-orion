orionCurl --url /v2/subscriptions/$SUB_ID --payload "$payload" -X PATCH
echo
echo


echo "11. Update subscription with 1 valid element and 1 invalid element the alterationTypes (see error)"
echo "=================================================================================================="
payload='{
  "subject": {
    "entities": [
      {
        "idPattern" : ".*",
        "type": "T"
