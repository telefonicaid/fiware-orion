# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
V2 batch update UPDATE

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. Create E1/T1/A1=1,A2=1, using POST /v2/op/update with APPEND
# 02. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1
# 03. Modify A1=3, using POST /v2/op/update with UPDATE
# 04. GET /v2/entities/E1 to see E1/T1/A1=3,A2=1
# 05. Try to UPDATE non-existing attribute A3, see error
# 06. GET /v2/entities/E1 to see E1/T1/A1=3,A2=1, showing that step 05 did nothing
#

echo "01. Create E1/T1/A1=1,A2=1, using POST /v2/op/update with APPEND"
echo "================================================================"
payload='{
  "actionType": "append",
  "entities": [
    {
      "id": "E1",
      "type": "T1",
      "A1": {
        "value": 1
      },
      "A2": {
        "value": 1
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "02. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1"
echo "=============================================="
orionCurl --url /v2/entities/E1
echo
echo


echo "03. Modify A1=3, using POST /v2/op/update with UPDATE"
echo "====================================================="
payload='{
  "actionType": "update",
  "entities": [
    {
      "id": "E1",
      "type": "T1",
      "A1": {
        "value": 3
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "04. GET /v2/entities/E1 to see E1/T1/A1=3,A2=1"
echo "=============================================="
orionCurl --url /v2/entities/E1
echo
echo


echo "05. Try to UPDATE non-existing attribute A3, see error"
echo "======================================================"
payload='{
  "actionType": "update",
  "entities": [
    {
      "id": "E1",
      "type": "T1",
      "A3": {
        "value": 5
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo

echo "06. GET /v2/entities/E1 to see E1/T1/A1=3,A2=1, showing that step 05 did nothing"
echo "================================================================================"
orionCurl --url /v2/entities/E1
echo
echo


--REGEXPECT--
01. Create E1/T1/A1=1,A2=1, using POST /v2/op/update with APPEND
================================================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1
==============================================
HTTP/1.1 200 OK
Content-Length: 117
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "Number",
        "value": 1
    },
    "A2": {
        "metadata": {},
        "type": "Number",
        "value": 1
    },
    "id": "E1",
    "type": "T1"
}


03. Modify A1=3, using POST /v2/op/update with UPDATE
=====================================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



04. GET /v2/entities/E1 to see E1/T1/A1=3,A2=1
==============================================
HTTP/1.1 200 OK
Content-Length: 117
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "Number",
        "value": 3
    },
    "A2": {
        "metadata": {},
        "type": "Number",
        "value": 1
    },
    "id": "E1",
    "type": "T1"
}


05. Try to UPDATE non-existing attribute A3, see error
======================================================
HTTP/1.1 404 Not Found
Content-Length: 79
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "The entity does not have such an attribute",
    "error": "NotFound"
}


06. GET /v2/entities/E1 to see E1/T1/A1=3,A2=1, showing that step 05 did nothing
================================================================================
HTTP/1.1 200 OK
Content-Length: 117
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "Number",
        "value": 3
    },
    "A2": {
        "metadata": {},
        "type": "Number",
        "value": 1
    },
    "id": "E1",
    "type": "T1"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
