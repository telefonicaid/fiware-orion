# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Check default duration

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
payload='{
  "contextRegistrations": [
    {
      "entities": [
        {
          "type": "Room",
          "isPattern": "false",
          "id": "ConferenceRoom"
        },
        {
          "type": "Room",
          "isPattern": "false",
          "id": "OfficeRoom"
        }
      ],
      "attributes": [
        {
          "name": "temperature",
          "type": "degree"
        }
      ],
      "providingApplication": "http://localhost:1028/application"
    }
  ]
}'
orionCurl --url "/v1/registry/registerContext" --payload "${payload}"

echo "++++++++++++++++++++"

payload='{
  "entities": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "ConferenceRoom"
    },
    {
      "type": "Room",
      "isPattern": "false",
      "id": "OfficeRoom"
    }
  ],
  "attributes": [
    "temperature",
    "pressure"
  ]
}'
orionCurl --url "/v1/registry/discoverContextAvailability" --payload "${payload}"

--REGEXPECT--
HTTP/1.1 200 OK
Content-Length: 64
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "PT24H",
    "registrationId": "REGEX([0-9a-f]{24})"
}
++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 298
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextRegistrationResponses": [
        {
            "contextRegistration": {
                "attributes": [
                    {
                        "name": "temperature",
                        "type": "degree"
                    }
                ],
                "entities": [
                    {
                        "id": "ConferenceRoom",
                        "isPattern": "false",
                        "type": "Room"
                    },
                    {
                        "id": "OfficeRoom",
                        "isPattern": "false",
                        "type": "Room"
                    }
                ],
                "providingApplication": "http://localhost:1028/application"
            }
        }
    ]
}
--TEARDOWN--
brokerStop CB
dbDrop CB
