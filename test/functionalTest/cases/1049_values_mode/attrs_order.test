# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
URI param attrs order

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity with attributes A, B, C, D
# 02. Get entity without attrs param -> A, B, C, D
# 03. Get entity without attrs param (keyValues) -> A, B, C, D
# 04. Get entity ordering B, D, C
# 05. Get entity ordering (keyValues) B, D, C
#

echo "01. Create entity with attributes A, B, C, D"
echo "============================================"
payload='{
  "id": "E",
  "type": "T",
  "A": {
    "type": "AT",
    "value": 1
  },
  "B": {
    "type": "BT",
    "value": 2
  },
  "C": {
    "type": "CT",
    "value": 3
  },
  "D": {
    "type": "DT",
    "value": 4
  }
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "02. Get entity without attrs param -> A, B, C, D"
echo "================================================"
orionCurl --url /v2/entities/E --json --noPayloadCheck --json
echo
echo


echo "03. Get entity without attrs param (keyValues) -> A, B, C, D"
echo "============================================================"
orionCurl --url '/v2/entities/E?options=keyValues' --noPayloadCheck --json
echo
echo


echo "04. Get entity ordering B, D, C"
echo "==============================="
orionCurl --url '/v2/entities/E?attrs=B,D,C' --noPayloadCheck --json
echo
echo


echo "05. Get entity ordering (keyValues) B, D, C"
echo "==========================================="
orionCurl --url '/v2/entities/E?attrs=B,D,C&options=keyValues' --noPayloadCheck --json
echo
echo


--REGEXPECT--
01. Create entity with attributes A, B, C, D
============================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Get entity without attrs param -> A, B, C, D
================================================
HTTP/1.1 200 OK
Content-Length: 189
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{"id":"E","type":"T","A":{"type":"AT","value":1,"metadata":{}},"B":{"type":"BT","value":2,"metadata":{}},"C":{"type":"CT","value":3,"metadata":{}},"D":{"type":"DT","value":4,"metadata":{}}}


03. Get entity without attrs param (keyValues) -> A, B, C, D
============================================================
HTTP/1.1 200 OK
Content-Length: 45
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{"id":"E","type":"T","A":1,"B":2,"C":3,"D":4}


04. Get entity ordering B, D, C
===============================
HTTP/1.1 200 OK
Content-Length: 147
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{"id":"E","type":"T","B":{"type":"BT","value":2,"metadata":{}},"D":{"type":"DT","value":4,"metadata":{}},"C":{"type":"CT","value":3,"metadata":{}}}


05. Get entity ordering (keyValues) B, D, C
===========================================
HTTP/1.1 200 OK
Content-Length: 39
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{"id":"E","type":"T","B":2,"D":4,"C":3}


--TEARDOWN--
brokerStop CB
dbDrop CB
