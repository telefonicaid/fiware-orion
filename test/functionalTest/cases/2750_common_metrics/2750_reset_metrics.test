# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Reset Metrics

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Send a GET /v2/entities
# 02. Ask for Metrics, see 1 Incoming Transaction
# 03. Reset metrics
# 04. Ask for Metrics, see 1 Incoming Transaction (the reset-request in step 03 :-)
# 05. Ask for Metrics, with ?reset=true to reset after responding
# 06. Ask for Metrics, see 1 Incoming Transaction (step 05)
#

echo "01. Send a GET /v2/entities"
echo "==========================="
orionCurl --url /v2/entities  --servicePath /SP/get/entities
echo
echo


echo "02. Ask for Metrics, see 1 Incoming Transaction"
echo "==============================================="
orionCurl --url /admin/metrics --servicePath /SP/get/metrics
echo
echo


echo "03. Reset metrics"
echo "================="
orionCurl --url /admin/metrics -X DELETE --servicePath /SP/delete/metrics
echo
echo


echo "04. Ask for Metrics, see 1 Incoming Transaction (the reset-request in step 03 :-)"
echo "================================================================================="
orionCurl --url /admin/metrics
echo
echo


echo "05. Ask for Metrics, with ?reset=true to reset after responding"
echo "==============================================================="
orionCurl --url /admin/metrics?reset=true --servicePath /SP5
echo
echo


echo "06. Ask for Metrics, see 1 Incoming Transaction (step 05)"
echo "========================================================="
orionCurl --url /admin/metrics
echo
echo


--REGEXPECT--
01. Send a GET /v2/entities
===========================
HTTP/1.1 200 OK
Content-Length: 2
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[]


02. Ask for Metrics, see 1 Incoming Transaction
===============================================
HTTP/1.1 200 OK
Content-Length: REGEX(\d+)
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "services": {
        "default-service": {
            "subservs": {
                "SP/get/entities": {
                    "incomingTransactionResponseSize": 2,
                    "incomingTransactions": 1,
                    "serviceTime": REGEX(.*)
                }
            },
            "sum": {
                "incomingTransactionResponseSize": REGEX(\d+),
                "incomingTransactions": 1,
                "serviceTime": REGEX(.*)
            }
        }
    },
    "sum": {
        "subservs": {
            "SP/get/entities": {
                "incomingTransactionResponseSize": 2,
                "incomingTransactions": 1,
                "serviceTime": REGEX(.*)
            }
        },
        "sum": {
            "incomingTransactionResponseSize": REGEX(\d+),
            "incomingTransactions": 1,
            "serviceTime": REGEX(.*)
        }
    }
}


03. Reset metrics
=================
HTTP/1.1 204 No Content
Content-Length: 0
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



04. Ask for Metrics, see 1 Incoming Transaction (the reset-request in step 03 :-)
=================================================================================
HTTP/1.1 200 OK
Content-Length: REGEX(\d+)
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "services": {
        "default-service": {
            "subservs": {
                "SP/delete/metrics": {
                    "incomingTransactions": 1,
                    "serviceTime": REGEX(.*)
                }
            },
            "sum": {
                "incomingTransactions": 1,
                "serviceTime": REGEX(.*)
            }
        }
    },
    "sum": {
        "subservs": {
            "SP/delete/metrics": {
                "incomingTransactions": 1,
                "serviceTime": REGEX(.*)
            }
        },
        "sum": {
            "incomingTransactions": 1,
            "serviceTime": REGEX(.*)
        }
    }
}


05. Ask for Metrics, with ?reset=true to reset after responding
===============================================================
HTTP/1.1 200 OK
Content-Length: REGEX(\d+)
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "services": {
        "default-service": {
            "subservs": {
                "SP/delete/metrics": {
                    "incomingTransactions": 1,
                    "serviceTime": REGEX(.*)
                },
                "root-subserv": {
                    "incomingTransactionResponseSize": 320,
                    "incomingTransactions": 1,
                    "serviceTime": REGEX(.*)
                }
            },
            "sum": {
                "incomingTransactionResponseSize": 320,
                "incomingTransactions": 2,
                "serviceTime": REGEX(.*)
            }
        }
    },
    "sum": {
        "subservs": {
            "SP/delete/metrics": {
                "incomingTransactions": 1,
                "serviceTime": REGEX(.*)
            },
            "root-subserv": {
                "incomingTransactionResponseSize": 320,
                "incomingTransactions": 1,
                "serviceTime": REGEX(.*)
            }
        },
        "sum": {
            "incomingTransactionResponseSize": 320,
            "incomingTransactions": 2,
            "serviceTime": REGEX(.*)
        }
    }
}


06. Ask for Metrics, see 1 Incoming Transaction (step 05)
=========================================================
HTTP/1.1 200 OK
Content-Length: REGEX(\d+)
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "services": {
        "default-service": {
            "subservs": {
                "SP5": {
                    "incomingTransactionResponseSize": REGEX(\d+),
                    "incomingTransactions": 1,
                    "serviceTime": REGEX(.*)
                }
            },
            "sum": {
                "incomingTransactionResponseSize": REGEX(\d+),
                "incomingTransactions": 1,
                "serviceTime": REGEX(.*)
            }
        }
    },
    "sum": {
        "subservs": {
            "SP5": {
                "incomingTransactionResponseSize": REGEX(\d+),
                "incomingTransactions": 1,
                "serviceTime": REGEX(.*)
            }
        },
        "sum": {
            "incomingTransactionResponseSize": REGEX(\d+),
            "incomingTransactions": 1,
            "serviceTime": REGEX(.*)
        }
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
