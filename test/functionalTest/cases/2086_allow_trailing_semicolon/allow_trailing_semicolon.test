# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Allow ONE trailing semicolon in q string filter

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. Create room1 with attr humidity=567
# 02. GET /v2/entities?q=humidity:567; - OK
# 03. GET /v2/entities?q=humidity:567;; - NOT OK
#

echo "01. Create room1 with attr humidity=567"
echo "======================================="
payload='{
  "id": "room1",
  "type": "VcLA",
  "humidity": {
    "value": 567
  }
}'
orionCurl --url /v2/entities --payload "${payload}"
echo
echo


echo "02. GET /v2/entities?q=humidity:567; - OK"
echo "========================================="
orionCurl --url '/v2/entities?q=humidity:567;'
echo
echo


echo "03. GET /v2/entities?q=humidity:567;; - NOT OK"
echo "=============================================="
orionCurl --url '/v2/entities?q=humidity:567;;'
echo
echo


--REGEXPECT--
01. Create room1 with attr humidity=567
=======================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/room1?type=VcLA
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET /v2/entities?q=humidity:567; - OK
=========================================
HTTP/1.1 200 OK
Content-Length: 85
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "humidity": {
            "metadata": {},
            "type": "Number",
            "value": 567
        },
        "id": "room1",
        "type": "VcLA"
    }
]


03. GET /v2/entities?q=humidity:567;; - NOT OK
==============================================
HTTP/1.1 400 Bad Request
Content-Length: 51
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "empty q-item",
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
