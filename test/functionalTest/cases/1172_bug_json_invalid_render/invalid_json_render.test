# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Bugfix for problem with JSON invalid characters

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. Update with \n in the JSON
# 02. Query entity
#

echo "01. Update with \n in the JSON"
echo "=============================="
payload='{
    "updateAction": "APPEND",
    "contextElements": [
        {
            "id": "Bug2",
            "isPattern": "false",
            "type": "Bug",
            "attributes": [
                {
                    "name": "foo",
                    "type": "string",
                    "value": "line1\nline2"
                }
            ]
        }
    ]
}'
orionCurl --url /v1/updateContext --payload "$payload"
#curl --header 'Content-Type: application/json' --header 'Accept: application/json' localhost:9999/v1/updateContext -d "$payload"
echo
echo


echo "02. Query entity"
echo "================"
orionCurl --url /v1/contextEntities/Bug2
#curl --header 'Accept: application/json' localhost:9999/v1/contextEntities/Bug2
echo
echo


--REGEXPECT--
01. Update with \n in the JSON
==============================
HTTP/1.1 200 OK
Content-Length: 193
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "foo",
                        "type": "string",
                        "value": ""
                    }
                ],
                "id": "Bug2",
                "isPattern": "false",
                "type": "Bug"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


02. Query entity
================
HTTP/1.1 200 OK
Content-Length: 182
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextElement": {
        "attributes": [
            {
                "name": "foo",
                "type": "string",
                "value": "line1\nline2"
            }
        ],
        "id": "Bug2",
        "isPattern": "false",
        "type": "Bug"
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
