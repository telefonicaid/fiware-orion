# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
KAFKA Notifications

--SHELL-INIT--
dbInit CB s1

# Using default KAFKA configuration in testEnv.sh
kafkaCreateTopics "${KAFKA_BOOTSTRAP_A}" orion
brokerStart CB 0-255 IPV4 -multiservice
accumulatorStart --pretty-print --bootstrapServers "${KAFKA_BOOTSTRAP_A}" --kafkaTopic "orion"

--SHELL--

#
# Hint:  A Kafka cluster accessible at localhost:9092,localhost:9094 is required for this .test:
#
#
# 01. POST /v2/entities, creating E1/T1
# 02. Subscribe to E1 on condition A2
# 03. Update entity attribute A1 to trigger notification
# 04. Dump accumulator to see notification
#


echo "01. POST /v2/entities, creating E1/T1"
echo "====================================="
payload='{
  "id": "E1",
  "type": "T1",
  "A1": {
    "value": 23,
    "type": "Float"
  },
  "A2": {
    "value": 720,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities --payload "$payload" --tenant s1
echo
echo


echo "02. Subscribe to E1 on condition A2"
echo "==================================="
payload='{
  "description": "Test subscription",
  "subject": {
    "entities": [
      {
        "id": "E1",
        "type": "T1"
      }
    ],
    "condition": {
      "attrs": [
        "A2"
      ]
    }
  },
  "notification": {
    "kafka": {
      "url": "kafka://localhost:9092,localhost:9094",
      "topic": "orion"
    },
    "attrs": [
      "A1"
    ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload" --tenant s1
echo
echo


echo "03. Update entity attribute A1 to trigger notification"
echo "======================================================"
payload='{
  "A1": {
    "value": 23,
    "type": "Float"
  },
  "A2": {
    "value": 520,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload" -X PATCH --tenant s1
echo
echo


# Not sure but sometimes a notification may be lost at the accumulator if we
# don't wait. Maybe the dump requests is faster than the storing of KAFKA notifications
# due to the lock in accumulator-server.py?
sleep 2s


echo "04. Dump accumulator to see notification"
echo "========================================"
accumulatorDump
echo
echo


--REGEXPECT--
01. POST /v2/entities, creating E1/T1
=====================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/E1?type=T1
Content-Length: 0



02. Subscribe to E1 on condition A2
===================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/subscriptions/REGEX([0-9a-f\-]{24})
Content-Length: 0



03. Update entity attribute A1 to trigger notification
======================================================
HTTP/1.1 204 No Content
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})



04. Dump accumulator to see notification
========================================
Kafka message at topic orion
Key: REGEX([0-9a-f\-]{24})
Headers:
  Fiware-Service: s1
  Fiware-Servicepath: /
Payload:
{
    "subscriptionId": "REGEX([0-9a-f\-]{24})",
    "data": [
        {
            "id": "E1",
            "type": "T1",
            "A1": {
                "type": "Float",
                "value": 23,
                "metadata": {}
            }
        }
    ]
}
=======================================


--TEARDOWN--
accumulatorStop
kafkaDestroyTopics "${KAFKA_BOOTSTRAP_A}" orion
brokerStop CB
dbDrop CB s1
