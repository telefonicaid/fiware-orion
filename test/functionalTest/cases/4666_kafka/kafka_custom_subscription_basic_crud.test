--NAME--
KAFKA custom subcription basic crud

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create kafkaCustom sub with payload
# 02. Create mqttCustom sub without payload
# 03. Create mqttCustom sub with null payload
# 04. Get subs
#

echo "01. Create kafka sub with payload"
echo "=================================================="
payload='{
  "description": "KAFKA sub with payload",
  "subject": {
    "entities": [
      {
        "id": "E1",
        "type": "T1"
      }
    ]
  },
  "notification": {
    "kafkaCustom": {
      "url": "kafka://localhost:9092",
      "topic": "orion_${dest}",
      "payload": "temperature:${temperature}"
    },
    "attrs": [
      "A1"
    ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create kafka sub without payload"
echo "====================================================="
payload='{
  "description": "KAFKA sub without payload",
