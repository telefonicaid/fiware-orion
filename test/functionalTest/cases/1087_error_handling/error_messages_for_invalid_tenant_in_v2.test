# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST /v2/entities with invalid tenant

--SHELL-INIT--
dbInit CB
brokerStart CB 0 IPv4 -multiservice

--SHELL--

#
# 01. POST /v2/entities with invalid tenant
#

echo "01. POST /v2/entities with invalid tenant"
echo "========================================="
payload='{
  "type": "room",
  "id": "room_0",
  "timestamp_0":
  {
    "type": "DateTime",
    "value": "017-06-17T07:21:24.238Z",
    "metadata": {
      "very_hot_1": 
      {
        "type": "alarm",
        "value": "Afe1BuMTcf"
      },
      "very_hot_0": 
      {
        "type": "alarm",
        "value": "Afe1BuMTcf"
      }
    }
  }
}'
orionCurl --url /v2/entities --payload "$payload" --servicePath "/test" --tenant "a.b"
echo
echo


--REGEXPECT--
01. POST /v2/entities with invalid tenant
=========================================
HTTP/1.1 400 Bad Request
Content-Length: 125
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "bad character in tenant name - only underscore and alphanumeric characters are allowed",
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
