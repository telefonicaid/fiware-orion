# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
HTTP-Tenant subscribe and update

--SHELL-INIT--
dbInit CB
dbInit ${CB_DB_NAME} t_01
dbInit ${CB_DB_NAME} t_02
brokerStart CB 0-255 IPV4 -multiservice
accumulatorStart  --pretty-print
accumulatorStart 127.0.0.1 $LISTENER2_PORT --pretty-print

--SHELL--

echo "1. Make a subscription for E/att on tenant t_01"
echo "+++++++++++++++++++++++++++++++++++++++++++++++"
url="/v1/subscribeContext"
payload='{
  "entities": [
    {
      "type": "Test",
      "isPattern": "false",
      "id": "E"
    }
  ],
  "attributes": [ ],
  "reference": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
  "duration": "PT1H",
  "notifyConditions": [
      {
          "type": "ONCHANGE",
          "condValues": [
              "att"
          ]
      }
  ]
}'
orionCurl --url "$url" --payload "${payload}" --tenant "t_01"
echo


echo "2. Make a subscription for E/att on tenant t_02"
echo "+++++++++++++++++++++++++++++++++++++++++++++++"
url="/v1/subscribeContext"
payload='{
  "entities": [
    {
      "type": "Test",
      "isPattern": "false",
      "id": "E"
    }
  ],
  "attributes": [ ],
  "reference": "http://127.0.0.1:'${LISTENER2_PORT}'/notify",
  "duration": "PT1H",
  "notifyConditions": [
      {
          "type": "ONCHANGE",
          "condValues": [
              "att"
          ]
      }
  ]
}'
orionCurl --url "$url" --payload "${payload}" --tenant "t_02"
echo


echo "3. Update t_01/E/att"
echo "++++++++++++++++++++"
url="/v1/updateContext"
payload='{
  "contextElements": [
    {
      "type": "Test",
      "isPattern": "false",
      "id": "E",
      "attributes": [
        {
          "name": "att",
          "type": "test",
          "value": "accu_t01"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url "$url" --payload "${payload}" --tenant "t_01"
echo


echo "4. Update t_02/E/att"
echo "++++++++++++++++++++"
url="/v1/updateContext"
payload='{
  "contextElements": [
    {
      "type": "Test",
      "isPattern": "false",
      "id": "E",
      "attributes": [
        {
          "name": "att",
          "type": "test",
          "value": "accu_t02"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url "$url" --payload "${payload}" --tenant "t_02"
echo


echo "5. Dump accumulator t_01"
echo "+++++++++++++++++++++++++"
accumulatorDump
echo


echo "6. Dump accumulator t_02"
echo "+++++++++++++++++++++++++"
accumulator2Dump
echo


