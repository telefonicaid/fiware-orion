# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Update compound attribute value with dots in keys

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity
# 02. Update entitiy attribute value with dots in keys
# 03. Get entity
#

echo "01. Create entity"
echo "================="
payload='{
  "type": "house",
  "id": "apartment_3",
  "temperature_2": {
    "value": 40
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Update entitiy attribute value with dots in keys"
echo "===================================================="
payload='{
  "temperature_2": {
    "rt.ty": "5678"
  }
}'
orionCurl --url '/v2/entities/apartment_3/attrs?options=keyValues' --payload "$payload"
echo
echo

echo "03. Get entity"
echo "=============="
orionCurl --url /v2/entities/apartment_3
echo
echo


--REGEXPECT--
01. Create entity
=================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/apartment_3?type=house
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Update entitiy attribute value with dots in keys
====================================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Get entity
==============
HTTP/1.1 200 OK
Content-Length: 117
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "id": "apartment_3",
    "temperature_2": {
        "metadata": {},
        "type": "StructuredValue",
        "value": {
            "rt.ty": "5678"
        }
    },
    "type": "house"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
