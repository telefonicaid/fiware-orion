# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
DEL Entity V2 /attrs (invalid method)

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/entities to create 8787GHY entity
# 02. DELETE /v2/entities/8787GHY/attrs
#

echo "01. POST /v2/entities to create 8787GHY entity"
echo "=============================================="
payload='{
  "id": "8787GHY",
  "type": "Car",
  "brand":{
    "type": "string",
    "value": "Mercedes Benz"
  },
  "speed":{
    "type": "number",
    "value" : "150"
  },
  "plateCountry": {
    "value" : "ES"
  },
  "madeInCountry": {
    "value" : "DE"
  },
  "model" : {
    "type": "myString",
    "value" : "Klasse C"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. DELETE /v2/entities/8787GHY/attrs"
echo "====================================="
orionCurl --url /v2/entities/8787GHY/attrs -X DELETE
echo
echo


--REGEXPECT--
01. POST /v2/entities to create 8787GHY entity
==============================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/8787GHY?type=Car
Content-Length: 0



02. DELETE /v2/entities/8787GHY/attrs
=====================================
HTTP/1.1 405 Method Not Allowed
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Allow: GET, PATCH, POST, PUT
Content-Type: application/json
Content-Length: 63

{
    "description": "method not allowed",
    "error": "MethodNotAllowed"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
