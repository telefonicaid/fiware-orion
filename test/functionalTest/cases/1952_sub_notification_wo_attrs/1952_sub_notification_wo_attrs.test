# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST Subscriptions V2 without attributes in notification field

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/subscriptions
# 02. GET /v2/subscriptions/ID2
#

echo "01. POST /v2/subscriptions"
echo "=========================="
payload='
{
    "subject": {
        "entities": [
            {
                "type": "Room",
                "idPattern": ".*"
            }
        ],
        "condition": {
            "attrs": [ "temperature" ],
            "expression": {
               "q": "temperature>40",
               "geometry": "point",
               "coords": "-40.4,-3.5",
               "georel": "near;minDistance:5000"
            }
         }
    },
    "notification": {
        "http": {
            "url": "http://localhost:1234"
        }
    },
    "expires": "2050-04-05T14:00:00.00Z",
    "throttling": 5
}
'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo

idSubscription=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")
echo "02. GET /v2/subscriptions/ID"
echo "============================"
orionCurl --url "/v2/subscriptions/${idSubscription}"
echo
echo


--REGEXPECT--
01. POST /v2/subscriptions
==========================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/subscriptions/REGEX([0-9a-f]{24})
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET /v2/subscriptions/ID
============================
HTTP/1.1 200 OK
Content-Length: 444
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "expires": "2050-04-05T14:00:00.000Z",
    "id": "REGEX([0-9a-f]{24})",
    "notification": {
        "attrs": [],
        "attrsFormat": "normalized",
        "covered": false,
        "http": {
            "url": "http://localhost:1234"
        },
        "onlyChangedAttrs": false
    },
    "status": "active",
    "subject": {
        "condition": {
            "attrs": [
                "temperature"
            ],
            "expression": {
                "coords": "-40.4,-3.5",
                "geometry": "point",
                "georel": "near;minDistance:5000",
                "q": "temperature>40"
            }
        },
        "entities": [
            {
                "idPattern": ".*",
                "type": "Room"
            }
        ]
    },
    "throttling": 5
}


--TEARDOWN--
brokerStop CB
dbDrop CB
