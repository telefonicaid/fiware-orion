# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Service path entity without type

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

# 01. Create E1 without type at servicePath /mine
# 02. Query on servicePath /mine and get E1

echo "01. Create E1 without type at servicePath /mine"
echo "==============================================="
payload='{
  "attributes" : [
    {
      "name" : "A",
      "type" : "string",
      "value" : "V"
    }
  ]
}'
orionCurl --servicePath '/mine' --url /v1/contextEntities/E1 --payload "${payload}"
echo
echo

echo "02. Query on servicePath /mine and get E1"
echo "========================================="
orionCurl --servicePath '/mine' --url /v1/contextEntities/E1
echo
echo

--REGEXPECT--
01. Create E1 without type at servicePath /mine
===============================================
HTTP/1.1 200 OK
Content-Length: 167
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "attributes": [
                {
                    "name": "A",
                    "type": "string",
                    "value": ""
                }
            ],
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ],
    "id": "E1",
    "isPattern": "false",
    "type": ""
}


02. Query on servicePath /mine and get E1
=========================================
HTTP/1.1 200 OK
Content-Length: 164
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextElement": {
        "attributes": [
            {
                "name": "A",
                "type": "string",
                "value": "V"
            }
        ],
        "id": "E1",
        "isPattern": "false",
        "type": ""
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
