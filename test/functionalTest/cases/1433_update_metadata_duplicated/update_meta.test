# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Update metadata changing type, not duplicated

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# Issue #1433 reports duplicated metada when updating metadata
# Changing type caused to be view as a different element
#
# 01. Create a metadata
# 02. GET the entity to make sure the creation worked
# 03. Update metadata changing type
# 04. GET the entity to make sure the update worked
#

echo "01. Create a metadata"
echo "====================="
payload='
{
    "type": "Room",
    "id": "Room10",
    "humidity": {
        "value": 78
    },
    "temperature": {
        "value": "celsius",
        "type": "34",
        "metadata": {
            "house_flat_1": {
                "type": "alarm",
                "value": "hot"
            },
            "house_flat_0": {
                "type": "alarm",
                "value": "icy"
            }
        }
    }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. GET the entity to make sure the creation worked"
echo "==================================================="
orionCurl --url /v2/entities/Room10
echo
echo


echo "03. Update metadata changing type"
echo "================================="
payload='
{
    "value": "celsius",
    "type": "34",
    "metadata": {
        "house_flat_1": {
            "value": "5678"
        },
        "house_flat_0": {
            "value": "1234"
        }
    }
}'
orionCurl --url /v2/entities/Room10/attrs/temperature --payload "$payload" -X PUT
echo
echo


echo "04. GET the entity to make sure the creation worked"
echo "==================================================="
orionCurl --url /v2/entities/Room10
echo
echo


--REGEXPECT--
01. Create a metadata
=====================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/Room10?type=Room
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET the entity to make sure the creation worked
===================================================
HTTP/1.1 200 OK
Content-Length: 234
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "humidity": {
        "metadata": {},
        "type": "Number",
        "value": 78
    },
    "id": "Room10",
    "temperature": {
        "metadata": {
            "house_flat_0": {
                "type": "alarm",
                "value": "icy"
            },
            "house_flat_1": {
                "type": "alarm",
                "value": "hot"
            }
        },
        "type": "34",
        "value": "celsius"
    },
    "type": "Room"
}


03. Update metadata changing type
=================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



04. GET the entity to make sure the creation worked
===================================================
HTTP/1.1 200 OK
Content-Length: 234
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "humidity": {
        "metadata": {},
        "type": "Number",
        "value": 78
    },
    "id": "Room10",
    "temperature": {
        "metadata": {
            "house_flat_0": {
                "type": "Text",
                "value": "1234"
            },
            "house_flat_1": {
                "type": "Text",
                "value": "5678"
            }
        },
        "type": "34",
        "value": "celsius"
    },
    "type": "Room"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
