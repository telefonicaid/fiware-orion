# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Query With Empty Attribute Vector, Results From CB and CP1 (NGSIv2 forwarding)

--SHELL-INIT--
dbInit CB
dbInit CP1
brokerStart CB
brokerStart CP1

--SHELL--

# Based in the test with same name (without fwd_v2 prefix in the file name) in cases/0787_cprs_full_functional_v2,
# which used NGSIv1 registrations
#
# 01. Update/APPEND E1/T1/A1+A2 in CB
# 02. Update/APPEND E1/T1/A3+A4+A5 in CP1
# 03. Register E1/T1/A1+A2-CP1 in CB
# 04. Query E1/T1/{} in CB
#

echo "01. Update/APPEND E1/T1/A1+A2 in CB"
echo "==================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "A1 in CB"
        },
        {
          "name": "A2",
          "type": "string",
          "value": "A2 in CB"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "02. Update/APPEND E1/T1/A3+A4+A5 in CP1"
echo "======================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A3",
          "type": "string",
          "value": "A3 in CP1"
        },
        {
          "name": "A4",
          "type": "string",
          "value": "A4 in CP1"
        },
        {
          "name": "A5",
          "type": "string",
          "value": "A5 in CP1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "03. Register E1/T1/A3+A4+A5-CP1 in CB"
echo "====================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A3", "A4", "A5" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "04. Query E1/T1/{} in CB"
echo "========================"
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ]
}'
orionCurl --url /v2/op/query --payload "$payload"
echo
echo


