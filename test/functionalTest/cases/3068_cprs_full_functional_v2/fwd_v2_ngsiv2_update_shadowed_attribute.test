# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Update With Shadowed Attribute (NGSIv2 forwarding)

--SHELL-INIT--
dbInit CB
dbInit CP1
brokerStart CB
brokerStart CP1

--SHELL--

# Based in the test with same name (without fwd_v2 prefix in the file name) in cases/0787_cprs_full_functional_v2,
# which used NGSIv1 registrations
#
# 01. Update/APPEND E1/T1/A1 in CP1
# 02. Update/APPEND E1/T1/A1 in CB
# 03. Register E1/T1/A1 in CB, provApp: CP1
# 04. Update/UPDATE E1/T1/A1 in CB
# 05. Query E1/T1/A1 in CP1 (untouched by 04)
# 06. Query E1/T1/A1 in CB (modified by 04)
#

echo "01. Update/APPEND E1/T1/A1 in CP1"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "A1 in CP1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "02. Update/APPEND E1/T1/A1 in CB"
echo "================================"
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "A1 in CB"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "03. Register E1/T1/A1 in CB, provApp: CP1"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A1" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "04. Update/UPDATE E1/T1/A1 in CB"
echo "================================"
payload='{
  "A1": "A1 modified by 04"
}'
orionCurl --url '/v2/entities/E1/attrs?type=T1&options=keyValues' --payload "$payload" -X PATCH
echo
echo


echo "05. Query E1/T1/A1 in CP1 (untouched by 04)"
echo "==========================================="
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ],
  "attributes": [
    "A1"
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "06. Query E1/T1/A1 in CB (modified by 04)"
echo "========================================="
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ],
  "attributes": [
    "A1"
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


