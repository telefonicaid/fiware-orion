# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Update With a False Registration and one more value in provider (NGSIv2 forwarding)

--SHELL-INIT--
dbInit CB
dbInit CP1
dbInit CP2
brokerStart CB
brokerStart CP1
brokerStart CP2

--SHELL--

# Based in the test with same name (without fwd_v2 prefix in the file name) in cases/0787_cprs_full_functional_v2,
# which used NGSIv1 registrations
#
# 01. Register E1/T1/A1-CP1 in CB
# 02. Register E1/T1/A2-CP2 in CB
# 03. Update/APPEND E1/T1/A2 in CP2
# 04. Update/UPDATE E1/T1/A1+A2 in CB (A2 OK, A1 NOT OK)
# 05. Query E1/T1/A2 in CP2 (A2 Via CB in step 04)
#

echo "01. Register E1/T1/A1-CP1 in CB"
echo "==============================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A1" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "02. Register E1/T1/A2-CP2 in CB"
echo "==============================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A2" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP2_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "03. Update/APPEND E1/T1/A2 in CP2"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A2",
          "type": "string",
          "value": "A2 in CP2"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP2_PORT
echo
echo


echo "04. Update/UPDATE E1/T1/A1+A2 in CB (A2 OK, A1 NOT OK)"
echo "======================================================"
payload='{
  "actionType": "update",
  "entities":
  [
    {
      "type": "T1",
      "id":   "E1",
      "A1": {
         "type": "string",
         "value": "A1 Via CB in step 04"
      },
      "A2": {
         "type": "string",
         "value": "A2 Via CB in step 04"
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "05. Query E1/T1/A2 in CP2"
echo "========================="
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ],
  "attributes": [
    "A2"
  ]
}'
orionCurl --url /v2/op/query --payload "$payload" --port $CP2_PORT
echo
echo


--REGEXPECT--
01. Register E1/T1/A1-CP1 in CB
===============================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/registrations/REGEX([0-9a-f\-]{24})
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Register E1/T1/A2-CP2 in CB
===============================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/registrations/REGEX([0-9a-f\-]{24})
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Update/APPEND E1/T1/A2 in CP2
=================================
HTTP/1.1 200 OK
Content-Length: 189
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "A2",
                        "type": "string",
                        "value": ""
                    }
                ],
                "id": "E1",
                "isPattern": "false",
                "type": "T1"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


04. Update/UPDATE E1/T1/A1+A2 in CB (A2 OK, A1 NOT OK)
======================================================
HTTP/1.1 404 Not Found
Content-Length: 109
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "Some of the following attributes were not updated: { E1-T1 : [A1] }",
    "error": "PartialUpdate"
}


05. Query E1/T1/A2 in CP2
=========================
HTTP/1.1 200 OK
Content-Length: 93
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "A2": {
            "metadata": {},
            "type": "string",
            "value": "A2 Via CB in step 04"
        },
        "id": "E1",
        "type": "T1"
    }
]


--TEARDOWN--
brokerStop CB
brokerStop CP1
brokerStop CP2
dbDrop CB
dbDrop CP1
dbDrop CP2
