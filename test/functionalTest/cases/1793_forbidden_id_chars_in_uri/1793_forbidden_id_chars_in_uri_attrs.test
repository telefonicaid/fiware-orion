# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Forbidden chars for attribute names in URIs

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. PUT entity attribute with forbidden char in ID
# 05. PUT entity attribute value with forbidden char in ID
# 03. GET entity attribute with forbidden char in ID
# 04. GET entity attrbute value with forbidden char in ID
#


echo "01. PUT entity attribute with forbidden char in ID"
echo "=================================================="
payload='{ "value": 1 }'
orionCurl --url '/v2/entities/E1/attrs/A&' -X PUT --payload "$payload" --json
echo
echo

echo "02. PUT entity attribute value with forbidden char in ID"
echo "========================================================"
payload='{"value":1}'
orionCurl --url '/v2/entities/E1/attrs/A&/value' -X PUT --payload "$payload" --json
echo
echo

echo "03. GET entity attribute with forbidden char in ID"
echo "=================================================="
orionCurl --url '/v2/entities/E1/attrs/A&' --json
echo
echo

echo "04. GET entity attrbute value with forbidden char in ID"
echo "======================================================="
orionCurl --url '/v2/entities/E1/attrs/A&/value' --json
echo
echo

--REGEXPECT--
01. PUT entity attribute with forbidden char in ID
==================================================
HTTP/1.1 400 Bad Request
Content-Length: 63
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "invalid character in URI",
    "error": "BadRequest"
}


02. PUT entity attribute value with forbidden char in ID
========================================================
HTTP/1.1 400 Bad Request
Content-Length: 63
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "invalid character in URI",
    "error": "BadRequest"
}


03. GET entity attribute with forbidden char in ID
==================================================
HTTP/1.1 400 Bad Request
Content-Length: 63
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "invalid character in URI",
    "error": "BadRequest"
}


04. GET entity attrbute value with forbidden char in ID
=======================================================
HTTP/1.1 400 Bad Request
Content-Length: 63
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "invalid character in URI",
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
