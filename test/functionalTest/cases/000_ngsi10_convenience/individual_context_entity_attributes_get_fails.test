--NAME--
Convenience Individual Context Entity - GET FAILS

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. get an entity +++++"
orionCurl --url "/v1/contextEntities/entity01/attributes"

--REGEXPECT--
+++++ 1. get an entity +++++
HTTP/1.1 200 OK
Content-Length: 376
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<contextElementResponse>
  <contextElement>
    <entityId type="" isPattern="false">
      <id>entity01</id>
    </entityId>
    <contextAttributeList/>
  </contextElement>
  <statusCode>
    <code>404</code>
    <reasonPhrase>No context element found</reasonPhrase>
    <details>Entity id: /entity01/</details>
  </statusCode>
</contextElementResponse>
--TEARDOWN--
brokerStop CB
