# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
JSON Response well formed for POST /v1/contextEntities/EID/attributes/A

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v1/contextEntities/EID/attributes/A and see response with valid JSON
# 02. Query EID/A
#


echo "01. POST /v1/contextEntities/EID/attributes/A and see response with valid JSON"
echo "=============================================================================="
payload='{
  "value": "10"
}'
orionCurl --url /v1/contextEntities/EID/attributes/A --payload "$payload"
echo
echo


echo "02. Query EID/A"
echo "==============="
payload='{
  "entities": [
    {
      "id":   "EID",
      "type": ""
    }
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


--REGEXPECT--
01. POST /v1/contextEntities/EID/attributes/A and see response with valid JSON
==============================================================================
HTTP/1.1 200 OK
Content-Length: 34
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "code": "200",
    "reasonPhrase": "OK"
}


02. Query EID/A
===============
HTTP/1.1 200 OK
Content-Length: 183
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "A",
                        "type": "",
                        "value": "10"
                    }
                ],
                "id": "EID",
                "isPattern": "false",
                "type": ""
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


--TEARDOWN--
brokerStop CB
dbDrop CB
