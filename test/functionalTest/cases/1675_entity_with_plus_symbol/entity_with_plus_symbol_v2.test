# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Entity with plus symbol in NGSIv2 API

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create entity +34666666666
# 02. Get entity +34666666666
#

echo "01. Create entity +34666666666"
echo "=============================="
payload='{
  "id": "+34666666666",
  "type": "thing",
  "temperature": {
    "value": "23",
    "type": "float"
  },
  "pressure": {
    "value": "720",
    "type": "integer"
  }
}
'
orionCurl --url /v2/entities  --payload "$payload"
echo
echo


echo "02. Get entity +34666666666"
echo "==========================="
orionCurl --url /v2/entities/+34666666666
echo
echo


--REGEXPECT--
01. Create entity +34666666666
==============================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/+34666666666?type=thing
Content-Length: 0



02. Get entity +34666666666
===========================
HTTP/1.1 200 OK
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Content-Type: application/json
Content-Length: 152

{
    "id": "+34666666666",
    "pressure": {
        "metadata": {},
        "type": "integer",
        "value": "720"
    },
    "temperature": {
        "metadata": {},
        "type": "float",
        "value": "23"
    },
    "type": "thing"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
