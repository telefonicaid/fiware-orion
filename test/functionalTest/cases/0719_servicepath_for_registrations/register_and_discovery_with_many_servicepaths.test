echo
echo


echo "05. Discovery of E.*/A1 with service path /a1/e1,/a1/e2,/a1/e3,/a1/e4"
echo "====================================================================="
payload='{
    "entities": [
        {
            "type": "T",
            "isPattern": "true",
            "id": "E.*"
        }
    ],
    "attributes" : [
        "A1"
    ]
}'
orionCurl --url /v1/registry/discoverContextAvailability --payload "${payload}" --servicePath /a1/e1,/a1/e2,/a1/e3,/a1/e4
echo
echo


