# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
PUT empty Entity Attribute

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
## 01. POST /v2/entities to create E1/A1=0
## 02. PUT /v2/entities/E1/attrs/A1/value (empty)


echo "01. POST /v2/entities to create E1/A1=0"
echo "======================================="
payload='{ "id": "E1", "type": "T1", "A1": 0 }'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo

echo "02. GET /v2/entities/E1/attrs/A1 (without payload)"  
echo "=================================================="  
orionCurl --url /v2/entities/E1/attrs/A1 --json -X PUT 
echo  
echo  

echo "03. PUT /v2/entities/E1/attrs/A1 (empty JSON object)"
echo "===================================================="
payload='{ }'
orionCurl --url /v2/entities/E1/attrs/A1 --payload "$payload" --json -X PUT
echo
echo



--REGEXPECT--
01. POST /v2/entities to create E1/A1=0
=======================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1
Date: REGEX(.*)



02. GET /v2/entities/E1/attrs/A1 (without payload)
==================================================
HTTP/1.1 411 Length Required
Content-Length: 91
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "Zero/No Content-Length in PUT/POST/PATCH request",
    "error": "LengthRequired"
}


03. PUT /v2/entities/E1/attrs/A1 (empty JSON object)
====================================================
HTTP/1.1 422 Unprocessable Entity
Content-Length: 136 
Content-Type: application/json
Date: REGEX(.*) 

{
    "description": "Request payload is missing some piece of information. Please, check Orion documentation.",
    "error": "InvalidModification"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

