# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Compound values with a dot in a key
--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create E1/A1
# 02. Update E1/A1, with compound value with a dot in a key of a keyvalue
# 03. GET E1/A1
#

echo "01. Create E1/A1"
echo "================"
payload='{
  "id": "E1",
  "A1": "234"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload"
echo
echo


echo "02. Update E1/A1, with compound value with a dot in a key of a keyvalue"
echo "======================================================================="
payload='{
  "value": {
    "rt.ty": "5678"
  }
}'
orionCurl --url /v2/entities/E1/attrs/A1 --payload "$payload" -X PUT
echo
echo


echo "03. GET E1/A1"
echo "============="
orionCurl --url /v2/entities/E1
echo
echo


--REGEXPECT--
01. Create E1/A1
================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=Thing
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Update E1/A1, with compound value with a dot in a key of a keyvalue
=======================================================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. GET E1/A1
=============
HTTP/1.1 200 OK
Content-Length: 97
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "StructuredValue",
        "value": {
            "rt.ty": "5678"
        }
    },
    "id": "E1",
    "type": "Thing"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
