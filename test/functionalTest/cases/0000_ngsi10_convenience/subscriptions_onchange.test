        "name": "pressure",
        "type": "clima",
        "value": "p2300"
      },
      {
        "name": "ligthstatus",
        "type": "light",
        "value": "L23"
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"


echo "2: ++++++++++++++++++++"
payload='{
