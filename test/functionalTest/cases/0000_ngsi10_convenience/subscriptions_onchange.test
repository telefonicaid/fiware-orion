--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart

--SHELL--

#
# 01. Creating a subscription on id OfficeRoom/Room, attr temperature+lightstatus
# 02. Creating entity OfficeRoom/Room with attrs pressure=p02+lightstatus=ls02, provoking a notification
# 03. Creating entity OfficeRoom/Room with attrs temperature=t03+lightstatus=ls03, provoking a notification
# 04. Modifying the subscription, setting the throttling to 6 seconds (previously no throttling was set)
# 05. Waiting more than 6 seconds to reset the throttling interval
# 06. Updating OfficeRoom, attrs pressure=p06+lightstatus=ls06 provoking a notification
# 07. Updating OfficeRoom, attrs pressure=p07+lightstatus=ls07 provoking NO notification (throttling)
# 08. Waiting more than 6 seconds to reset the throttling interval
# 09. Updating OfficeRoom, attr temperature=t09 provoking a notification
# 10. Updating OfficeRoom, attr pressure=p10 provoking NO notification (not part of subscription attrs)
# 11. Deleting the subscription
# 12. Updating OfficeRoom, attr temperature=t12 provoking NO notification (sub no longer exists)
# 13. Dumping accumulator, seeing 4 notifications (from step 02, 03, 06 and 09)
#

echo "01. Creating a subscription on id OfficeRoom/Room, attr temperature+lightstatus"
echo "==============================================================================="
payload='{
    "entities": [
        {
            "type": "Room",
            "isPattern": "false",
            "id": "OfficeRoom"
        }
    ],
    "attributes": [
        "temperature",
        "lightstatus"
    ],
    "reference": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
    "duration": "PT1H",
    "notifyConditions": [
        {
            "type": "ONCHANGE",
            "condValues": [
                "temperature",
                "lightstatus"
            ]
        }
    ]
}'
orionCurl --url /v1/contextSubscriptions --payload "$payload"
SUB_ID=$(echo "$_response" | grep subscriptionId | awk -F\" '{ print $4}')
echo
echo


echo "02. Creating entity OfficeRoom/Room with attrs pressure=p02+lightstatus=ls02, provoking a notification"
echo "======================================================================================================"
payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "OfficeRoom",
      "attributes": [
      {
        "name": "pressure",
        "type": "clima",
        "value": "p02"
      },
      {
        "name": "lightstatus",
        "type": "light",
        "value": "ls02"
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "03. Creating entity OfficeRoom/Room with attrs temperature=t03+lightstatus=ls03, provoking a notification"
echo "========================================================================================================="
payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "OfficeRoom",
      "attributes": [
      {
        "name": "temperature",
        "type": "degree",
        "value": "t03"
      },
      {
        "name": "lightstatus",
        "type": "light",
        "value": "ls03"
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "04a. GET subscription"
echo "====================="
orionCurl --url /v2/subscriptions
echo
echo


echo "04b. Modifying the subscription, setting the throttling to 6 seconds (previously no throttling was set)"
echo "======================================================================================================="
payload='{
    "subscriptionId": "'$SUB_ID'",
    "duration": "P1Y",
    "throttling": "PT6S"
}'
orionCurl --url /v1/contextSubscriptions/${SUB_ID} --payload "$payload" -X PUT
echo
echo


echo "04c. GET subscription"
echo "====================="
orionCurl --url /v2/subscriptions
echo
echo


echo "05. Waiting more than 6 seconds to reset the throttling interval"
echo "================================================================"
sleep 7
echo
echo


echo "06. Updating OfficeRoom, attrs pressure=p06+lightstatus=ls06 provoking a notification"
echo "====================================================================================="
payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "OfficeRoom",
      "attributes": [
      {
        "name": "pressure",
        "type": "clima",
        "value": "p06"
      },
      {
        "name": "lightstatus",
        "type": "light",
        "value": "ls06"
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "07. Updating OfficeRoom, attrs pressure=p07+lightstatus=ls07 provoking NO notification (throttling)"
echo "==================================================================================================="
payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "OfficeRoom",
      "attributes": [
      {
        "name": "pressure",
        "type": "clima",
        "value": "p07"
      },
      {
        "name": "lightstatus",
        "type": "light",
        "value": "ls07"
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "08. Waiting more than 6 seconds to reset the throttling interval"
echo "================================================================"
sleep 7
echo
echo


echo "09. Updating OfficeRoom, attr temperature=t09 provoking a notification"
echo "======================================================================"
payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "OfficeRoom",
      "attributes": [
      {
        "name": "temperature",
        "type": "degree",
        "value": "t09"
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "10. Updating OfficeRoom, attr pressure=p10 provoking NO notification (not part of subscription attrs)"
echo "====================================================================================================="
payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "OfficeRoom",
      "attributes": [
      {
        "name": "pressure",
        "type": "clima",
        "value": "p10"
      }
      ]
    }
  ],
  "updateAction": "UPDATE"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "11. Deleting the subscription"
echo "============================="
orionCurl --url "/v1/contextSubscriptions/${SUB_ID}" -X "DELETE"
echo
echo


echo "12. Updating OfficeRoom, attr temperature=t12 provoking NO notification (sub no longer exists)"
echo "=============================================================================================="
payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "OfficeRoom",
      "attributes": [
      {
        "name": "temperature",
        "type": "degree",
        "value": "t12"
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "13. Dumping accumulator, seeing 4 notifications (from step 02, 03, 06 and 09)"
echo "============================================================================="
accumulatorDump
echo
echo


