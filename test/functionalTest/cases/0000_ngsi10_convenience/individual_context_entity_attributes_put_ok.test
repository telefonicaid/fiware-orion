# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Individual Context Entity - PUT OK

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. Create an entity +++++"
url="/v1/updateContext"
payload='{
  "contextElements": [
  {
    "type": "Room",
    "isPattern": "false",
    "id": "entity01",
    "attributes": [
    {
      "name": "temperature",
      "type": "degree",
      "value": "11"
    },
    {
      "name": "lightstatus",
      "type": "light",
      "value": "L23"
    }
    ]
  }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url "$url" --payload "$payload"

echo "+++++ 2. add to the entity +++++"
url="/v1/contextEntities/entity01/attributes"
payload='{
  "attributes" : [
    {
      "name" : "temperature",
      "type" : "degree",
      "value" : "10"
    }
  ]
}'
orionCurl --url "$url" --payload "$payload" -X "PUT"

--REGEXPECT--
+++++ 1. Create an entity +++++
HTTP/1.1 200 OK
Content-Length: 255
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "temperature",
                        "type": "degree",
                        "value": ""
                    },
                    {
                        "name": "lightstatus",
                        "type": "light",
                        "value": ""
                    }
                ],
                "id": "entity01",
                "isPattern": "false",
                "type": "Room"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}
+++++ 2. add to the entity +++++
HTTP/1.1 200 OK
Content-Length: 137
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "attributes": [
                {
                    "name": "temperature",
                    "type": "degree",
                    "value": ""
                }
            ],
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}
--TEARDOWN--
brokerStop CB
dbDrop CB
