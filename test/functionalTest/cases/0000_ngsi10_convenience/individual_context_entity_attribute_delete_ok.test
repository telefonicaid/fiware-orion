# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Individual Context Entity Attribute - DELETE OK

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. create an entity +++++"
url="/v1/contextEntities/entity01"
payload='{
  "attributes" : [
    {
      "name" : "temperature",
      "type" : "degree",
      "value" : "10"
    }
  ]
}'
orionCurl --url "$url" --payload "$payload" --json

echo "+++++ 2. delete the entity attribute +++++"
orionCurl --url "/v1/contextEntities/entity01/attributes/temperature" -X "DELETE" --json

--REGEXPECT--
+++++ 1. create an entity +++++
HTTP/1.1 200 OK
Content-Length: 329
Content-Type: application/json
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "attributes": [
                {
                    "name": "temperature",
                    "type": "degree",
                    "value": ""
                }
            ],
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ],
    "id": "entity01",
    "isPattern": "false",
    "type": ""
}
+++++ 2. delete the entity attribute +++++
HTTP/1.1 200 OK
Content-Length: 46
Content-Type: application/json
Date: REGEX(.*)

{
    "code": "200",
    "reasonPhrase": "OK"
}
--TEARDOWN--
brokerStop CB
dbDrop CB
