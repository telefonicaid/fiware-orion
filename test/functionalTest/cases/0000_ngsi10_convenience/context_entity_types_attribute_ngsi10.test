--NAME--
Convenience NGSI10 Context Entity Types Attribute

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

# query for all entities of type "Room"
echo "1: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room/attributes/temperature" --json

# Add an entity of type Room, with one attribute: 'temperature'
echo "2: ++++++++++++++++++++"
url="/v1/updateContext"
payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "ConferenceRoom",
      "attributes": [
      {
        "name": "temperature",
        "type": "degree",
        "value": "c23",
        "metadatas": [
          {
            "name": "ID",
            "type": "integer",
            "value": "3"
          }
        ]
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url "$url" --payload "$payload" --json

# query for all entities of type "Room", attribute 'temperature'
echo "3: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room/attributes/temperature" --json

# Add another attribute for entity ConferenceRoom - 'pressure'
echo "4: ++++++++++++++++++++"
url="/v1/updateContext"

payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "ConferenceRoom",
      "attributes": [
      {
        "name": "pressure",
        "type": "mbar",
        "value": "1013",
        "metadatas": [
          {
            "name": "ID",
            "type": "integer",
            "value": "3"
          }
        ]
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url "$url" --payload "$payload" --json

# Now, query again for entities of type "Room", attribute 'temperature', making sure attribute 'pressure' isn't found
echo "5: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room/attributes/temperature" --json

# And, query for entities of type "Room", attribute 'pressure' ...
echo "6: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room/attributes/pressure" --json

# query for all entities of type "Room2", attribute 'temperature'
echo "7: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room2/attributes/temperature" --json

# DELETE is not allowed
echo "8: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room/attributes/temperature" -X "DELETE" --json

