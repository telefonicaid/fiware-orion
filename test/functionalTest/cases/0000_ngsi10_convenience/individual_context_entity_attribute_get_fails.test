# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Individual Context Entity Attribute - GET FAILS

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. get an entity +++++"
orionCurl --url "/v1/contextEntities/entity01/attributes/attr01"

--REGEXPECT--
+++++ 1. get an entity +++++
HTTP/1.1 200 OK
Content-Length: 105
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "statusCode": {
        "code": "404",
        "details": "Entity id: /entity01/",
        "reasonPhrase": "No context element found"
    }
}
--TEARDOWN--
brokerStop CB
dbDrop CB
