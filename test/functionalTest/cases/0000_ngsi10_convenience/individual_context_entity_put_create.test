--NAME--
Convenience Individual Context Entity - PUT CREATE

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. put an entity +++++"
url="/v1/contextEntities/entity01"
payload='{
  "attributes" : [
    {
      "name" : "temperature",
      "type" : "degree",
      "value" : "10"
    },
    {
      "name" : "pressure",
      "type" : "clima",
      "value" : "p23"
    }
  ]
}'
orionCurl --url "$url" --payload "$payload" -X "PUT"

