# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Individual Context Entity Attribute - PUT OK

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. create entity +++++"
url="/v1/contextEntities/Room1"
payload='{
  "attributes" : [
    {
      "name" : "temperature",
      "type" : "centigrade",
      "value" : "23"
    },
    {
      "name" : "pressure",
      "type" : "mmHg",
      "value" : "720"
    }
  ]
}'
orionCurl --url "$url" --payload "$payload" --json

echo "+++++ 2. put an entity with type +++++"
url="/v1/contextEntities/Room1/attributes/temperature"
payload='{
  "type": "centigrade",
  "value": "10"
}'
orionCurl --url "$url" --payload "$payload" -X "PUT" --json

echo "+++++ 3. query +++++"
orionCurl --url "/v1/contextEntities/Room1" --json

echo "+++++ 4. put an entity without type +++++"
url="/v1/contextEntities/Room1/attributes/temperature" 
payload='{
  "value": "31"
}'
orionCurl --url "$url" --payload "$payload" -X "PUT" --json

echo "+++++ 5. query again +++++"
orionCurl --url "/v1/contextEntities/Room1" --json

echo "+++++ 6. update without type +++++"
url="/v1/contextEntities/Room1/attributes/temperature"
payload='{
  "value": "39"
}'
orionCurl --url "$url" --payload "$payload" -X "PUT" --json

echo "+++++ 7. query +++++"
orionCurl --url "/v1/contextEntities/Room1/attributes/temperature" --json

echo "+++++ 8. update with type +++++"
url="/v1/contextEntities/Room1/attributes/temperature" 
payload='{
  "type": "Fahrenheit",
  "value": "99"
}'
orionCurl --url "$url" --payload "$payload" -X "PUT" --json

echo "+++++ 9. query (JSON) +++++"
orionCurl --url "/v1/contextEntities/Room1/attributes/temperature" --json

