# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience NGSI10 Context Entity Types

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

# query for all entities of type "Room"
echo "1: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room"

# Add an entity of type Room, with one attribute: 'temperature'
echo "2: ++++++++++++++++++++"
url="/v1/updateContext"
payload='{
  "contextElements": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "ConferenceRoom",
      "attributes": [
      {
        "name": "temperature",
        "type": "degree",
        "value": "c23",
        "metadatas": [
          {
            "name": "ID",
            "type": "integer",
            "value": "3"
          }
        ]
      }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url "$url" --payload "$payload"

# query for all entities of type "Room"
echo "3: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room"

# query for all entities of type "Room2"
echo "4: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room2"

# DELETE is not allowed
echo "5: ++++++++++++++++++++"
orionCurl --url "/v1/contextEntityTypes/Room" -X "DELETE"

--REGEXPECT--
