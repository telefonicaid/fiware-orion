# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Attribute Value Instance - PUT OK

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. creating base entity +++++"
url="/v1/contextEntities/Room1"
payload='{
  "attributes" : [
  {
    "name" : "temperature",
    "type" : "centigrade",
    "value" : "23",
    "metadatas" : [
      {
        "name" : "ID",
        "type" : "string",
        "value" : "ground"
      }
    ]
  },
  {
    "name" : "temperature",
    "type" : "centigrade",
    "value" : "23.5",
    "metadatas" : [
      {
        "name" : "ID",
        "type" : "string",
        "value" : "wall"
      }
    ]
  }
  ]
}'
orionCurl --url "$url" --payload "$payload"

echo "+++++ 2. lookup the entity +++++"
orionCurl --url "/v1/contextEntities/Room1"

echo "+++++ 3. change an attribute by valueID +++++"
url="/v1/contextEntities/Room1/attributes/temperature/ground"
payload='{
  "value": "18.4"
 }'
orionCurl --url "$url" --payload "$payload"  -X "PUT"

echo "+++++ 4. change an attribute by the other valueID in XML +++++"
url="/v1/contextEntities/Room1/attributes/temperature/wall"
payload='{
  "value": "17.8"
 }'
orionCurl --url "$url" --payload "$payload" -X "PUT"

echo "+++++ 5. lookup the entity again +++++"
orionCurl --url "/v1/contextEntities/Room1" 

