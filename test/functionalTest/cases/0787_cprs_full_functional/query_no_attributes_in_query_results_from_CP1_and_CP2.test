# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Query With Empty Attribute Vector, Results From CP1 and CP2

--SHELL-INIT--
dbInit CB
dbInit CP1
dbInit CP2
brokerStart CB
brokerStart CP1
brokerStart CP2

--SHELL--

#
# 01. Update/APPEND E1/T1/A1+A2 in CP1
# 02. Update/APPEND E1/T1/A3+A4+A5 in CP2
# 03. Register E1/T1/A1+A2-CP1 in CB
# 04. Register E1/T1/A3+A4+A5-CP2 in CB
# 05. Query E1/T1/{} in CB
#

echo "01. Update/APPEND E1/T1/A1+A2 in CP1"
echo "===================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "A1 in CP1"
        },
        {
          "name": "A2",
          "type": "string",
          "value": "A2 in CP1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "02. Update/APPEND E1/T1/A3+A4+A5 in CP2"
echo "======================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A3",
          "type": "string",
          "value": "A3 in CP2"
        },
        {
          "name": "A4",
          "type": "string",
          "value": "A4 in CP2"
        },
        {
          "name": "A5",
          "type": "string",
          "value": "A5 in CP2"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP2_PORT
echo
echo


echo "03. Register E1/T1/A1+A2-CP1 in CB"
echo "=================================="
payload='{
  "contextRegistrations": [
    {
      "entities": [
        {
           "type": "T1",
           "isPattern": "false",
           "id": "E1"
        }
      ],
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "isDomain": "false"
        },
        {
          "name": "A2",
          "type": "string",
          "isDomain": "false"
        }
      ],
      "providingApplication": "http://localhost:'${CP1_PORT}'/v1"
    }
 ],
 "duration": "P1M"
}'
orionCurl --url /v1/registry/registerContext --payload "$payload"
echo
echo


echo "04. Register E1/T1/A3+A4+A5-CP2 in CB"
echo "====================================="
payload='{
  "contextRegistrations": [
    {
      "entities": [
        {
           "type": "T1",
           "isPattern": "false",
           "id": "E1"
        }
      ],
      "attributes": [
        {
          "name": "A3",
          "type": "string",
          "isDomain": "false"
        },
        {
          "name": "A4",
          "type": "string",
          "isDomain": "false"
        },
        {
          "name": "A5",
          "type": "string",
          "isDomain": "false"
        }
      ],
      "providingApplication": "http://localhost:'${CP2_PORT}'/v1"
    }
 ],
 "duration": "P1M"
}'
orionCurl --url /v1/registry/registerContext --payload "$payload"
echo
echo


echo "05. Query E1/T1/{} in CB"
echo "========================"
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


