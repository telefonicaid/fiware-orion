--NAME--
V2 batch update UPDATE with idPattern (UPDATE)

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. Create E1/T1/A1=1,A2=1, using POST /v2/op/update with APPEND
# 02. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1
# 03. Modify A1=3, with idPattern(.*) using POST /v2/op/update with UPDATE, see error
# 04. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1
# 05. Modify A1=4, with idPattern(E.*) using POST /v2/op/update with UPDATE, see error
# 06. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1
# 07. Try to UPDATE non-existing attribute A3, with idPattern(.*), see error
# 08. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1
# 09. Try to UPDATE non-existing attribute A3, with idPattern(E.*), see error
# 10. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1
#


echo "01. Create E1/T1/A1=1,A2=1, using POST /v2/op/update with APPEND"
echo "================================================================"
payload='{
  "actionType": "append",
  "entities": [
    {
      "id": "E1",
      "type": "T1",
      "A1": {
        "value": 1
      },
      "A2": {
        "value": 1
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "02. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1"
echo "=============================================="
orionCurl --url /v2/entities/E1
echo
echo


echo "03. Modify A1=3, with idPattern(.*) using POST /v2/op/update with UPDATE, see error"
echo "==================================================================================="
payload='{
  "actionType": "update",
  "entities": [
    {
      "idPattern": ".*",
      "type": "T1",
      "A1": {
        "value": 3
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "04. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1"
echo "=============================================="
orionCurl --url /v2/entities/E1
echo
echo


echo "05. Modify A1=4, with idPattern(E.*) using POST /v2/op/update with UPDATE, see error"
echo "===================================================================================="
payload='{
  "actionType": "update",
  "entities": [
    {
      "idPattern": "E.*",
      "type": "T1",
      "A1": {
        "value": 4
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "06. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1"
echo "=============================================="
orionCurl --url /v2/entities/E1
echo
echo


echo "07. Try to UPDATE non-existing attribute A3, with idPattern(.*), see error"
echo "=========================================================================="
payload='{
  "actionType": "update",
  "entities": [
    {
      "idPattern": ".*",
      "type": "T1",
      "A3": {
        "value": 5
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "08. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1"
echo "=============================================="
orionCurl --url /v2/entities/E1
echo
echo


echo "09. Try to UPDATE non-existing attribute A3, with idPattern(E.*), see error"
echo "==========================================================================="
payload='{
  "actionType": "update",
  "entities": [
    {
      "idPattern": "E.*",
      "type": "T1",
      "A3": {
        "value": 5
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "10. GET /v2/entities/E1 to see E1/T1/A1=1,A2=1"
echo "=============================================="
orionCurl --url /v2/entities/E1
echo
echo


