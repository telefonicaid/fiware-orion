# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
DELETE Entity V2

--SHELL-INIT--
dbInit CB
brokerStart CB 51

--SHELL--

#
# 01. POST /v2/entities
# 02. GET /v2/entities/E1
# 03. DELETE /v2/entities/E1
# 04. GET /v2/entities/E1
#

echo "01. POST /v2/entities"
echo "===================="
payload='{
  "id": "E1",
  "type": "T1",
  "compattr": {
    "value": {
      "string":  "1",
      "number":  2,
      "bool":    true
    }
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. GET /v2/entities/E1"
echo "======================="
orionCurl --url /v2/entities/E1
echo
echo


echo "03. DELETE /v2/entities/E1"
echo "=========================="
orionCurl --url /v2/entities/E1 -X DELETE
echo
echo


echo "04. GET /v2/entities/E1"
echo "======================="
orionCurl --url /v2/entities/E1
echo
echo

--REGEXPECT--
01. POST /v2/entities
====================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET /v2/entities/E1
=======================
HTTP/1.1 200 OK
Content-Length: 121
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "compattr": {
        "metadata": {},
        "type": "StructuredValue",
        "value": {
            "bool": true,
            "number": 2,
            "string": "1"
        }
    },
    "id": "E1",
    "type": "T1"
}


03. DELETE /v2/entities/E1
==========================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



04. GET /v2/entities/E1
=======================
HTTP/1.1 404 Not Found
Content-Length: 95
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "The requested entity has not been found. Check type and id",
    "error": "NotFound"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

