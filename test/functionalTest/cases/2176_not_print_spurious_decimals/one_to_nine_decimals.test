# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Round number test from one to nine decimals

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create E1 with 10 attributes, from 1 to 10 decimal digits (0.9999... pattern)
# 02. Create E2 with 10 attributes, from 1 to 10 decimal digits (0.0..01 pattern)
# 03. Get E1 (A10 get rounded to next integer)
# 04. Get E2 (A10 get rounded to previous integer)
#

echo "01. Create E1 with 10 attributes, from 1 to 10 decimal digits (0.9999... pattern)"
echo "================================================================================="
payload='{
    "id": "E1",
    "type": "T",
    "A1":  42.9,
    "A2":  42.99,
    "A3":  42.999,
    "A4":  42.9999,
    "A5":  42.99999,
    "A6":  42.999999,
    "A7":  42.9999999,
    "A8":  42.99999999,
    "A9":  42.999999999,
    "A10": 42.9999999999
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload"
echo
echo


echo "02. Create E2 with 10 attributes, from 1 to 10 decimal digits (0.0..01 pattern)"
echo "==============================================================================="
payload='{
    "id": "E2",
    "type": "T",
    "A1":  42.1,
    "A2":  42.01,
    "A3":  42.001,
    "A4":  42.0001,
    "A5":  42.00001,
    "A6":  42.000001,
    "A7":  42.0000001,
    "A8":  42.00000001,
    "A9":  42.000000001,
    "A10": 42.0000000001
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload"
echo
echo


echo "03. Get E1 (A10 get rounded to next integer)"
echo "============================================"
orionCurl --url '/v2/entities/E1/attrs?options=keyValues'
echo
echo


echo "04. Get E2 (A10 get rounded to previous integer)"
echo "================================================"
orionCurl --url '/v2/entities/E2/attrs?options=keyValues'
echo
echo


--REGEXPECT--
01. Create E1 with 10 attributes, from 1 to 10 decimal digits (0.9999... pattern)
=================================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Create E2 with 10 attributes, from 1 to 10 decimal digits (0.0..01 pattern)
===============================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E2?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Get E1 (A10 get rounded to next integer)
============================================
HTTP/1.1 200 OK
Content-Length: 136
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": 42.9,
    "A10": 43,
    "A2": 42.99,
    "A3": 42.999,
    "A4": 42.9999,
    "A5": 42.99999,
    "A6": 42.999999,
    "A7": 42.9999999,
    "A8": 42.99999999,
    "A9": 42.999999999
}


04. Get E2 (A10 get rounded to previous integer)
================================================
HTTP/1.1 200 OK
Content-Length: 126
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": 42.1,
    "A10": 42,
    "A2": 42.01,
    "A3": 42.001,
    "A4": 42.0001,
    "A5": 42.00001,
    "A6": 42.000001,
    "A7": 42.0000001,
    "A8": 42.00000001,
    "A9": 42
}


--TEARDOWN--
brokerStop CB
dbDrop CB
