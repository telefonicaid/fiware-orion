# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
V2 query with existence checks of attributes

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create E1 with attrs A1,A2,A3
# 02. Create E2 with attrs A2,A3,A4
# 03. Create E3 with attrs A1,A2,A4,A5
# 04. GET entities that has A1 (see E1,E3)
# 05. GET entities that does NOT have A1 (see E2)
#


echo "01. Create E1 with attrs A1,A2,A3"
echo "================================="
payload='{
  "id": "E1",
  "type": "T1",
  "A1": 1,
  "A2": 2,
  "A3": 3
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "02. Create E2 with attrs A2,A3,A4"
echo "================================="
payload='{
  "id": "E2",
  "type": "T1",
  "A2": 1,
  "A3": 3,
  "A4": 4
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "03. Create E3 with attrs A1,A2,A4,A5"
echo "===================================="
payload='{
  "id": "E3",
  "type": "T1",
  "A1": 1,
  "A2": 2,
  "A4": 4,
  "A5": 5
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "04. GET entities that has A1 (see E1,E3)"
echo "========================================"
orionCurl --url '/v2/entities?q=A1&options=keyValues' --json
echo
echo


echo "05. GET entities that does NOT have A1 (see E2)"
echo "==============================================="
orionCurl --url '/v2/entities?q=!A1&options=keyValues' --json
echo
echo


--REGEXPECT--
01. Create E1 with attrs A1,A2,A3
=================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1
Date: REGEX(.*)



02. Create E2 with attrs A2,A3,A4
=================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E2
Date: REGEX(.*)



03. Create E3 with attrs A1,A2,A4,A5
====================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E3
Date: REGEX(.*)



04. GET entities that has A1 (see E1,E3)
========================================
HTTP/1.1 200 OK
Content-Length: 98
Content-Type: application/json
Date: REGEX(.*)

[
    {
        "A1": 1,
        "A2": 2,
        "A3": 3,
        "id": "E1",
        "type": "T1"
    },
    {
        "A1": 1,
        "A2": 2,
        "A4": 4,
        "A5": 5,
        "id": "E3",
        "type": "T1"
    }
]


05. GET entities that does NOT have A1 (see E2)
===============================================
HTTP/1.1 200 OK
Content-Length: 46
Content-Type: application/json
Date: REGEX(.*)

[
    {
        "A2": 1,
        "A3": 3,
        "A4": 4,
        "id": "E2",
        "type": "T1"
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB
