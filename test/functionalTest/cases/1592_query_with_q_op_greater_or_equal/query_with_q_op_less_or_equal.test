payload='{
    "id": "E3",
    "A1": { "value": 30 }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "04. GET all entities (3 entities)"
echo "================================="
orionCurl --url /v2/entities
echo
echo


echo "05. Erroneous GET entities with q=A1<="
echo "======================================"
orionCurl --url '/v2/entities?q=A1<='
echo
echo


echo "06. GET all entities with attribute A1<=9 (0 hits)"
echo "=================================================="
orionCurl --url '/v2/entities?q=A1<=0'
echo
echo


echo "07. GET all entities with attribute A1<=10 (1 hit)"
echo "=================================================="
orionCurl --url '/v2/entities?q=A1<=10'
echo
echo


echo "08. GET all entities with attribute A1<=11 (1 hit)"
echo "=================================================="
orionCurl --url '/v2/entities?q=A1<=11'
echo
echo


echo "09. GET all entities with attribute A1<=20 (2 hits)"
echo "==================================================="
orionCurl --url '/v2/entities?q=A1<=20'
echo
echo


echo "10. GET all entities with attribute A1<=21 (2 hits)"
echo "==================================================="
orionCurl --url '/v2/entities?q=A1<=21'
echo
echo


echo "11. GET all entities with attribute A1<=30 (3 hits)"
echo "==================================================="
orionCurl --url '/v2/entities?q=A1<=30'
echo
echo


echo "12. GET all entities with attribute A1<=31 (3 hits)"
echo "==================================================="
orionCurl --url '/v2/entities?q=A1<=31'
echo
echo



