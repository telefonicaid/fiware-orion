# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Slash Or No Slash Gives Same Result

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# Issue 828.
# GET /v1/contextEntityTypes/ should do the same thing as GET /v1/contextEntityTypes (no slash at the end of URI path)
#
# 01. Update/APPEND E1//A1 - entity with empty type
# 02. GET /v1/contextEntityTypes/ and see error 'service not found'
#

echo "01. Update/APPEND E1//A1 - entity with empty type"
echo "================================================="
payload='{
    "contextElements": [
        {
            "id" : "E1",
            "type" : "",
            "attributes" : [
                {
                    "name" : "A1",
                    "type" : "a",
                    "value" : "1"
                }
            ]
        }
    ],
    "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext/ --payload "$payload"
echo
echo


echo "02. GET /v1/contextEntityTypes/ and see error 'service not found'"
echo "================================================================="
orionCurl --url /v1/contextEntityTypes/
echo
echo


--REGEXPECT--
01. Update/APPEND E1//A1 - entity with empty type
=================================================
HTTP/1.1 200 OK
Content-Length: 182
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "A1",
                        "type": "a",
                        "value": ""
                    }
                ],
                "id": "E1",
                "isPattern": "false",
                "type": ""
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


02. GET /v1/contextEntityTypes/ and see error 'service not found'
=================================================================
HTTP/1.1 400 Bad Request
Content-Length: 129
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "orionError": {
        "code": "400",
        "details": "Service not found. Check your URL as probably it is wrong.",
        "reasonPhrase": "Bad Request"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
