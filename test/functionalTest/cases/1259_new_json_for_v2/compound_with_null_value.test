# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Compound With NULL Value, only APIv2

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. Create (POST /v2/entities) E1/A1=compound with null value inside
# 02. Get E1/A1
# 03. Modify E1/A1 (PATCH)
# 04. Get E1/A1
# 05. Modify E1/A1 (PUT)
# 06. Get E1/A1
#

echo "01. Create (POST /v2/entities) E1/A1=compound with null value inside"
echo "===================================================================="
payload='{
  "id": "E1",
  "type": "T",
  "A1": {
    "type": "AT1",
    "value": { "a": null, "b": 0 }
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Get E1/A1"
echo "============="
orionCurl --url /v2/entities/E1
echo
echo


echo "03. Modify E1/A1 (PATCH)"
echo "========================"
payload='{
  "A1": {
    "type": "AT1",
    "value": { "c": null }
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload" -X PATCH
echo
echo


echo "04. Get E1/A1"
echo "============="
orionCurl --url /v2/entities/E1
echo
echo


echo "05. Modify E1/A1 (PUT)"
echo "======================"
payload='{
  "A1": {
    "type": "AT1",
    "value": { "d": null }
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload" -X PUT
echo
echo


echo "06. Get E1/A1"
echo "============="
orionCurl --url /v2/entities/E1
echo
echo


--REGEXPECT--
01. Create (POST /v2/entities) E1/A1=compound with null value inside
====================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Get E1/A1
=============
HTTP/1.1 200 OK
Content-Length: 81
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "AT1",
        "value": {
            "a": null,
            "b": 0
        }
    },
    "id": "E1",
    "type": "T"
}


03. Modify E1/A1 (PATCH)
========================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



04. Get E1/A1
=============
HTTP/1.1 200 OK
Content-Length: 75
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "AT1",
        "value": {
            "c": null
        }
    },
    "id": "E1",
    "type": "T"
}


05. Modify E1/A1 (PUT)
======================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



06. Get E1/A1
=============
HTTP/1.1 200 OK
Content-Length: 75
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "AT1",
        "value": {
            "d": null
        }
    },
    "id": "E1",
    "type": "T"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
