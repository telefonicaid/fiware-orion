    "value": 21,
    "type":  "TA1"
  },
  "float_object": {
    "value": 22.1,
    "type":  "TA1"
  },
  "true_object": {
    "value": true,
    "type":  "TA1"
  },
  "false_object": {
    "value": false,
    "type":  "TA1"
