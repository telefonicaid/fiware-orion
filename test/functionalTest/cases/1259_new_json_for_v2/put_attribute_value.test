echo "27. PUT /v2/entities/E1/attrs/A1/value with TEXT payload -12.1"
echo "=============================================================="
payload='-12.1'
orionCurl --url /v2/entities/E1/attrs/A1/value --payload "$payload" -X PUT --in text/plain --out application/json
