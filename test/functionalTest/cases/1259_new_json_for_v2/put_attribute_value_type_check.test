# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
PUT Attribute Value with attribute type check

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create entity E2, with attribute A1 of type 'string'
# 02. PUT /v2/entities/E2/attrs/A1/value with TEXT payload 'abc'
# 03. GET /v2/entities/E2 to see A1 of type 'string' with value 'abc'
#

echo "01. Create entity E2, with attribute A1 of type 'string'"
echo "========================================================"
payload='{
  "id": "E2",
  "type": "T2",
  "A1": {
    "value": 1,
    "type": "string"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. PUT /v2/entities/E2/attrs/A1/value with TEXT payload 'abc'"
echo "=============================================================="
payload='"abc"'
orionCurl --url /v2/entities/E2/attrs/A1/value --payload "$payload" -X PUT --in text/plain
echo
echo


echo "03. GET /v2/entities/E2 to see A1 of type 'string' with value 'abc'"
echo "==================================================================="
orionCurl --url /v2/entities/E2
echo
echo


--REGEXPECT--
01. Create entity E2, with attribute A1 of type 'string'
========================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E2?type=T2
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. PUT /v2/entities/E2/attrs/A1/value with TEXT payload 'abc'
==============================================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. GET /v2/entities/E2 to see A1 of type 'string' with value 'abc'
===================================================================
HTTP/1.1 200 OK
Content-Length: 74
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "string",
        "value": "abc"
    },
    "id": "E2",
    "type": "T2"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
