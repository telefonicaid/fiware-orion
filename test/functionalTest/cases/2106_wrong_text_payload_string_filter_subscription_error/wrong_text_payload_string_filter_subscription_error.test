# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Wrong text payload when subscription string filter error occur

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create subscription without wrong q filter and get JSON error
#

echo "01. Create subscription without wrong q filter and get JSON error"
echo "================================================================="
payload='
{
        "notification": {
                "http": {
                        "url": "http://localhost:1234"
                },
                "attrs": ["temperature"]
        },
        "expires": "205604-05T14:00:00.00Z",
        "subject": {
                "entities": [{
                        "idPattern": ".*",
                        "type": "room"
                }],
                "condition": {
                        "attrs": ["temperature"],
                        "expression": {
                                "q": "<speed"
                        }
                }
        }
}
'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo



--REGEXPECT--
01. Create subscription without wrong q filter and get JSON error
=================================================================
HTTP/1.1 400 Bad Request
Content-Length: 69
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "empty left-hand-side in q-item",
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
