--NAME--
Update Forward Depends On Attribute Field (NGSIv2 forwarding)

--SHELL-INIT--
dbInit CB
dbInit CP1
dbInit CP2
dbInit CP3
brokerStart CB
brokerStart CP1
brokerStart CP2
brokerStart CP3

--SHELL--

# Based in the test with same name (without fwd_v2 prefix in the file name) in cases/0787_cprs_full_functional,
# which used NGSIv1 registrations
#
# 01. Update/APPEND E1/A1 in CB
# 02. Update/APPEND E1/A2+A4 in CP1
# 03. Update/APPEND E1/A3+A5 in CP2
# 04. Update/APPEND E1/A6 in CP3
# 05. Register E1/A2+A4 for CP1
# 06. Register E1/A3+A5 for CP2
# 07. Register E1 for CP3
# 08. Query CB for E1/A1+A2+A3+A4+A5+A6+A7
# 09. Update/UPDATE E1/A1+A2+A3+A4+A5+A6+A7 in CB
# 10. Query CB for E1/A1+A2+A3+A4+A5+A6+A7
# 11. Query CP1 for E1/{}
# 12. Query CP2 for E1/{}
# 13. Query CP3 for E1/{}
#

echo "01. Update/APPEND E1/A1 in CB"
echo "============================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "A1 in CB"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "02. Update/APPEND E1/A2+A4 in CP1"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A2",
          "type": "string",
          "value": "A2 in CP1"
        },
        {
          "name": "A4",
          "type": "string",
          "value": "A4 in CP1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "03. Update/APPEND E1/A3+A5 in CP2"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A3",
          "type": "string",
          "value": "A3 in CP2"
        },
        {
          "name": "A5",
          "type": "string",
          "value": "A5 in CP2"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP2_PORT
echo
echo


echo "04. Update/APPEND E1/A6 in CP3"
echo "=============================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A6",
          "type": "string",
          "value": "A6 in CP3"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP3_PORT
echo
echo


echo "05. Register E1/A2+A4 for CP1"
echo "============================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A2", "A4" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "06. Register E1/A3+A5 for CP2"
echo "============================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A3","A5" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP2_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "07. Register E1 for CP3"
echo "======================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP3_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "08. Query CB for E1/A1+A2+A3+A4+A5+A6+A7"
echo "========================================"
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ],
  "attributes": [
    "A1",
    "A2",
    "A3",
    "A4",
    "A5",
    "A6",
    "A7"
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


echo "09. Update/UPDATE E1/A1+A2+A3+A4+A5+A6+A7 in CB"
echo "==============================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "A1 in step 09"
        },
        {
          "name": "A2",
          "type": "string",
          "value": "A2 in step 09"
        },
        {
          "name": "A3",
          "type": "string",
          "value": "A3 in step 09"
        },
        {
          "name": "A4",
          "type": "string",
          "value": "A4 in step 09"
        },
        {
          "name": "A5",
          "type": "string",
          "value": "A5 in step 09"
        },
        {
          "name": "A6",
          "type": "string",
          "value": "A6 in step 09"
        },
        {
          "name": "A7",
          "type": "string",
          "value": "A7 in step 09"
        }
      ]
    }
  ],
  "updateAction": "UPDATE"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "10. Query CB for E1/A1+A2+A3+A4+A5+A6+A7"
echo "========================================"
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ],
  "attributes": [
    "A1",
    "A2",
    "A3",
    "A4",
    "A5",
    "A6",
    "A7"
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


echo "11. Query CP1 for E1/{}"
echo "======================="
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "12. Query CP2 for E1/{}"
echo "======================="
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload" --port $CP2_PORT
