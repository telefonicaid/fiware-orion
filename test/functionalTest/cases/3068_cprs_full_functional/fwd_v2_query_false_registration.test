# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Query With a False Registration (NGSIv2 forwarding)

--SHELL-INIT--
dbInit CB
dbInit CP1
brokerStart CB
brokerStart CP1

--SHELL--

# Based in the test with same name (without fwd_v2 prefix in the file name) in cases/0787_cprs_full_functional,
# which used NGSIv1 registrations
#
# 01. Register E1/T1/A1-CP1 in CB
# 02. Query E1/T1/A1 in CB
# 03. Query E1/T1/{} in CB
#

echo "01. Register E1/T1/A1-CP1 in CB"
echo "==============================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A1" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "02. Query E1/T1/A1 in CB"
echo "========================"
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ],
  "attributes": [
    "A1"
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


echo "03. Query E1/T1/{} in CB"
echo "========================"
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


--REGEXPECT--
01. Register E1/T1/A1-CP1 in CB
===============================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/registrations/REGEX([0-9a-f\-]{24})
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Query E1/T1/A1 in CB
========================
HTTP/1.1 200 OK
Content-Length: 70
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "errorCode": {
        "code": "404", 
        "reasonPhrase": "No context element found"
    }
}


03. Query E1/T1/{} in CB
========================
HTTP/1.1 200 OK
Content-Length: 70
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "errorCode": {
        "code": "404", 
        "reasonPhrase": "No context element found"
    }
}


--TEARDOWN--
brokerStop CB
brokerStop CP1
dbDrop CB
dbDrop CP1
