# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Query with ContextElement providingApplicationList (NGSIv2 forwarding)

--SHELL-INIT--
dbInit CB
dbInit CP1
dbInit CP2
dbInit CP3
brokerStart CB
brokerStart CP1
brokerStart CP2
brokerStart CP3

--SHELL--

# Based in the test with same name (without fwd_v2 prefix in the file name) in cases/0787_cprs_full_functional,
# which used NGSIv1 registrations
#
# 01. Register E1/T1/{} in CB, provApp: CP1
# 03. Register E1/T1/A3 in CB, provApp: CP2
# 04. Register E1/T1/A4 in CB, provApp: CP3
# 05. Update/APPEND E1/T1/A0 in CB
# 06. Update/APPEND E1/T1/A1 in CP1
# 07. Update/APPEND E1/T1/A2 in CP1
# 08. Update/APPEND E1/T1/A3 in CP2
# 09. Update/APPEND E1/T1/A4 in CP3
# 10. Query E1/T1/{}
# 11. Query E1/T1/{A0,A1,A2,A3,A4}
# 12. Convop: GET /v1/contextEntities/E1
#

echo "01. Register E1/T1/{} in CB, provApp: CP1"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "03. Register E1/T1/A3 in CB, provApp: CP2"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A3" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP2_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations/ --payload "$payload"
echo
echo


echo "04. Register E1/T1/A4 in CB, provApp: CP3"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A4" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP3_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations/ --payload "$payload"
echo
echo


echo "05. Update/APPEND E1/T1/A0 in CB"
echo "================================"
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A0",
          "type": "string",
          "value": "A0 in CB"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo



echo "06. Update/APPEND E1/T1/A1 in CP1"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "A1 in CP1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "07. Update/APPEND E1/T1/A2 in CP1"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A2",
          "type": "string",
          "value": "A2 in CP1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "08. Update/APPEND E1/T1/A3 in CP2"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A3",
          "type": "string",
          "value": "A3 in CP2"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP2_PORT
echo
echo



echo "09. Update/APPEND E1/T1/A4 in CP3"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A4",
          "type": "string",
          "value": "A4 in CP3"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP3_PORT
echo
echo


echo "10. Query E1/T1/{}"
echo "=================="
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


echo "11. Query E1/T1/{A0,A1,A2,A3,A4}"
echo "================================"
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ],
  "attributes": [
    "A0",
    "A1",
    "A2",
    "A3",
    "A4"
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


echo "12. Convop: GET /v1/contextEntities/E1"
echo "======================================"
orionCurl --url /v1/contextEntities/E1
echo
echo


