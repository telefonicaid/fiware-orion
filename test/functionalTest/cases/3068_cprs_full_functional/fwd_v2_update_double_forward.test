# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Double Forward Update (NGSIv2 forwarding)

--SHELL-INIT--
dbInit CB
dbInit CP1
dbInit CP2
brokerStart CB
brokerStart CP1
brokerStart CP2

--SHELL--

# Based in the test with same name (without fwd_v2 prefix in the file name) in cases/0787_cprs_full_functional,
# which used NGSIv1 registrations
#
# 01. Register E1/A1 on CB  with CP1 as providing application
# 02. Register E1/A1 on CP1 with CP2 as providing application
# 03. Update/APPEND E1/A1='On CP2' on CP2
# 04. Update/UPDATE E1/A1='Via CB' on CB
# 05. Query E1/A1 in CP2
#

echo "01. Register E1/A1 on CB  with CP1 as providing application"
echo "==========================================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A1" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "02. Register E1/A1 on CP1  with CP2 as providing application"
echo "============================================================"
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A1" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP2_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations/ --payload "$payload" --port $CP1_PORT
echo
echo


echo "03. Update/APPEND E1/A1='On CP2' on CP2"
echo "======================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "On CP2"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP2_PORT
echo
echo


echo "04. Update/UPDATE E1/A1='Via CB' on CB"
echo "======================================"
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "Via CB"
        }
      ]
    }
  ],
  "updateAction": "UPDATE"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "05. Query E1/A1 in CP2"
echo "======================"
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ],
  "attributes": [
    "A1"
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload" --port $CP2_PORT
echo
echo


