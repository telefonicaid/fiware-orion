# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Illegal JSON rendering for number attribute values with attributeFormat object

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create entity with attributes which are not strings
# 02. Get entity
# 03. Get entity with attributeFormat=objectÂ¡
#

echo '01. Create entity with attributes which are not strings'
echo '======================================================='
payload='{
    "id": "E",
    "type": "T",
    "A": "foo",
    "B": 30,
    "C": true,
    "D": null
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload"
echo
echo


echo '02. Get entity'
echo '=============='
orionCurl --url '/v1/contextEntities/E'
echo
echo


echo '02. Get entity with attributeFormat=object'
echo '=========================================='
orionCurl --url '/v1/contextEntities/E?attributesFormat=object'
echo
echo


--REGEXPECT--
01. Create entity with attributes which are not strings
=======================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Get entity
==============
HTTP/1.1 200 OK
Content-Length: 287
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextElement": {
        "attributes": [
            {
                "name": "A",
                "type": "Text",
                "value": "foo"
            },
            {
                "name": "B",
                "type": "Number",
                "value": 30
            },
            {
                "name": "C",
                "type": "Boolean",
                "value": true
            },
            {
                "name": "D",
                "type": "None",
                "value": null
            }
        ],
        "id": "E",
        "isPattern": "false",
        "type": "T"
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}


02. Get entity with attributeFormat=object
==========================================
HTTP/1.1 200 OK
Content-Length: 259
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextElement": {
        "attributes": {
            "A": {
                "type": "Text",
                "value": "foo"
            },
            "B": {
                "type": "Number",
                "value": 30
            },
            "C": {
                "type": "Boolean",
                "value": true
            },
            "D": {
                "type": "None",
                "value": null
            }
        },
        "id": "E",
        "isPattern": "false",
        "type": "T"
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
