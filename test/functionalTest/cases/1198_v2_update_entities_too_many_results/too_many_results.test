# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Update TooManyResults

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. POST /v2/entities (Room1-Room)
# 02. POST /v2/entities (Room1-Space)
# 03. PUT /v2/entities/Room1 getting TooManyResults error
#

echo "01. POST /v2/entities (Room1-Room)"
echo "=================================="
payload='{
  "id": "Room1",
  "type": "Room",
  "temp": "29"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "02. POST /v2/entities (Room1-Space)"
echo "=================================="
payload='{
  "id": "Room1",
  "type": "Space",
  "temp": "30"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "03. PUT /v2/entities/Room1 getting TooManyResults error"
echo "======================================================="
payload='{
  "temp": "31"
}'
orionCurl --url '/v2/entities/Room1?options=keyValues' --payload "$payload" --json
echo
echo


--REGEXPECT--
01. POST /v2/entities (Room1-Room)
==================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/Room1?type=Room
Date: REGEX(.*)



02. POST /v2/entities (Room1-Space)
==================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/Room1?type=Space
Date: REGEX(.*)



03. PUT /v2/entities/Room1 getting TooManyResults error
=======================================================
HTTP/1.1 409 Conflict
Content-Length: 98
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "More than one matching entity. Please refine your query",
    "error": "TooManyResults"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

