# 21.  Query equals polygon (0, 0) (24, 0) (0, 20) -> none
#

echo "01. Create point A (5, 5)"
echo "========================="
payload='{
  "id": "A",
  "type": "T",
  "location": {
    "value": "5, 5",
    "type": "geo:point"
  }
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "02. Create point B (9, 5)"
echo "========================="
payload='{
