# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Min lenght for IDs in V2 (attribute)

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity with attribute without type
# 02. Check attribute has type none
# 03. Create entity with attribute with type empty string
#

echo "01. Create entity with attribute without type"
echo "============================================="
payload='{
  "id": "E",
  "type": "T",
  "A1": {
    "value": 1
  }
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo

echo "02. Check attribute has type none"
echo "================================="
orionCurl --url /v2/entities/E --json
echo
echo

echo "03. Create entity with attribute with type empty string"
echo "======================================================="
payload='{
  "id": "E2",
  "type": "T",
  "A1": {
    "value": 1,
    "type": ""
  }
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo

--REGEXPECT--
01. Create entity with attribute without type
=============================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E?type=T
Date: REGEX(.*)



02. Check attribute has type none
=================================
HTTP/1.1 200 OK
Content-Length: 66
Content-Type: application/json
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "none",
        "value": 1
    },
    "id": "E",
    "type": "T"
}


03. Create entity with attribute with type empty string
=======================================================
HTTP/1.1 400 Bad Request
Content-Length: 88
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "attribute type length: 0, min length supported: 1",
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
