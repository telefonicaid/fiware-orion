# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Notification caused by update in not covered attribute

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create region entity
# 02. Create subscription
# 03. Update not covered attribute with APPEND
# 04. Dump accumulator count (only one notification)
#

echo "01. Create region entity"
echo "========================"
payload='{
"contextElements": [
    {
        "type": "region",
        "isPattern": "false",
        "id": "qa_ok",
        "attributes": [
        {
            "name": "sanity_status",
            "type": "string",
            "value": "OK"
        },
        {
            "name": "_timestamp",
            "type": "string",
            "value": "21"
        }
        ]
    }
],
"updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "02. Create subscription"
echo "======================="
payload='{
     "entities": [
         {
             "type": "region",
             "isPattern": "true",
             "id": ".*"
         }
     ],
     "attributes": [
         "sanity_status"
     ],
     "reference": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
     "duration": "P1M",
     "notifyConditions": [
         {
             "type": "ONCHANGE",
             "condValues": [
                 "sanity_status"
             ]
         }
     ]
}'
orionCurl --url /v1/subscribeContext --payload "$payload"
echo
echo


echo "03. Update not covered attribute with APPEND"
echo "============================================"
payload='{
"contextElements": [
    {
        "type": "region",
        "isPattern": "false",
        "id": "qa_ok",
        "attributes": [
        {
            "name": "sanity_status",
            "type": "string",
            "value": "OK"
        },
        {
            "name": "_timestamp",
            "type": "string",
            "value": "22"
        }
        ]
    }
],
"updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "04. Dump accumulator count (only one notification)"
echo "=================================================="
accumulatorCount
echo
echo


