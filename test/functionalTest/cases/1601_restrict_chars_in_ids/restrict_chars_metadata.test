--NAME--
Restrict chars in name and type metadata

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. POST /v2/entities meta name España
# 02. GET /v2/entities
# 03. POST /v2/entities meta type olé
# 04. GET /v2/entities
# 05. POST /v2/entities meta name A?
# 06. GET /v2/entities
# 07. POST /v2/entities meta type A?
# 08. GET /v2/entities
#

echo "01. POST /v2/entities meta name España"
echo "======================================"
payload='
{
    "attr01": {
        "metadata": {
            "España": {
                "value": "m1"
            }
        },
        "type": "AT",
        "value": "06"
    },
    "id": "E1",
    "type": "T1"
}
'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "02. GET /v2/entities/E1"
echo "======================="
orionCurl --url /v2/entities/E1 --json
echo
echo


