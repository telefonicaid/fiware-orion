# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience NGSI9 Context Entity Type Attribute Container

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

echo "0: ++++++++++++++++++++"
url="/v1/registry/contextEntityTypes/Room/attributes/temperature"
payload='{
  "duration" : "PT1H",
  "providingApplication" : "http://kz.tid.es/abc"
}'
orionCurl --url "$url" --payload "$payload"

REG_ID=$(echo "$_response" | grep registrationId | awk -F\" '{ print $4}')

echo "1: ++++++++++++++++++++"
url="/v1/registry/contextEntityTypes/Room/attributes/temperature"
payload='{
  "duration" : "PT2H",
  "providingApplication" : "http://kz.tid.es/abc",
  "registrationId": "'$REG_ID'"
}'
orionCurl --url "$url" --payload "$payload"

echo "2: ++++++++++++++++++++"
url="/v1/registry/contextEntityTypes/Room/attributes/temperature"
payload='{
  "duration" : "PT3H",
  "providingApplication" : "http://kz.tid.es/abc",
  "registrationId": "012301230123012301230123"
}'
orionCurl --url "$url" --payload "$payload"

echo "3: ++++++++++++++++++++"
orionCurl --url "/v1/registry/contextEntityTypes/Room/attributes/temperature"

--REGEXPECT--
0: ++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 63
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "PT1H",
    "registrationId": "REGEX([0-9a-f]{24})"
}
1: ++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 63
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "PT2H",
    "registrationId": "REGEX([0-9a-f]{24})"
}
2: ++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 170
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "errorCode": {
        "code": "404",
        "details": "registration id: /012301230123012301230123/",
        "reasonPhrase": "No context element found"
    },
    "registrationId": "012301230123012301230123"
}
3: ++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 211
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextRegistrationResponses": [
        {
            "contextRegistration": {
                "attributes": [
                    {
                        "name": "temperature",
                        "type": ""
                    }
                ],
                "entities": [
                    {
                        "id": "",
                        "isPattern": "false",
                        "type": "Room"
                    }
                ],
                "providingApplication": "http://kz.tid.es/abc"
            }
        }
    ]
}
--TEARDOWN--
brokerStop CB
dbDrop CB
