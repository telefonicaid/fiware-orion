# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Update attr to null

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01.  Create entity with six attrs value X and type T1
# 02 . Get entity and see six attrs value X and type T1
# 03a. Update attr A with value null and type T2 using PATCH on entity
# 03b. Update attr B with value null and type T2 using POST on entity
# 03c. Update attr C with value null and type T2 using PUT on attr
# 03d. Update attr D with value null and type T2 using batch update UPDATE
# 03e. Update attr E with value null and type T2 using batch update APPEND
# 03f. Update attr F with attr value null directly
# 04.  Get entity and see five attrs value null and type T2 and one with value null and type T1
#

echo "01. Create entity with six attrs value X and type T1"
echo "===================================================="
payload='{
  "id": "E",
  "type": "T",
  "A": {
    "value": "X",
    "type": "T1"
  },
  "B": {
    "value": "X",
    "type": "T1"
  },
  "C": {
    "value": "X",
    "type": "T1"
  },
  "D": {
    "value": "X",
    "type": "T1"
  },
  "E": {
    "value": "X",
    "type": "T1"
  },
  "F": {
    "value": "X",
    "type": "T1"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Get entity and see six attrs value X and type T1"
echo "===================================================="
orionCurl --url /v2/entities/E
echo
echo


echo "03a. Update attr A with value null and type T2 using PATCH on entity"
echo "===================================================================="
payload='{
  "A": {
    "type": "T2",
    "value": null
  }
}'
orionCurl --url /v2/entities/E/attrs --payload "$payload" -X PATCH
echo
echo


echo "03b. Update attr B with value null and type T2 using POST on entity"
echo "===================================================================="
payload='{
  "B": {
    "type": "T2",
    "value": null
  }
}'
orionCurl --url /v2/entities/E/attrs --payload "$payload" -X POST
echo
echo


echo "03c. Update attr C with value null and type T2 using PUT on attr"
echo "================================================================"
payload='{
  "type": "T2",
  "value": null
}'
orionCurl --url /v2/entities/E/attrs/C --payload "$payload" -X PUT
echo
echo


echo "03d. Update attr D with value null and type T2 using batch update UPDATE"
echo "========================================================================"
payload='{
  "actionType": "update",
  "entities":
  [
    {
      "type": "T",
      "id":   "E",
      "D": {
         "type": "T2",
         "value": null
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "03d. Update attr E with value null and type T2 using batch update APPEND"
echo "========================================================================"
payload='{
  "actionType": "append",
  "entities":
  [
    {
      "type": "T",
      "id":   "E",
      "E": {
         "type": "T2",
         "value": null
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "03f. Update attr F with attr value null directly"
echo "================================================"
payload='null'
orionCurl --url /v2/entities/E/attrs/F/value --payload "$payload" --in text -X PUT
echo
echo


echo "04. Get entity and see five attrs value null and type T2 and one with value null and type T1"
echo "============================================================================================"
orionCurl --url /v2/entities/E
echo
echo


