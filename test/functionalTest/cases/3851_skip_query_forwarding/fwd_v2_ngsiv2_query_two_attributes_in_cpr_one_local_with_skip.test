# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Two Attributes In CPr One Local (NGSIv2 forwarding) with skipForwarding

--SHELL-INIT--
dbInit CB
dbInit CP1
dbInit CP2
brokerStart CB
brokerStart CP1
brokerStart CP2

--SHELL--

# Based in the test cases/3068_cprs_full_functional/fwd_v2_ngsiv2_query_found_and_not_found_locally_and_remote.test
# But using ?options=skipForwarding in all queries (thus causing different results)
#
# 01. Update/APPEND E1/T1/A1 in CP1
# 02. Update/APPEND E1/T1/A2 in CP1
# 03. Update/APPEND E2/T1/A4 in CP2
# 04. Update/APPEND E1/T1/A3 in CB
# 05. Register E1/T1/A1 in CB, provApp: CP1
# 06. Register E1/T1/A2 in CB, provApp: CP1
# 07. Register E2/T1/A4 in CB, provApp: CP2
# 08. Query E1+E2/T1/A1+A2+A3+A4 (Find E1-A3 in CB, E1-A1+A2 in CP1, E2-A4 in CP2)
#


echo "01. Update/APPEND E1/T1/A1 in CP1"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A1",
          "type": "string",
          "value": "A1 in CP1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "02. Update/APPEND E1/T1/A2 in CP1"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A2",
          "type": "string",
          "value": "A2 in CP1"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "03. Update/APPEND E2/T1/A4 in CP2"
echo "================================="
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E2",
      "attributes": [
        {
          "name": "A4",
          "type": "string",
          "value": "A4 in CP2"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --port $CP2_PORT
echo
echo


echo "04. Update/APPEND E1/T1/A3 in CB"
echo "================================"
payload='{
  "contextElements": [
    {
      "type": "T1",
      "id":   "E1",
      "attributes": [
        {
          "name": "A3",
          "type": "string",
          "value": "A3 in CB"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "05. Register E1/T1/A1 in CB, provApp: CP1"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A1" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "06. Register E1/T1/A2 in CB, provApp: CP1"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A2" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "07. Register E2/T1/A4 in CB, provApp: CP2"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E2"
      }
    ],
    "attrs": [ "A4" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP2_PORT}'/v2"
    }
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "08. Query E1+E2/T1/A1+A2+A3+A4 (Find E1-A3 in CB, CPs are skipped)"
echo "=================================================================="
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    },
    {
      "id":   "E2",
      "type": "T1"
    }
  ],
  "attributes": [
    "A1",
    "A2",
    "A3",
    "A4"
  ]
}'
orionCurl --url /v2/op/query?options=skipForwarding --payload "$payload"
echo
echo


