# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Restrict chars in name and type metadata (old set)

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. POST /v2/entities meta name Espa(a
# 02. POST /v2/entities meta type ol)
# 03. POST /v2/entities meta name A;
#

echo "01. POST /v2/entities meta name Espa(a"
echo "======================================"
payload='
{
    "attr01": {
        "metadata": {
            "Espa(a": {
                "value": "m1"
            }
        },
        "type": "AT",
        "value": "06"
    },
    "id": "E1",
    "type": "T1"
}
'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "02. POST /v2/entities meta type ol)"
echo "==================================="
payload='
{
    "attr01": {
        "metadata": {
            "m1": {
                "type": "ol)",
                "value": "m1"
            }
        },
        "type": "AT",
        "value": "06"
    },
    "id": "E1",
    "type": "T1"
}
'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "03. POST /v2/entities meta name A;"
echo "=================================="
payload='
{
    "attr01": {
        "metadata": {
            "A;": {
                "value": "m1"
            }
        },
        "type": "AT",
        "value": "06"
    },
    "id": "E1",
    "type": "T1"
}
'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


--REGEXPECT--
01. POST /v2/entities meta name Espa(a
======================================
HTTP/1.1 400 Bad Request
Content-Length: 74
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "Invalid characters in metadata name",
    "error": "BadRequest"
}


02. POST /v2/entities meta type ol)
===================================
HTTP/1.1 400 Bad Request
Content-Length: 74
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "Invalid characters in metadata type",
    "error": "BadRequest"
}


03. POST /v2/entities meta name A;
==================================
HTTP/1.1 400 Bad Request
Content-Length: 74
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "Invalid characters in metadata name",
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
