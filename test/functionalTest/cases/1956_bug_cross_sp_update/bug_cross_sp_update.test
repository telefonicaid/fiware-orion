# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Test to check the fix to the bug of cross servicepath update

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# Before bugfix steps 4 and 5 shown different results
#
# 01. Create entity at SP /aaa
# 02. Create entity at SP /
# 03. Update entity at SP /
# 04. Check that entity at SP / receives the update
# 05. Check that entity at SP /add didn't received the update

echo '01. Create entity at SP /aaa'
echo '============================'
payload='{
    "id": "E",
    "type": "T",
    "param1": {
        "value": "foo",
        "type": "T"
    },
    "sp": {
        "value": "aaa"
    }
}'
orionCurl --url '/v2/entities' --payload "$payload" --servicePath '/aaa'
echo
echo


echo '02. Create entity at SP /'
echo '========================='
payload='{
    "id": "E",
    "type": "T",
    "param1": {
        "value": "bar",
        "type": "Tbis"
    }
}'
orionCurl --url '/v2/entities' --payload "$payload"
echo
echo


echo '03. Update entity at SP /'
echo '========================='
payload='{
    "contextElements": [
        {
            "type": "T",
            "isPattern": "false",
            "id": "E",
            "attributes": [
                {
                    "name": "param1",
                    "type": "T",
                    "value": "new"
                }
            ]
        }
    ],
    "updateAction": "APPEND"
}
'
orionCurl --url '/v1/updateContext' --payload "$payload"
echo
echo


echo '04. Check that entity at SP / receives the update'
echo '================================================='
orionCurl --url /v2/entities/E --servicePath '/'
echo
echo


echo '05. Check that entity at SP /add did not received the update'
echo '============================================================'
orionCurl --url /v2/entities/E --servicePath '/aaa'
echo
echo


--REGEXPECT--
01. Create entity at SP /aaa
============================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Create entity at SP /
=========================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Update entity at SP /
=========================
HTTP/1.1 200 OK
Content-Length: 186
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "param1",
                        "type": "T",
                        "value": ""
                    }
                ],
                "id": "E",
                "isPattern": "false",
                "type": "T"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


04. Check that entity at SP / receives the update
=================================================
HTTP/1.1 200 OK
Content-Length: 71
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "id": "E",
    "param1": {
        "metadata": {},
        "type": "T",
        "value": "new"
    },
    "type": "T"
}


05. Check that entity at SP /add did not received the update
============================================================
HTTP/1.1 200 OK
Content-Length: 120
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "id": "E",
    "param1": {
        "metadata": {},
        "type": "T",
        "value": "foo"
    },
    "sp": {
        "metadata": {},
        "type": "Text",
        "value": "aaa"
    },
    "type": "T"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
