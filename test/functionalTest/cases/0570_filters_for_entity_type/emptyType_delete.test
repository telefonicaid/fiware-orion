# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
DELETE /v1/ Individual Entities with !exist=type

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 1. Create entity E1, without type and with attribute A
# 2. Create entity E1, with type T1 and with attribute A2
# 3. DELETE E1/<empty>
# 4. Lookup E1/<empty> (not found)
# 5. Lookup E1/T1 (found)
#
# NOTE
# We have to start with the creation of the entity with type == <empty>
# because if there already exists an entity with the same ID, the updateContext
# with empty type will match that entity and do an UPDATE of that entity instead
# of creating a new entity with empty type. This is how the broker works.
#

echo "1. Create entity E1, without type and with attribute A"
echo "======================================================="
payload='{
  "contextElements": [
    {
      "id": "E1",
      "type": "",

      "attributes": [
        {
          "name": "A",
          "type": "T",
          "value": "222"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "2. Create entity E1, with type T1 and with attribute A2"
echo "======================================================"
payload='{
  "contextElements": [
    {
      "id": "E1",
      "type": "T1",
      "attributes": [
        {
          "name": "A2",
          "type": "T2",
          "value": "22"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "3. DELETE E1/<empty>"
echo "==================================================================="
orionCurl --url '/v1/contextEntities/E1?!exist=entity::type' -X DELETE
echo
echo


echo "4. Lookup E1/<empty> (not found)"
echo "========================================================================="
orionCurl --url '/v1/contextEntities/E1?!exist=entity::type'
echo
echo


echo "5. Lookup E1/T1 (found)"
echo "========================================================================="
orionCurl --url '/v1/contextEntities/E1?exist=entity::type'
echo
echo

--REGEXPECT--
1. Create entity E1, without type and with attribute A
=======================================================
HTTP/1.1 200 OK
Content-Length: 181
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "A",
                        "type": "T",
                        "value": ""
                    }
                ],
                "id": "E1",
                "isPattern": "false",
                "type": ""
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


2. Create entity E1, with type T1 and with attribute A2
======================================================
HTTP/1.1 200 OK
Content-Length: 185
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "A2",
                        "type": "T2",
                        "value": ""
                    }
                ],
                "id": "E1",
                "isPattern": "false",
                "type": "T1"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


3. DELETE E1/<empty>
===================================================================
HTTP/1.1 200 OK
Content-Length: 34
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "code": "200",
    "reasonPhrase": "OK"
}


4. Lookup E1/<empty> (not found)
=========================================================================
HTTP/1.1 200 OK
Content-Length: 158
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextElement": {
        "id": "E1",
        "isPattern": "false",
        "type": ""
    },
    "statusCode": {
        "code": "404",
        "details": "Entity id: /E1/",
        "reasonPhrase": "No context element found"
    }
}


5. Lookup E1/T1 (found)
=========================================================================
HTTP/1.1 200 OK
Content-Length: 164
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextElement": {
        "attributes": [
            {
                "name": "A2",
                "type": "T2",
                "value": "22"
            }
        ],
        "id": "E1",
        "isPattern": "false",
        "type": "T1"
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
