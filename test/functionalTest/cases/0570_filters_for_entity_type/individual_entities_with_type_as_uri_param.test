# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
/v1/ Individual Entities with URI param entity::type

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 1. Create entity E1, with type T1 and with attribute A1
# 2. Create entity E1, with type T2 and with attribute A2
# 3. Lookup E1/T1 using   GET /v1/contextEntities/E1?entity::type=T1
# 4. Lookup E1/T2 using   GET /v1/contextEntities/E1?entity::type=T2
#

echo "1. Create entity E1, with type T1 and with attribute A1"
echo "======================================================="
payload='{
  "contextElements": [
    {
      "id": "E1",
      "type": "T1",

      "attributes": [
        {
          "name": "A1",
          "type": "T1",
          "value": "11"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "2. Create entity E1, with type T2 and with attribute A2"
echo "======================================================="
payload='{
  "contextElements": [
    {
      "id": "E1",
      "type": "T2",
      "attributes": [
        {
          "name": "A2",
          "type": "T2",
          "value": "22"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "3. Lookup E1/T1 using   GET /v1/contextEntities/E1?entity::type=T1"
echo "=================================================================="
orionCurl --url '/v1/contextEntities/E1?entity::type=T1'
echo
echo


echo "4. Lookup E1/T2 using   GET /v1/contextEntities/E1?entity::type=T2"
echo "=================================================================="
orionCurl --url '/v1/contextEntities/E1?entity::type=T2'
echo
echo


--REGEXPECT--
