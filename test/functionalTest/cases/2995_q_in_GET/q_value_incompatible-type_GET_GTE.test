# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Q filter in GET for GTE of incompatible type of attribute value

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity E1 with attr t == 20
# 02. GET E*, with a filter q=t>=aString - NO MATCH
# 03. GET E*, with a filter q=t>=20 - MATCH
#

echo "01. Create entity E1 with attr t == 20"
echo "======================================"
payload='{
  "id": "E1",
  "t": {
    "value": 20
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. GET E*, with a filter q=t>=aString - NO MATCH"
echo "================================================="
orionCurl --url "/v2/entities?q=t>=aString"
echo
echo


echo "03. GET E*, with a filter q=t>=20 - MATCH"
echo "========================================="
orionCurl --url "/v2/entities?q=t>=20"
echo
echo


--REGEXPECT--
01. Create entity E1 with attr t == 20
======================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=Thing
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET E*, with a filter q=t>=aString - NO MATCH
=================================================
HTTP/1.1 200 OK
Content-Length: 2
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[]


03. GET E*, with a filter q=t>=20 - MATCH
=========================================
HTTP/1.1 200 OK
Content-Length: 75
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "id": "E1",
        "t": {
            "metadata": {},
            "type": "Number",
            "value": 20
        },
        "type": "Thing"
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB
