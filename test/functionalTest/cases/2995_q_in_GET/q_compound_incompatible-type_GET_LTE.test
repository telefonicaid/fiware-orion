# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Q filter in GET for LTE of attribute compound item with incompatible type

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity E1 with attr t having a compound 'b.c'.d == 20
# 02. GET E*, attribute 't' with a filter q=t.'b.c'.d<=aString - NO MATCH
# 03. GET E*, attribute 't' with a filter q=t.'b.c'.d<=20 - MATCH
#

echo "01. Create entity E1 with attr t having a compound 'b.c'.d == 20"
echo "================================================================"
payload='{
  "id": "E1",
  "t": {
    "type": "StructuredValue",
    "value": {
      "b.c": {
        "d": 20
      }
    }
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. GET E*, attribute 't' with a filter q=t.'b.c'.d<=aString - NO MATCH"
echo "======================================================================="
orionCurl --url "/v2/entities?q=t.'b.c'.d<=aString"
echo
echo


echo "03. GET E*, attribute 't' with a filter q=t.'b.c'.d<=20 - MATCH"
echo "==============================================================="
orionCurl --url "/v2/entities?q=t.'b.c'.d<=20"
echo
echo


--REGEXPECT--
01. Create entity E1 with attr t having a compound 'b.c'.d == 20
================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=Thing
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET E*, attribute 't' with a filter q=t.'b.c'.d<=aString - NO MATCH
=======================================================================
HTTP/1.1 200 OK
Content-Length: 2
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[]


03. GET E*, attribute 't' with a filter q=t.'b.c'.d<=20 - MATCH
===============================================================
HTTP/1.1 200 OK
Content-Length: 98
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "id": "E1",
        "t": {
            "metadata": {},
            "type": "StructuredValue",
            "value": {
                "b.c": {
                    "d": 20
                }
            }
        },
        "type": "Thing"
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB
