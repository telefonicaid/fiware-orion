# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST Entities V2 Compound inside attribute object

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. POST /v2/entities
# 02. GET /v2/entities
#

echo "01. POST /v2/entities"
echo "===================="
payload='{
  "id": "E1",
  "type": "T1",
  "attr01": {
    "type": "Compound-Object",
    "value": { "a":"1", "b":2, "c": true }
  },
  "attr02": {
    "type": "Compound-Vector",
    "value":  [ "a", "b", "c" ]
  }
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "02. GET /v2/entities/E1"
echo "======================="
orionCurl --url /v2/entities/E1 --json
echo
echo


--REGEXPECT--
01. POST /v2/entities
====================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Date: REGEX(.*)



02. GET /v2/entities/E1
=======================
HTTP/1.1 200 OK
Content-Length: 178
Content-Type: application/json
Date: REGEX(.*)

{
    "attr01": {
        "metadata": {},
        "type": "Compound-Object",
        "value": {
            "a": "1",
            "b": 2,
            "c": true
        }
    },
    "attr02": {
        "metadata": {},
        "type": "Compound-Vector",
        "value": [
            "a",
            "b",
            "c"
        ]
    },
    "id": "E1",
    "type": "T1"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
