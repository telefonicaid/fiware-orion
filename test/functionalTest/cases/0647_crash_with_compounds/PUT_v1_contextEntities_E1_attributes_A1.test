        {
            "contextElement": {
                "attributes": [
                    {
                        "metadatas": [
                            {
                                "name": "ID",
                                "type": "string",
                                "value": "253"
                            }
                        ],
                        "name": "A",
                        "type": "AT1",
                        "value": ""
                    }
                ],
                "id": "E",
                "isPattern": "false",
                "type": "T"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


