# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST Subscriptions V2 q expression (less than)

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart

--SHELL--

#
# 01. Create subscription with q: temperature<20
# 02. Create entity with t=35 (not notif)
# 03. Update entity to t=20 (not notif)
# 04. Update entity to t=15 (notif)
# 05. Dump accumulator (1 notifications)
#

echo "01. Create subscription with q: temperature<20"
echo "=============================================="
payload='
{
    "subject": {
        "entities": [
            {
                "id": "E1",
                "type": "T"
            }
        ],
        "condition": {
            "attributes": [ "temperature" ],
            "expression": {
               "q": "temperature<20"
            }
         }
    },
    "notification": {
        "callback": "http://localhost:'$LISTENER_PORT'/notify",
        "attributes": ["temperature" ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}
'
orionCurl --url /v2/subscriptions --payload "$payload" --json
echo
echo


echo "02. Create entity with t=35 (not notif)"
echo "======================================"
payload='{
  "id": "E1",
  "type": "T",
  "temperature": 35
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "03. Update entity to t=20 (not notif)"
echo "====================================="
payload='{
  "temperature": 20
}'
orionCurl --url '/v2/entities/E1?options=keyValues' --payload "$payload" --json -X PATCH
echo
echo


echo "04. Update entity to t=15 (notif)"
echo "================================="
payload='{
  "temperature": 15
}'
orionCurl --url '/v2/entities/E1?options=keyValues' --payload "$payload" --json -X PATCH
echo
echo


echo "05. Get accumulator dump (1 notifications)"
echo "=========================================="
accumulatorDump
echo
echo

--REGEXPECT--
01. Create subscription with q: temperature<20
==============================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/subscriptions/REGEX([0-9a-f]{24})
Date: REGEX(.*)



02. Create entity with t=35 (not notif)
======================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T
Date: REGEX(.*)



03. Update entity to t=20 (not notif)
=====================================
HTTP/1.1 204 No Content
Content-Length: 0
Date: REGEX(.*)



04. Update entity to t=15 (notif)
=================================
HTTP/1.1 204 No Content
Content-Length: 0
Date: REGEX(.*)



05. Get accumulator dump (1 notifications)
==========================================
POST http://localhost:REGEX(\d+)/notify
Content-Length: 464
User-Agent: orion/REGEX(\d+\.\d+\.\d+.*)
Host: localhost:REGEX(\d+)
Accept: application/xml, application/json
Content-Type: application/json; charset=utf-8

{
  "subscriptionId" : "REGEX([0-9a-f]{24})",
  "originator" : "localhost",
  "contextResponses" : [
    {
      "contextElement" : {
        "type" : "T",
        "isPattern" : "false",
        "id" : "E1",
        "attributes" : [
          {
            "name" : "temperature",
            "type" : "",
            "value" : 15
          }
        ]
      },
      "statusCode" : {
        "code" : "200",
        "reasonPhrase" : "OK"
      }
    }
  ]
}
=======================================


--TEARDOWN--
brokerStop CB
accumulatorStop $LISTENER_PORT
dbDrop CB
