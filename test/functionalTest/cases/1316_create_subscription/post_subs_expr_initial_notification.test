# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST Subscriptions V2 q expression in initial notification

--SHELL-INIT--
dbInit CB
brokerStart CB 0
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create E1 temperature=20, humidity=80
# 02. Create E2 temperature=30, humidity=70
# 03. Create E3 temperature=40, humidity=60
# 04. Create E4 temperature=50, humidity=50
# 05. Create E5 temperature=60, humidity=40
# 06. Subscribe: q=temperature<60;humidity==61..83
# 07. Dump accumulator (1 notification with E1+E2)
#

echo "01. Create E1 temperature=20, humidity=80"
echo "========================================="
payload='{
  "id": "E1",
  "type": "T",
  "temperature": 20,
  "humidity": 80,
  "status": "OK"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "02. Create E2 temperature=30, humidity=70"
echo "========================================="
payload='{
  "id": "E2",
  "type": "T",
  "temperature": 30,
  "humidity": 70,
  "status": "ERR"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "03. Create E3 temperature=40, humidity=60"
echo "========================================="
payload='{
  "id": "E3",
  "type": "T",
  "temperature": 40,
  "humidity": 60,
  "status": "OK"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "04. Create E4 temperature=50, humidity=50"
echo "========================================="
payload='{
  "id": "E4",
  "type": "T",
  "temperature": 50,
  "humidity": 50,
  "status": "ERR"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "05. Create E5 temperature=60, humidity=40"
echo "========================================="
payload='{
  "id": "E5",
  "type": "T",
  "temperature": 60,
  "humidity": 40,
  "status": "OK"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "06. Subscribe: q=temperature<60;humidity==61..83"
echo "================================================"
payload='
{
    "subject": {
        "entities": [
            {
                "idPattern": "E.*",
                "type": "T"
            }
        ],
        "condition": {
            "attributes": [ ],
            "expression": {
               "q": "temperature<60;humidity==61..83"
            }
         }
    },
    "notification": {
        "callback": "http://localhost:'$LISTENER_PORT'/notify",
        "attributes": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}
'
orionCurl --url /v2/subscriptions --payload "$payload" --json
echo
echo


echo "07. Dump accumulator (1 notification with E1+E2)"
echo "================================================"
accumulatorDump
echo
echo


