# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST Subscriptions V2 q expression (equal enum string)

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create subscription with q: colour==black,white
# 02. Create entity with colour=green (not notif)
# 03. Update entity to colour=white (notif)
# 04. Update entity to colour=red (not notif)
# 05. Update entity to colour=black (notif)
# 06. Dump accumulator (2 notifications)
#

echo "01. Create subscription with q: colour==black,white"
echo "==================================================="
payload='
{
    "subject": {
        "entities": [
            {
                "id": "E1",
                "type": "T"
            }
        ],
        "condition": {
            "attrs": [ ],
            "expression": {
               "q": "colour==black,white"
            }
         }
    },
    "notification": {
        "http": {"url": "http://localhost:'$LISTENER_PORT'/notify"},
        "attrs": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}
'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create entity with colour=green (not notif)"
echo "==============================================="
payload='{
  "id": "E1",
  "type": "T",
  "colour": "green"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload"
echo
echo


echo "03. Update entity to colour=white (notif)"
echo "========================================="
payload='{
  "colour": "white"
}'
orionCurl --url '/v2/entities/E1/attrs?options=keyValues' --payload "$payload" -X PATCH
echo
echo


echo "04. Update entity to colour=red (not notif)"
echo "==========================================="
payload='{
  "colour": "red"
}'
orionCurl --url '/v2/entities/E1/attrs?options=keyValues' --payload "$payload" -X PATCH
echo
echo


echo "05. Update entity to colour=black (notif)"
echo "========================================="
payload='{
  "colour": "black"
}'
orionCurl --url '/v2/entities/E1/attrs?options=keyValues' --payload "$payload" -X PATCH
echo
echo


echo "06. Get accumulator dump (2 notifications)"
echo "=========================================="
accumulatorDump
echo
echo


