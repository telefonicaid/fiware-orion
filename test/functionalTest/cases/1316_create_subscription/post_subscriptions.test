# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST Subscriptions V2

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/subscriptions
# 02. GET /v2/subscriptions/ID
#

echo "01. POST /v2/subscriptions"
echo "=========================="
payload='
{
    "subject": {
        "entities": [
            {
                "type": "Room"
            }
        ],
        "condition": {
            "attributes": [ "temperature" ],
            "expression": {
               "q": "temperature>40",
               "geometry": "_geometry_",
               "coords": "_coords_",
               "georel": "_georel_"
            }
         }
    },
    "notification": {
        "callback": "http://localhost:1234",
        "attributes": ["temperature", "humidity"],
        "throttling": 5
    },
    "expires": "2016-04-05T14:00:00.00Z"
}
'
orionCurl --url /v2/subscriptions --payload "$payload" --json
echo
echo

idSubscription=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")
echo "02. GET /v2/subscriptions/ID"
echo "============================"
orionCurl --url "/v2/subscriptions/${idSubscription}" --json
echo
echo


--REGEXPECT--
01. POST /v2/subscriptions
==========================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/subscriptions/REGEX([0-9a-f]{24})
Date: REGEX(.*)



02. GET /v2/subscriptions/ID
============================
HTTP/1.1 200 OK
Content-Length: 386
Content-Type: application/json
Date: REGEX(.*)

{
    "expires": "2016-04-05T14:00:00.00Z",
    "id": "REGEX([0-9a-f]{24})",
    "notification": {
        "attributes": [
            "humidity",
            "temperature"
        ],
        "callback": "http://localhost:1234"
    },
    "status": "active",
    "subject": {
        "condition": {
            "attributes": [
                "temperature"
            ],
            "expression": {
                "coords": "_coords_",
                "geometry": "_geometry_",
                "georel": "_georel_",
                "q": "temperature>40"
            }
        },
        "entities": [
            {
                "id": "",
                "idPattern": ".*",
                "type": ""
            }
        ]
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB

