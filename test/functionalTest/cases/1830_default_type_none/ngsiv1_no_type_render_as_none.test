# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Rendering default type in NGSIv2 for entity/attribute/metadata created using NGSIv1

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create entity E using NGSIv1 without type in entity, attribute and metadata
# 02. Get entity using NGSIv1 operation
# 03. Get entity using NGSIv2 operation
#


echo "01. Create entity E using NGSIv1 without type in entity, attribute and metadata"
echo "==============================================================================="
payload='{
    "contextElements": [
        {
            "isPattern": "false",
            "id": "E",
            "attributes": [
                {
                    "name": "A",
                    "value": "foo",
                    "metadatas": [
                      {
                        "name": "M",
                        "value": "bar"
                      }
                    ]
                }
            ]
        }
    ],
    "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "02. Get entity using NGSIv1 operation"
echo "====================================="
orionCurl --url /v1/contextEntities/E
echo
echo


echo "03. Get entity using NGSIv2 operation"
echo "====================================="
orionCurl --url /v2/entities/E
echo
echo


--REGEXPECT--
01. Create entity E using NGSIv1 without type in entity, attribute and metadata
===============================================================================
HTTP/1.1 200 OK
Content-Length: 230
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "metadatas": [
                            {
                                "name": "M",
                                "type": "",
                                "value": "bar"
                            }
                        ],
                        "name": "A",
                        "type": "",
                        "value": ""
                    }
                ],
                "id": "E",
                "isPattern": "false",
                "type": ""
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


02. Get entity using NGSIv1 operation
=====================================
HTTP/1.1 200 OK
Content-Length: 210
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextElement": {
        "attributes": [
            {
                "metadatas": [
                    {
                        "name": "M",
                        "type": "",
                        "value": "bar"
                    }
                ],
                "name": "A",
                "type": "",
                "value": "foo"
            }
        ],
        "id": "E",
        "isPattern": "false",
        "type": ""
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}


03. Get entity using NGSIv2 operation
=====================================
HTTP/1.1 200 OK
Content-Length: 106
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A": {
        "metadata": {
            "M": {
                "type": "Text",
                "value": "bar"
            }
        },
        "type": "Text",
        "value": "foo"
    },
    "id": "E",
    "type": "Thing"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
