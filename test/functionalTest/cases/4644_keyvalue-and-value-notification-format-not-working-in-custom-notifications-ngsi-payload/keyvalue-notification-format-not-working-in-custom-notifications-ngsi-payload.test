# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
keyValue notification format is not working in notifications

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create testing entity
# 02. Create sub
# 03. Update entity
# 04. Dump accumulator
#

echo "01. Create testing entity"
echo "========================="
payload='{
  "id": "contador1",
  "type": "WaterMeter",
  "TimeInstant": {
    "type": "DateTime",
    "value": "2025-02-10T16:41:00.000Z",
    "metadata": {}
  },
  "waterConsumption": {
    "type": "Number",
    "value": 20,
    "metadata": {}
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Create sub"
echo "=============="
payload='{
  "subject": {
    "entities": [
      {
        "idPattern": ".*",
        "type": "WaterMeter"
      }
    ],
    "condition": {
      "attrs": [
        "TimeInstant"
      ],
      "alterationTypes": [
        "entityUpdate"
      ],
      "notifyOnMetadataChange": true
    }
  },
  "notification": {
    "attrs": [
      "TimeInstant",
      "vol",
      "waterConsumption"
    ],
    "onlyChangedAttrs": false,
    "attrsFormat": "keyValues",
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "ngsi": {
        "vol": {
          "type": "Number",
          "value": "${waterConsumption - metadata.waterConsumption.previousValue}",
          "metadata": {
            "evalPriority": {
              "type": "Number",
              "value": 1
            }
          }
        }
      }
    },
    "covered": false
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "03. Update entity"
echo "================="
payload='{
  "TimeInstant": {
    "type": "DateTime",
    "value": "2025-02-10T16:41:00.000Z",
    "metadata": {}
  },
  "waterConsumption": {
    "type": "Number",
    "value": 23,
    "metadata": {}
  }
}'
orionCurl --url /v2/entities/contador1/attrs -X PATCH --payload "$payload"
echo
echo


echo "04. Dump accumulator"
echo "===================="
accumulatorDump
echo
echo


--REGEXPECT--
