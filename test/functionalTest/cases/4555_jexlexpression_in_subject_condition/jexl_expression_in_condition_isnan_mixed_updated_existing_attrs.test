# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh
# JEXL_EXPR_FLAVOUR - to mark the test has to execute only when contextBroker includes jexl-expr flavour

--NAME--
jexlExpression in condition (mixed updated + existing attrs)

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create custom sub with jexlExpression in condition (A|isNaN) && (B|isNaN)
# 02. Create entity E1 with A=1 and B=bar
# 03. Update entity E1 with A=foo
# 04. Update entity E1 with B=1
# 05. Dump accumulator and see ONE notification (only for step 03: A=foo, B=bar)
#     (steps 02 and 04 must NOT trigger notifications)


echo "01. Create custom sub with jexlExpression in condition (A|isNaN) && (B|isNaN)"
echo "============================================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1",
        "type": "T"
      }
    ],
    "condition": {
                "attrs": [ ],
                "jexlExpression": "(A|isNaN) && (B|isNaN)"
             }
  },
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "02. Create entity E1 with A=1 and B=bar"
echo "======================================="
payload='{
  "id": "E1",
  "type": "T",
  "A": {
    "value": 1,
    "type": "Number"
  },
  "B": {
        "value": "bar",
        "type": "Text"
    }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Update entity E1 with A=foo"
echo "==============================="
payload='{
  "A": {
    "value": "foo",
    "type": "Text"
  }
}'
orionCurl --url /v2/entities/E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "04. Update entity E1 with B=1"
echo "============================="
payload='{
  "B": {
      "value": 1,
      "type": "Number"
  }
}'
orionCurl --url /v2/entities/E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "05. Dump accumulator and see ONE notification (only for step 03: A=foo, B=bar)"
echo "=============================================================================="
accumulatorDump
echo
echo


