# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
subcription update cases with

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create httpCustom sub with subject.condition.jexlExpression
# 02. Get sub, see sub with subject.condition.jexlExpression
# 03. Update sub description
# 04. Get sub, see subject.condition.jexlExpression
# 05. Update sub subject.condition.jexlExpression
# 06. see subject.condition.jexlExpression
#

echo '01. Create httpCustom sub with subject.condition.jexlExpression'
echo "==============================================================="
payload='{
  "description": "Original sub",
  "subject": {
    "entities": [
      {
        "id": "E1",
        "type": "T1"
      }
    ],
    "condition": {
        "attrs": [ ],
        "jexlExpression": "1<2"
    }
  },
  "notification": {
    "httpCustom": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


SUB_ID=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")


echo '02. Get sub, see sub with subject.condition.jexlExpression'
echo "=========================================================="
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


echo "03. Update sub description"
echo "=========================="
payload='{
  "description": "Modified sub"
}'
orionCurl -X PATCH --url "/v2/subscriptions/$SUB_ID" --payload "$payload"
echo
echo


echo '04. Get sub, see subject.condition.jexlExpression'
echo "================================================="
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo


echo "05. Update sub subject.condition.jexlExpression"
echo "==============================================="
payload='{
    "subject": {
        "entities": [
          {
            "id": "E1",
            "type": "T1"
          }
        ],
        "condition": {
            "attrs": [ ],
            "jexlExpression": "2"
        }
      }
}'
orionCurl -X PATCH --url "/v2/subscriptions/$SUB_ID" --payload "$payload"
echo
echo


echo '06. see subject.condition.jexlExpression'
echo "========================================"
orionCurl --url /v2/subscriptions/$SUB_ID
echo
echo



