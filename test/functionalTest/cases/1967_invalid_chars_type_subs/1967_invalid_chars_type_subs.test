# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Forbidden chars for type in subscription

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/subscriptions (forbidden chars in type)
#

echo "01. POST /v2/subscriptions"
echo "=========================="
payload='
{
    "subject": {
        "entities": [
            {
                "id": "ID",
                "type": "Ol="
            }
        ],
        "condition": {
            "attributes": [ "temperature" ],
            "expression": {
               "q": "temperature>40",
               "geometry": "point",
               "coords": "-40.4,-3.5",
               "georel": "near;minDistance=5000"
            }
         }
    },
    "notification": {
        "callback": "http://localhost:1234",
        "attributes": ["temperature", "humidity"],
        "throttling": 5
    },
    "expires": "2016-04-05T14:00:00.00Z"
}
'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


--REGEXPECT--
01. POST /v2/subscriptions
==========================
HTTP/1.1 400 Bad Request
Content-Length: 92
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "forbidden characters in /entities/ vector item /type/",
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

