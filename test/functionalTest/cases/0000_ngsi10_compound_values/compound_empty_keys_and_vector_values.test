# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Create and query compound with empty keys and vector values

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

# 01. Create and query compound with empty keys and vector values
# 02. Get entity (NGSIv2)
# 03. Get entity (NGSIv1)

echo "01. Create and query compound with empty keys and vector values"
echo "==============================================================="
payload='{
  "id": "E",
  "type": "T",
  "A": {
    "type": "compound",
    "value": {
       "": "foo",
       "v": [ "", "bar", "" ]
    }
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Get entity (NGSIv2)"
echo "======================="
orionCurl --url /v2/entities/E
echo
echo


echo "03. Get entity (NGSIv1)"
echo "======================="
orionCurl --url /v1/contextEntities/E
echo
echo


--REGEXPECT--
01. Create and query compound with empty keys and vector values
===============================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Get entity (NGSIv2)
=======================
HTTP/1.1 200 OK
Content-Length: 96
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A": {
        "metadata": {},
        "type": "compound",
        "value": {
            "": "foo",
            "v": [
                "",
                "bar",
                ""
            ]
        }
    },
    "id": "E",
    "type": "T"
}


03. Get entity (NGSIv1)
=======================
HTTP/1.1 200 OK
Content-Length: 191
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextElement": {
        "attributes": [
            {
                "name": "A",
                "type": "compound",
                "value": {
                    "": "foo",
                    "v": [
                        "",
                        "bar",
                        ""
                    ]
                }
            }
        ],
        "id": "E",
        "isPattern": "false",
        "type": "T"
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
