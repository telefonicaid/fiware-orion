# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

#
#
# 1: Append entity E1 with two different attributes A1 and A2
# 2. JsonAttributeObjectQuery for the entity E1 for attributes A1 and A2
#

--NAME--
Query SEQ with attributes as JSON objects

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "==========================================================="
echo "1: Append entity E1 with two different attributes A1 and A2"
url="/v1/updateContext"
payload='{
    "contextElements": [
        {
            "type": "Test",
            "isPattern": "false",
            "id": "E1",
            "attributes": [
            {
                "name": "A1",
                "type": "test",
                "value": "1"
            },
            {
                "name": "A2",
                "type": "test",
                "value": "2"
            }
            ]
        }
    ],
    "updateAction": "APPEND"
}'
orionCurl --url "$url" --payload "$payload"
echo
echo


echo "======================================================================"
echo "2. JsonAttributeObjectQuery for the entity E1 for attributes A1 and A2"
url="/v1/queryContext"
payload='{
    "entities": [
        {
            "type": "Test",
            "isPattern": "false",
            "id": "E1"
        }
    ],
    "attributes": [ "A1", "A2" ]
}'
orionCurl --url "$url" --payload "$payload" --urlParams attributeFormat=object
echo
echo


--REGEXPECT--
===========================================================
1: Append entity E1 with two different attributes A1 and A2
HTTP/1.1 200 OK
Content-Length: 228
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "A1", 
                        "type": "test", 
                        "value": ""
                    }, 
                    {
                        "name": "A2", 
                        "type": "test", 
                        "value": ""
                    }
                ], 
                "id": "E1", 
                "isPattern": "false", 
                "type": "Test"
            }, 
            "statusCode": {
                "code": "200", 
                "reasonPhrase": "OK"
            }
        }
    ]
}


======================================================================
2. JsonAttributeObjectQuery for the entity E1 for attributes A1 and A2
HTTP/1.1 200 OK
Content-Length: 216
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
