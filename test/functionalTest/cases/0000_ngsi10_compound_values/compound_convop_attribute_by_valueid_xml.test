      <type>T</type>
      <contextValue>
        <x>
          <x1>a</x1>
          <x2>b</x2>
        </x>
        <y type="vector">
          <item>y1</item>
          <item>y2</item>
        </y>
      </contextValue>
      <metadata>
        <contextMetadata>
          <name>ID</name>
          <type>string</type>
          <value>ground</value>
        </contextMetadata>
      </metadata>
    </contextAttribute>
    <contextAttribute>
      <name>A</name>
      <type>T</type>
      <contextValue>
        <x>
          <x1>c</x1>
          <x2>d</x2>
        </x>
        <y type="vector">
          <item>y3</item>
          <item>y4</item>
        </y>
      </contextValue>
      <metadata>
        <contextMetadata>
          <name>ID</name>
          <type>string</type>
          <value>wall</value>
        </contextMetadata>
      </metadata>
    </contextAttribute>
  </contextAttributeList>
</appendContextElementRequest>'
orionCurl --url "$url" --payload "$payload"

echo "3: ++++++++++ query for vector compound by valueID 'ground' ++++++++++"
orionCurl --url "/v1/contextEntities/EVector/attributes/A/ground"

echo "4: ++++++++++ query for vector compound by valueID 'wall' ++++++++++"
