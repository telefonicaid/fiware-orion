Content-Length: 144
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "ids": "REGEX([0-9a-f, ]{76})",
    "inserts": REGEX((3|0)),
    "items": REGEX((3|0)),
    "refresh": REGEX((0|1)),
    "removes": 0,
    "updates": 0
}


--TEARDOWN--
brokerStop CB
dbDrop CB
