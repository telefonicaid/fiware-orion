# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Cache refresh keeps newer information from cache in disabled notification scenario with sub update in the middle

--SHELL-INIT--
dbInit CB

mongoCmd ${CB_DB_NAME} 'db.csubs.insert({
        "_id" : ObjectId("61960a51596aa2623032357d"),
        "expiration" : NumberLong("9223372036854775807"),
        "reference" : "http://localhost:9997/notify",
        "custom" : false,
        "timeout" : NumberLong(0),
        "throttling" : NumberLong(0),
        "servicePath" : "/",
        "status" : "active",
        "statusLastChange" : 1546337410,
        "entities" : [
                {
                        "id" : "E",
                        "isPattern" : "false",
                        "type" : "T",
                        "isTypePattern" : false
                }
        ],
        "attrs" : [ ],
        "metadata" : [ ],
        "blacklist" : false,
        "onlyChanged" : false,
        "conditions" : [ ],
        "expression" : {
                "q" : "",
                "mq" : "",
                "geometry" : "",
                "coords" : "",
                "georel" : ""
        },
        "format" : "normalized",
        "maxFailsLimit": NumberLong(1)
})'

# t 100 -> MongoDB interactions
# t 212 -> Cache sync each 5 seconds
brokerStart CB 100,212 IPv4 -subCacheIval 5 --cache

--SHELL--

#
# FIXME: regex expression for "the present" dates use 202* pattern. Thus, this
# test will be next a fix in January 1st, 2030 for the next ten years ;)
#
# Relevant fields in step 00
# - maxFailsLimit 1
# - status:       active (last changed: 2019-01-01T10:10:10Z)
#
# 00. (Done before starting Context Broker) Insert crafted subscription in DB with maxFailsLimit 1 and status active changed in the past
# 01. GET /v2/subscriptions and see maxFailsLimit 1, status active
# 02. Upsert entity E twice to trigger notifications to overpass maxFailsLimit
# 03. Upsert entity E to trigger notification which would be blocked as status in cache is inactive
# 04. GET /v2/subscriptions and see status inactive (as cache data is newer), timesSent 2, failsCounter 2
# 05. Get doc in DB before cache refresh and see status active changed in the past and without count and without failsCounter
# 06. PATCH /v2/subscription to add a description
# 07. Get doc in DB before cache refresh and see status active changed in the past and without count and without failsCounter + description
# 08. Wait 5.5s for cache refresh and GET /v2/subscriptions again to check everything is the same + description
# 09. Get doc in DB after cache refresh and see status inactive changed in the present and count 2, failsCounter 2 + description
#

echo "00. (Done before starting Context Broker) Insert crafted subscription in DB with maxFailsLimit 1 and status active changed in the past"
echo "======================================================================================================================================"
echo
echo


echo "01. GET /v2/subscriptions and see maxFailsLimit 1, status active"
echo "================================================================"
orionCurl --url /v2/subscriptions
echo
echo


echo "02. Upsert entity E twice to trigger notifications to overpass maxFailsLimit"
echo "============================================================================"
payload='{
  "id": "E",
  "type": "T",
  "A": {
    "value": 1,
    "type": "Number"
  }
}'
orionCurl --url '/v2/entities?options=upsert,forcedUpdate' --payload "$payload"
echo
echo
orionCurl --url '/v2/entities?options=upsert,forcedUpdate' --payload "$payload"
echo
echo


echo "03. Upsert entity E to trigger notification which would be blocked as status in cache is inactive"
echo "================================================================================================="
orionCurl --url '/v2/entities?options=upsert,forcedUpdate' --payload "$payload"
echo
echo


echo "04. GET /v2/subscriptions and see status inactive (as cache data is newer), timesSent 2, failsCounter 2"
echo "======================================================================================================="
orionCurl --url /v2/subscriptions
echo
echo


echo "05. Get doc in DB before cache refresh and see status active changed in the past and without count and without failsCounter"
echo "==========================================================================================================================="
mongoCmd ${CB_DB_NAME} 'db.csubs.find({ _id: ObjectId("61960a51596aa2623032357d")}, {_id:0, expiration: 0})' | sed 's/NumberLong(\([[:digit:]]\+\))/\1/g' | sed 's/NumberLong("\([[:digit:]]\+\)")/\1/g' | python ${SCRIPT_HOME}/jsonBeautifier.py
echo
echo


echo "06. PATCH /v2/subscription to add a description"
echo "==============================================="
payload='{
  "description": "A little description"
}'
orionCurl --url /v2/subscriptions/61960a51596aa2623032357d --payload "$payload" -X PATCH
echo
echo


echo "07. Get doc in DB before cache refresh and see status active changed in the past and without count and without failsCounter + description"
echo "========================================================================================================================================="
mongoCmd ${CB_DB_NAME} 'db.csubs.find({ _id: ObjectId("61960a51596aa2623032357d")}, {_id:0, expiration: 0})' | sed 's/NumberLong(\([[:digit:]]\+\))/\1/g' | sed 's/NumberLong("\([[:digit:]]\+\)")/\1/g' | python ${SCRIPT_HOME}/jsonBeautifier.py
echo
echo


echo "08. Wait 5.5s for cache refresh and GET /v2/subscriptions again to check everything is the same + description"
echo "============================================================================================================="
sleep 5.5s
orionCurl --url /v2/subscriptions
echo
echo


echo "09. Get doc in DB after cache refresh and see status inactive changed in the present and count 2, failsCounter 2 + description"
echo "=============================================================================================================================="
mongoCmd ${CB_DB_NAME} 'db.csubs.find({ _id: ObjectId("61960a51596aa2623032357d")}, {_id:0, expiration: 0})' | sed 's/NumberLong(\([[:digit:]]\+\))/\1/g' | sed 's/NumberLong("\([[:digit:]]\+\)")/\1/g' | python ${SCRIPT_HOME}/jsonBeautifier.py
echo
echo


