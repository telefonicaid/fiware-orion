# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Null support in DateTime attributes

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity E1 with DateTime attribute T with value 2018-12-03T13:21:42.000Z
# 02. Create entity E2 with DateTime attribute T with value null
# 03. Get entities (E1-T: 2018-12-03T13:21:42.000Z, E2-T: null)
# 04. Update E1-T: null
# 05. Update E2-T: 2020-10-01T12:43:18.000Z
# 06. Get entities (E1-T: null, E2-T: 2020-10-01T12:43:18.000Z)
# 07. Update E1-T: foo, see error
# 08. Update E2-T: bar, see error
#

echo "01. Create entity E1 with DateTime attribute T with value 2018-12-03T13:21:42.000Z"
echo "=================================================================================="
payload='{
  "id": "E1",
  "type": "T",
  "T": {
    "value": "2018-12-03T13:21:42.000Z",
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Create entity E2 with DateTime attribute T with value null"
echo "=============================================================="
payload='{
  "id": "E2",
  "type": "T",
  "T": {
    "value": null,
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Get entities (E1-T: 2018-12-03T13:21:42.000Z, E2-T: null)"
echo "============================================================="
orionCurl --url /v2/entities
echo
echo


echo "04. Update E1-T: null"
echo "====================="
payload='{
  "T": {
    "value": null,
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload"
echo
echo


echo "05. Update E2-T: 2020-10-01T12:43:18.000Z"
echo "========================================="
payload='{
  "T": {
    "value": "2020-10-01T12:43:18.000Z",
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities/E2/attrs --payload "$payload"
echo
echo


echo "06. Get entities (E1-T: null, E2-T: 2020-10-01T12:43:18.000Z)"
echo "============================================================="
orionCurl --url /v2/entities
echo
echo


echo "07. Update E1-T: foo, see error"
echo "==============================="
payload='{
  "T": {
    "value": "foo",
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload"
echo
echo


echo "08. Update E2-T: bar, see error"
echo "==============================="
payload='{
  "T": {
    "value": "bar",
    "type": "DateTime"
  }
}'
orionCurl --url /v2/entities/E2/attrs --payload "$payload"
echo
echo


--REGEXPECT--
01. Create entity E1 with DateTime attribute T with value 2018-12-03T13:21:42.000Z
==================================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Create entity E2 with DateTime attribute T with value null
==============================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E2?type=T
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Get entities (E1-T: 2018-12-03T13:21:42.000Z, E2-T: null)
=============================================================
HTTP/1.1 200 OK
Content-Length: 171
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "T": {
            "metadata": {},
            "type": "DateTime",
            "value": "2018-12-03T13:21:42.000Z"
        },
        "id": "E1",
        "type": "T"
    },
    {
        "T": {
            "metadata": {},
            "type": "DateTime",
            "value": null
        },
        "id": "E2",
        "type": "T"
    }
]


04. Update E1-T: null
=====================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



05. Update E2-T: 2020-10-01T12:43:18.000Z
=========================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



06. Get entities (E1-T: null, E2-T: 2020-10-01T12:43:18.000Z)
=============================================================
HTTP/1.1 200 OK
Content-Length: 171
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "T": {
            "metadata": {},
            "type": "DateTime",
            "value": null
        },
        "id": "E1",
        "type": "T"
    },
    {
        "T": {
            "metadata": {},
            "type": "DateTime",
            "value": "2020-10-01T12:43:18.000Z"
        },
        "id": "E2",
        "type": "T"
    }
]


07. Update E1-T: foo, see error
===============================
HTTP/1.1 400 Bad Request
Content-Length: 62
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "date has invalid format",
    "error": "BadRequest"
}


08. Update E2-T: bar, see error
===============================
HTTP/1.1 400 Bad Request
Content-Length: 62
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "date has invalid format",
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
