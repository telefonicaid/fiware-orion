# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Null support in geo:box attributes in subscriptions

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print localhost $LISTENER_PORT

--SHELL--

#
# 01. Create entity E1 with geo:box attribute loc [ 2,2, 7,7 ]
# 02. Create entity E2 with geo:box attribute loc with value null
# 03. Create subscription covering all planet (triggers initial notif, see E1)
# 04. Update E1-loc: null (doesn't trigger notification)
# 05. Update E2-loc: [ 2,2, 7,7 ] (triggers notif)
# 06. Dump accumulator, see 2 notifications (one for E1 and one for E2)
#
# (Actually, query at 03 doesn't cover all the planet, but a single hemisphere.
# See https://stackoverflow.com/questions/67493504/earth-wide-polygon-query-in-mongodb-doesnt-return-geo-located-document/67501039#67501039)
#

echo "01. Create entity E1 with geo:box attribute loc [ 2,2, 7,7 ]"
echo "============================================================"
payload='{
  "id": "E1",
  "type": "T",
  "loc": {
    "value": [ "2, 2", "7, 7" ],
    "type": "geo:box"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Create entity E2 with geo:box attribute loc with value null"
echo "==============================================================="
payload='{
  "id": "E2",
  "type": "T",
  "loc": {
    "value": null,
    "type": "geo:box"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Create subscription covering all planet (triggers initial notif, see E1)"
echo "============================================================================"
payload='{
  "subject": {
    "entities": [
      {
        "idPattern": ".*",
        "type": "T"
      }
    ],
    "condition": {
        "expression": {
           "geometry": "box",
           "coords": "-90,-90;90,90",
           "georel": "coveredBy"
        }
     }
  },
  "notification": {
    "http": {
      "url": "http://localhost:'$LISTENER_PORT'/notify"
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "04. Update E1-loc: null (doesn't trigger notif)"
echo "==============================================="
payload='{
  "loc": {
    "value": null,
    "type": "geo:box"
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload"
echo
echo


echo "05. Update E2-loc: [ 2,2, 7,7 ] (triggers notif)"
echo "================================================"
payload='{
  "loc": {
    "value": [ "2, 2", "7, 7" ],
    "type": "geo:box"
  }
}'
orionCurl --url /v2/entities/E2/attrs --payload "$payload"
echo
echo


echo "06. Dump accumulator, see 2 notifications (one for E1 and one for E2)"
echo "====================================================================="
accumulatorDump
accumulatorReset
echo
echo


--REGEXPECT--
