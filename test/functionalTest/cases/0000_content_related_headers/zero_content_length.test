# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Zero content length

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

curl localhost:${CB_PORT}/v1/registry/registerContext --header "Content-Length: 0" -X POST 2> /dev/null | python -mjson.tool

--REGEXPECT--
{
    "errorCode": {
        "code": "411",
        "details": "Zero/No Content-Length in PUT/POST/PATCH request",
        "reasonPhrase": "Content Length Required"
    },
    "registrationId": "000000000000000000000000"
}
--TEARDOWN--
brokerStop CB
dbDrop CB
