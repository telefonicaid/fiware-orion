# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
CREATE Entity V2 Already exist

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. POST /v2/entities (Room1-Room)
# 02. POST /v2/entities (Room1-Room)
# 03. GET /v2/entities/Room1
# 04. GET /v2/entities/Room1?options=keyValues
# 05. GET /v2/entities/Room1?options=values
#

echo "01. POST /v2/entities (Room1-Room)"
echo "=================================="
payload='{
  "id": "Room1",
  "type": "Room",
  "temp": "29"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "02. POST /v2/entities (Room1-Room)"
echo "=================================="
payload='{
  "id": "Room1",
  "type": "Room",
  "temp": "30"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "03. GET /v2/entities/Room1"
echo "=========================="
orionCurl --url /v2/entities/Room1 --json
echo
echo


echo "04. GET /v2/entities/Room1?options=keyValues"
echo "============================================"
orionCurl --url '/v2/entities/Room1?options=keyValues' --json
echo
echo


echo "05. GET /v2/entities/Room1?options=values"
echo "========================================="
orionCurl --url '/v2/entities/Room1?options=values' --json
echo
echo


--REGEXPECT--
01. POST /v2/entities (Room1-Room)
==================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/Room1?type=Room
Date: REGEX(.*)



02. POST /v2/entities (Room1-Room)
==================================
HTTP/1.1 422 Unprocessable Entity
Content-Length: 69
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "Entity already exists",
    "error": "InvalidModification"
}


03. GET /v2/entities/Room1
==========================
HTTP/1.1 200 OK
Content-Length: 76
Content-Type: application/json
Date: REGEX(.*)

{
    "id": "Room1",
    "temp": {
        "metadata": {},
        "type": null,
        "value": "29"
    },
    "type": "Room"
}


04. GET /v2/entities/Room1?options=keyValues
============================================
HTTP/1.1 200 OK
Content-Length: 40
Content-Type: application/json
Date: REGEX(.*)

{
    "id": "Room1",
    "temp": "29",
    "type": "Room"
}


05. GET /v2/entities/Room1?options=values
=========================================
HTTP/1.1 200 OK
Content-Length: 6
Content-Type: application/json
Date: REGEX(.*)

[
    "29"
]


--TEARDOWN--
brokerStop CB
dbDrop CB

