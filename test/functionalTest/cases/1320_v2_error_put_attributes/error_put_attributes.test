# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Error Put Attributes

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
## 01. POST /v2/entities to create E1/T1/A1=0
## 02. POST /v2/entities to create E1/T2/A1=0
## 03. PUT /v2/entities/E1 (too many results)
## 04. PUT /v2/entities/fgg (entity not found)


echo "01. POST /v2/entities to create E1/T1/A1=0"
echo "=========================================="
payload='{ "id": "E1", "type": "T1", "A1": 0 }'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "02. POST /v2/entities to create E1/T2/A1=0"
echo "=========================================="
payload='{ "id": "E1", "type": "T2", "A1": 0 }'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "03. PUT /v2/entities/E1 (too many results)"
echo "=========================================="
payload='{ "A1": 1 }'
orionCurl --url '/v2/entities/E1?options=keyValues' --payload "$payload" --json -X PUT
echo
echo


echo "04. PUT /v2/entities/fgg (entity not found)"
echo "==========================================="
payload='{ "A1": 1 }'
orionCurl --url '/v2/entities/fgg?options=keyValues' --payload "$payload" --json -X PUT
echo
echo


--REGEXPECT--
01. POST /v2/entities to create E1/T1/A1=0
==========================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Date: REGEX(.*)



02. POST /v2/entities to create E1/T2/A1=0
==========================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T2
Date: REGEX(.*)



03. PUT /v2/entities/E1 (too many results)
==========================================
HTTP/1.1 409 Conflict
Content-Length: 98
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "More than one matching entity. Please refine your query",
    "error": "TooManyResults"
}


04. PUT /v2/entities/fgg (entity not found)
===========================================
HTTP/1.1 404 Not Found
Content-Length: 61
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "No context element found",
    "error": "NotFound"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

