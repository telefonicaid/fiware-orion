--NAME--
Notify only attributes that change for NGSIv2 POST /v2/entities, POST /v2/subscriptions, Dump and reset accumulator, PATCH /v2/entities/Room1/attrs, Dump and reset accumulator, PATCH /v2/entities/Room1/attrs, Dump and reset accumulator, PATCH /v2/entities/Room1/attrs, Dump and reset accumulator, PATCH /v2/entities/Room1/attrs, Dump and reset accumulator.

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print localhost $LISTENER_PORT

--SHELL--

#
# 01. POST /v2/entities, create Room1 entity with A, B, C, and D attributes.
# 02. POST /v2/subscriptions, to create subscription for Room1 with cond attrs: [A, B, C] notify attrs: [B, C, D], onlyChangedAttrs: true.
# 03. Dump and reset accumulator, see B, C and D (as this is initial notification).
# 04. PATCH /v2/entities/Room1/attrs, update the value of A and B attribute.
# 05. Dump and reset accumulator, see B.
# 06. PATCH /v2/entities/Room1/attrs, update the value of B and C attribute.
# 07. Dump and reset accumulator, see B and C.
# 08. PATCH /v2/entities/Room1/attrs, update the value of C and D attribute.
# 09. Dump and reset accumulator, see C and D.
# 10. PATCH /v2/entities/Room1/attrs, update the value of A, B, C and D attribute.
# 11. Dump and reset accumulator, see B, C and D.
# 12. PATCH /v2/entities/Room1/attrs, update the value of A attribute.
# 13. Dump and reset accumulator, see nothing.
#

echo '01. POST /v2/entities, create Room1 entity with A, B, C, and D attributes.'
echo '=========================================================================='
payload='{
  "id": "Room1",
  "type": "Room",
  "A": {
    "value": 10,
    "type": "Integer"
  },
  "B": {
    "value": 20,
    "type": "Integer"
  },
  "C": {
    "value": 30,
    "type": "Integer"
  },
  "D": {
    "value": 40,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo '02. POST /v2/subscriptions, to create subscription for Room1 with cond attrs: [A, B, C] notify attrs: [B, C, D], onlyChangedAttrs: true.'
echo '========================================================================================================================================'
payload='{
  "description": "A subscription to get info about Room1",
  "subject": {
    "entities": [
      {
        "id": "Room1",
        "type": "Room"
      }
    ],
    "condition": {
      "attrs": [
        "A","B","C"
      ]
    }
  },
  "notification": {
    "http": {
      "url": "http://localhost:'$LISTENER_PORT'/notify"
    },
    "attrs": [
      "B","C","D"
    ],
    "onlyChangedAttrs":true
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo '03. Dump and reset accumulator, see B, C and D (as this is initial notification).'
echo '================================================================================='
accumulatorDump
accumulatorReset
echo
echo


echo '04. PATCH /v2/entities/Room1/attrs, update the value of A and B attribute.'
echo '=========================================================================='
payload='{
  "A": {
    "value": 12,
    "type": "Integer"
  },
  "B": {
    "value": 22,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/Room1/attrs --payload "$payload" -X PATCH
echo
echo


echo '05. Dump and reset accumulator, see B.'
echo '======================================'
accumulatorDump
accumulatorReset
echo
echo


echo '06. PATCH /v2/entities/Room1/attrs, update the value of B and C attribute.'
echo '=========================================================================='
payload='{
  "B": {
    "value": 24,
    "type": "Integer"
  },
  "C": {
    "value": 32,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/Room1/attrs --payload "$payload" -X PATCH
echo
echo


echo '07. Dump and reset accumulator, see B and C.'
echo '============================================'
accumulatorDump
accumulatorReset
echo
echo


echo '08. PATCH /v2/entities/Room1/attrs, update the value of C and D attribute.'
echo '=========================================================================='
payload='{
  "C": {
    "value": 34,
    "type": "Integer"
  },
  "D": {
    "value": 42,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/Room1/attrs --payload "$payload" -X PATCH
echo
echo


echo '09. Dump and reset accumulator, see C and D.'
echo '============================================'
accumulatorDump
accumulatorReset
echo
echo


echo '10. PATCH /v2/entities/Room1/attrs, update the value of A, B, C and D attribute.'
echo '================================================================================'
payload='{
  "A": {
    "value": 40,
    "type": "Integer"
  },
  "B": {
    "value": 30,
    "type": "Integer"
  },
  "C": {
    "value": 20,
    "type": "Integer"
  },
  "D": {
    "value": 10,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/Room1/attrs --payload "$payload" -X PATCH
echo
echo


echo '11. Dump and reset accumulator, see B, C and D.'
echo '==============================================='
accumulatorDump
accumulatorReset
echo
echo


echo '12. PATCH /v2/entities/Room1/attrs, update the value of A attribute.'
echo '===================================================================='
payload='{
  "A": {
    "value": 50,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/Room1/attrs --payload "$payload" -X PATCH
echo
echo


echo '13. Dump and reset accumulator, see nothing.'
echo '============================================'
accumulatorDump
accumulatorReset
echo
echo


