--NAME--
Notify only attributes that change with blacklist for NGSIv2 POST /v2/entities, POST /v2/subscriptions, Dump and reset accumulator, Sleep 5 secs, PATCH /v2/entities/Room1/attrs, Dump and reset accumulator, Sleep 5 secs, PATCH /v2/entities/Room1/attrs, Dump and reset accumulator, Sleep 5 secs, PATCH /v2/entities/Room1/attrs, Dump and reset accumulator, Sleep 5 secs, PATCH /v2/entities/Room1/attrs, Dump and reset accumulator.

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print localhost $LISTENER_PORT

--SHELL--

#
# 01. POST /v2/entities, create Room1 entity with A, B, C, and D attributes.
# 02. POST /v2/subscriptions, to create subscription for Room1 with onlyChangedAttrs set to true.
# 03. Dump and reset accumulator, see notification.
# 04. Sleep 5 secs, before next update.
# 05. PATCH /v2/entities/Room1/attrs, update the value of A and B attribute.
# 06. Dump and reset accumulator, see notification.
# 07. Sleep 5 secs, before next update.
# 08. PATCH /v2/entities/Room1/attrs, update the value of B and C attribute.
# 09. Dump and reset accumulator, see notification.
# 10. Sleep 5 secs, before next update.
# 11. PATCH /v2/entities/Room1/attrs, update the value of C and D attribute.
# 12. Dump and reset accumulator, see notification.
# 13. Sleep 5 secs, before next update.
# 14. PATCH /v2/entities/Room1/attrs, update the value of A, B, C and D attribute.
# 15. Dump and reset accumulator, see notification.
#

echo '01. POST /v2/entities, create Room1 entity with A, B, C, and D attributes.'
echo '=========================================================================='
payload='{
  "id": "Room1",
  "type": "Room",
  "A": {
    "value": 10,
    "type": "Integer"
  },
  "B": {
    "value": 20,
    "type": "Integer"
  },
  "C": {
    "value": 30,
    "type": "Integer"
  },
  "D": {
    "value": 40,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo '02. POST /v2/subscriptions, to create subscription for Room1 with onlyChangedAttrs set to true.'
echo '==============================================================================================='
payload='{
  "description": "A subscription to get info about Room1",
  "subject": {
    "entities": [
      {
        "id": "Room1",
        "type": "Room"
      }
    ],
    "condition": {
      "attrs": [
        "A","B","C"
      ]
    }
  },
  "notification": {
    "http": {
      "url": "http://localhost:'$LISTENER_PORT'/notify"
    },
    "exceptAttrs": [
      "B"
    ],
    "onlyChangedAttrs":true
  },
  "expires": "2040-01-01T14:00:00.00Z",
  "throttling": 5
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo '03. Dump and reset accumulator, see notification.'
echo '================================================='
accumulatorDump
accumulatorReset
echo
echo


echo '04. Sleep 5 secs, before next update.'
echo '====================================='
sleep 5
echo
echo


echo '05. PATCH /v2/entities/Room1/attrs, update the value of A and B attribute.'
echo '=========================================================================='
payload='{
  "A": {
    "value": 12,
    "type": "Integer"
  },
  "B": {
    "value": 22,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/Room1/attrs --payload "$payload" -X PATCH
echo
echo


echo '06. Dump and reset accumulator, see notification.'
echo '================================================='
accumulatorDump
accumulatorReset
echo
echo


echo '07. Sleep 5 secs, before next update.'
echo '====================================='
sleep 5
echo
echo


echo '08. PATCH /v2/entities/Room1/attrs, update the value of B and C attribute.'
echo '=========================================================================='
payload='{
  "B": {
    "value": 24,
    "type": "Integer"
  },
  "C": {
    "value": 32,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/Room1/attrs --payload "$payload" -X PATCH
echo
echo


echo '09. Dump and reset accumulator, see notification.'
echo '================================================='
accumulatorDump
accumulatorReset
echo
echo


echo '10. Sleep 5 secs, before next update.'
echo '====================================='
sleep 5
echo
echo


echo '11. PATCH /v2/entities/Room1/attrs, update the value of C and D attribute.'
echo '=========================================================================='
payload='{
  "C": {
    "value": 34,
    "type": "Integer"
  },
  "D": {
    "value": 42,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/Room1/attrs --payload "$payload" -X PATCH
echo
echo


echo '12. Dump and reset accumulator, see notification.'
echo '================================================='
accumulatorDump
accumulatorReset
echo
echo


echo '13. Sleep 5 secs, before next update.'
echo '====================================='
sleep 5
echo
echo


echo '14. PATCH /v2/entities/Room1/attrs, update the value of A, B, C and D attribute.'
echo '================================================================================'
payload='{
  "A": {
    "value": 40,
    "type": "Integer"
  },
  "B": {
    "value": 30,
    "type": "Integer"
  },
  "C": {
    "value": 20,
    "type": "Integer"
  },
  "D": {
    "value": 10,
    "type": "Integer"
  }
}'
orionCurl --url /v2/entities/Room1/attrs --payload "$payload" -X PATCH
echo
echo


echo '15. Dump and reset accumulator, see notification.'
echo '================================================='
accumulatorDump
accumulatorReset
echo
echo


