# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Missing or empty metadata values are not allowed with POST /v2/op/update

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/op/update to create Room1, Room2, and Room3 entity in Batch operation
# 02. GET /v2/entities/Room1
# 03. GET /v2/entities/Room2
# 04. GET /v2/entities/Room3
#

echo "01. POST /v2/op/update to create Room1, Room2, and Room3 entity in Batch operation."
echo "==================================================================================="
payload='{
  "actionType": "append",
  "entities": [
    {
      "type": "Room",
      "id": "Room1",
      "temperature": {
        "value": 29.5,
        "type": "Float",
		"metadata": {
		  "accuracy": {
		  "value": 0.8,
		  "type": "Float"
		  }
		}
      }
    },
    {
      "type": "Room",
      "id": "Room2",
      "pressure": {
	    "value": "",
        "type": "Integer",
		"metadata": {
		  "accuracy": {
		    "value": "",
		    "type": "Float"
		  }
		}
      }
    },
    {
      "type": "Room",
      "id": "Room3",
      "pressure": {
        "type": "Integer",
		"metadata": {
		  "accuracy": {
		    "type": "Float"
		  }
		}
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "02. GET /v2/entities/Room1."
echo "==========================="
orionCurl --url /v2/entities/Room1
echo
echo


echo "03. GET /v2/entities/Room2."
echo "==========================="
orionCurl --url /v2/entities/Room2
echo
echo


echo "04. GET /v2/entities/Room3."
echo "==========================="
orionCurl --url /v2/entities/Room3
echo
echo


--REGEXPECT--
01. POST /v2/op/update to create Room1, Room2, and Room3 entity in Batch operation.
===================================================================================
HTTP/1.1 204 No Content
Content-Length: 0
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET /v2/entities/Room1.
===========================
HTTP/1.1 200 OK
Content-Length: 125
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "id": "Room1",
    "temperature": {
        "metadata": {
            "accuracy": {
                "type": "Float",
                "value": 0.8
            }
        },
        "type": "Float",
        "value": 29.5
    },
    "type": "Room"
}


03. GET /v2/entities/Room2.
===========================
HTTP/1.1 200 OK
Content-Length: 121
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "id": "Room2",
    "pressure": {
        "metadata": {
            "accuracy": {
                "type": "Float",
                "value": ""
            }
        },
        "type": "Integer",
        "value": ""
    },
    "type": "Room"
}


04. GET /v2/entities/Room3.
===========================
HTTP/1.1 200 OK
Content-Length: 125
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "id": "Room3",
    "pressure": {
        "metadata": {
            "accuracy": {
                "type": "Float",
                "value": null
            }
        },
        "type": "Integer",
        "value": null
    },
    "type": "Room"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
