# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Crash with invalid subscription when matching

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create subscription with invalid regex in idPattern
#

echo "01. Create subscription with invalid regex in idPattern"
echo "======================================================="
payload='{
    "subject": {
        "entities": [
            {
                "idPattern": "[.*",
                "type": "T"
            }
        ],
        "condition": {
            "attrs": [ ]
         }
    },
    "notification": {
        "http": { "url": "http://localhost:'$LISTENER_PORT'/notify" },
        "attrs": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


--REGEXPECT--
01. Create subscription with invalid regex in idPattern
=======================================================
HTTP/1.1 400 Bad Request
Content-Length: 74
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "Invalid regex for entity id pattern",
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
