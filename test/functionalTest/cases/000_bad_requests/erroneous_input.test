HTTP/1.1 200 OK
Content-Length: 128
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<orionError>
  <code>400</code>
  <reasonPhrase>Bad Request</reasonPhrase>
  <details>service not found</details>
</orionError>
--TEARDOWN--

brokerStop CB
dbDrop CB
