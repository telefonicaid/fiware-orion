echo "6: ++++++++++++ Madrid out 13.5 kms ++++++++"
# Query in 13.5 kms radius outside Madrid center
url="/v1/queryContext"
payload='{
  "entities": [
  {
    "type": "City",
    "isPattern": "true",
    "id": ".*"
  }
  ],
  "restriction": {
    "scopes": [
    {
      "type" : "FIWARE::Location",
      "value" : {
        "circle": {
          "centerLatitude": "40.418889",
          "centerLongitude": "-3.691944",
          "radius": "13500",
          "inverted": "true"
        }
      }
    }
    ]
  }
}'
orionCurl --url "$url" --payload "$payload"

