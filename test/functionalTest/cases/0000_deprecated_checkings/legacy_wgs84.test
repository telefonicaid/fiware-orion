echo "1. Create entity corresponding to Madrid"
url="/v1/updateContext"
payload='{
  "contextElements": [
  {
    "type": "City",
    "isPattern": "false",
    "id": "Madrid",
    "attributes": [
    {
      "name": "location",
      "type": "coords",
      "value": "40.418889, -3.691944",
      "metadatas": [
        {
          "name": "location",
          "type": "string",
          "value": "WSG84"
        }
      ]
    }
    ]
  }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url "$url" --payload "$payload"
echo
sleep 1.1

