# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Cover the bugfix for attr value checks in POST /v2/op/update

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Update using attr value with forbidden chars and see error
# 02. Check no entity has been created
#

echo "01. Update using attr value with forbidden chars and see error"
echo "=============================================================="
payload='{
  "actionType": "append",
  "entities":
  [
    {
      "type": "T1",
      "id":   "E1",
      "A1": {
         "type": "Text",
         "value": "house<flat>"
      }
    }
  ]
}'
orionCurl --url /v2/op/update --payload "$payload"
echo
echo


echo "02. Check no entity has been created"
echo "===================================="
orionCurl --url /v2/entities
echo
echo


--REGEXPECT--
01. Update using attr value with forbidden chars and see error
==============================================================
HTTP/1.1 400 Bad Request
Content-Length: 76
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "Invalid characters in attribute value",
    "error": "BadRequest"
}


02. Check no entity has been created
====================================
HTTP/1.1 200 OK
Content-Length: 2
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[]


--TEARDOWN--
brokerStop CB
dbDrop CB
