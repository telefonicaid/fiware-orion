# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
JSON throttling

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "1: +++++++++++++++++++++++++++++"
url="/v1/subscribeContext"
payload='{
  "entities" : [
    {
      "type" : "Room",
      "isPattern" : "false",
      "id" : "OfficeRoom"
    }
  ],
  "reference" : "http://localhost:'${LISTENER_PORT}'/notify",
  "throttling" : "PT5H"
}'
orionCurl --url ${url} --payload "${payload}"

echo "2: +++++++++++++++++++++++++++++"
--REGEXPECT--
1: +++++++++++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 106
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "subscribeResponse": {
        "duration": "PT24H",
        "subscriptionId": "REGEX([0-9a-f]{24})",
        "throttling": "PT5H"
    }
}
2: +++++++++++++++++++++++++++++
--TEARDOWN--
brokerStop CB
dbDrop CB
