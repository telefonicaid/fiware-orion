# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
JSON Parse BadVerb DiscoverContextAvailability

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Registering ConferenceRoom/Room, attr temperature
# 02. Discover context availability using the verb 'BAD_VERB'
#

echo "01. Registering ConferenceRoom/Room, attr temperature"
echo "====================================================="
payload='{
  "contextRegistrations": [
    {
      "entities": [
        {
          "type": "Room",
          "isPattern": "false",
          "id": "ConferenceRoom"
        },
        {
          "type": "Room",
          "isPattern": "false",
          "id": "OfficeRoom"
        }
      ],
      "attributes": [
        {
          "name": "temperature",
          "type": "degree"
        }
      ],
      "providingApplication": "http://192.168.100.1:70/application"
    }
  ],
  "duration": "PT1M"
}'
orionCurl --url /v1/registry/registerContext --payload "$payload"
echo
echo


echo "02. Discover context availability using the verb 'BAD_VERB'"
echo "==========================================================="
payload='{
  "entities": [
    {
      "type": "Room",
      "isPattern": "false",
      "id": "ConferenceRoom"
    },
    {
      "type": "Room",
      "isPattern": "false",
      "id": "OfficeRoom"
    }
  ],
  "attributes": [
    "temperature",
    "pressure"
  ],
  "restriction": {
    "attributeExpression" : "Attribute Expression",
    "scopes": [
      {
        "type" : "st1",
        "value" : "sv1"
      },
      {
        "type" : "st2",
        "value" : "sv2"
      }
    ]
  }
}'
orionCurl --url /v1/registry/discoverContextAvailability -X "BAD_VERB" --payload "${payload}"
echo
echo


--REGEXPECT--
01. Registering ConferenceRoom/Room, attr temperature
=====================================================
HTTP/1.1 200 OK
Content-Length: 63
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "PT1M",
    "registrationId": "REGEX([0-9a-f]{24})"
}


02. Discover context availability using the verb 'BAD_VERB'
===========================================================
HTTP/1.1 405 Method Not Allowed
Content-Length: 0
Allow: POST
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



--TEARDOWN--
brokerStop CB
dbDrop CB
