# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
PATCH

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create entity
# 02. Patch metadata without providing value field
# 03. Check entity after PATCH
#

echo "01. Create entity"
echo "================="
payload='{
  "type": "Room",
  "id": "room",
  "temperature": {
    "value": 21.7
  },
  "humidity": {
    "value": 60
  },
  "location": {
    "value": "41.3763726, 2.1864475",
    "type": "geo:point",
    "metadata": {
      "crs": {
        "value": "WGS84"
      }
    }
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. Patch metadata without providing value field"
echo "================================================"
payload='
{
   "temperature":{
      "metadata":{
         "my_meta":{
            "value":"5678"
         }
      }
   }
}
'
orionCurl --url /v2/entities/room/attrs --payload "$payload" -X PATCH
echo
echo


echo "03. Check entity after PATCH"
echo "============================"
orionCurl --url /v2/entities/room?type=Room
echo
echo

--REGEXPECT--
01. Create entity
=================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/room?type=Room
Content-Length: 0



02. Patch metadata without providing value field
================================================
HTTP/1.1 204 No Content
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})



03. Check entity after PATCH
============================
HTTP/1.1 200 OK
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Content-Type: application/json
Content-Length: 293

{
    "humidity": {
        "metadata": {},
        "type": "Number",
        "value": 60
    },
    "id": "room",
    "location": {
        "metadata": {
            "crs": {
                "type": "Text",
                "value": "WGS84"
            }
        },
        "type": "geo:point",
        "value": "41.3763726, 2.1864475"
    },
    "temperature": {
        "metadata": {
            "my_meta": {
                "type": "Text",
                "value": "5678"
            }
        },
        "type": "None",
        "value": null
    },
    "type": "Room"
}


--TEARDOWN--
brokerStop CB
dbDrop CB


