# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Attribute Value of type daye

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. POST /v2/entities creating room
# 02. GET /v2/entities/room/attrs/temperature/value as text/plain
#

echo '01. POST /v2/entities creating room'
echo '==================================='
payload='{
"type": "Room",
"id": "room",
"type": "Room",
"temperature": {
  "type": "DateTime",
  "value": "2035-06-15T07:21:24.238Z"
  }
}
'
orionCurl --url '/v2/entities' --payload "$payload"
echo
echo


echo '02. GET /v2/entities/room/attrs/temperature/value as text/plain'
echo '==============================================================='
orionCurl --url /v2/entities/room/attrs/temperature/value --out text
echo
echo


--REGEXPECT--
01. POST /v2/entities creating room
===================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/room?type=Room
Content-Length: 0



02. GET /v2/entities/room/attrs/temperature/value as text/plain
===============================================================
HTTP/1.1 200 OK
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Content-Type: text/plain
Content-Length: 24

2035-06-15T07:21:24.238Z


--TEARDOWN--
brokerStop CB
dbDrop CB
