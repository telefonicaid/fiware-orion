# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Throttling after update

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create subscription with throttling 1 second
# 02. Create entity E/A=1 (triggers notification)
# 03. Update subscription with throtting 6 seconds
# 04. Sleep 3 seconds (greater than the 1 second in the original sub but lesser than 6 seconds after update)
# 05. Update entity E/A=2 (blocked by throttling)
# 06. Dump accumulator and see only the first notification (A=1)
#


echo "01. Create subscription with throttling 1 second"
echo "================================================"
payload='{
  "subject": {
    "entities": [
      {
        "id": "E",
        "type": "T"
      }
    ]
  },
  "notification": {
    "http": {
      "url": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  },
  "throttling": 1
}'
orionCurl --url /v2/subscriptions --payload "${payload}"
echo
echo


SUB_ID=$(echo "$_responseHeaders" | grep Location | awk -F/ '{ print $4 }' | tr -d "\r\n")


echo "02. Create entity E/A=1 (triggers notification)"
echo "==============================================="
payload='{
  "id": "E",
  "type": "T",
  "A": {
    "value": 1,
    "type": "Number"
  }
}'
orionCurl --url /v2/entities --payload "${payload}"
echo
echo


echo "03. Update subscription with throtting 6 seconds"
echo "================================================"
payload='{
  "throttling": 6
}'
orionCurl -X PATCH --url /v2/subscriptions/$SUB_ID --payload "${payload}"
echo
echo


echo "04. Sleep 3 seconds (greater than the 1 second in the original sub but lesser than 6 seconds after update)"
echo "=========================================================================================================="
sleep 3s
echo
echo


echo "05. Update entity E/A=2 (blocked by throttling)"
echo "==============================================="
payload='{
  "A": {
    "value": 2,
    "type": "Number"
  }
}'
orionCurl --url /v2/entities/E/attrs --payload "${payload}"
echo
echo


echo "06. Dump accumulator and see only the first notification (A=1)"
echo "=============================================================="
accumulatorDump
echo
echo


--REGEXPECT--
