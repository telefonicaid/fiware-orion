# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Empty object crash solved

--SHELL-INIT--
dbInit CB
brokerStart CB 0

--SHELL--

#
# 01. Create entity E with attribute A
# 02. Update attribute A with empty object
#

echo "01. Create entity E with attribute A"
echo "===================================="
payload='{
  "id": "E",
  "type": "T",
  "A": {
    "type": "Number",
    "value": 1
  }
}'
orionCurl --url /v2/entities --payload "${payload}"
echo
echo


echo "02. Update attribute A with empty object"
echo "========================================"
payload='{
  "A": {
    "type": "Object",
    "value": {}
  }
}'
orionCurl --url /v2/entities/E/attrs --payload "${payload}"
echo
echo


--REGEXPECT--
01. Create entity E with attribute A
====================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/E?type=T
Content-Length: 0



02. Update attribute A with empty object
========================================
HTTP/1.1 204 No Content
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})



--TEARDOWN--
brokerStop CB
dbDrop CB
