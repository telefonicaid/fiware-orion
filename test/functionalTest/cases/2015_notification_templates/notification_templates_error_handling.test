    "entities": [
      {
        "id" : "E1"
      }
    ],
    "condition": {
      "attrs": []
    }
  },
  "notification": { }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "06. Create subscription for E1 with both http-part and template part - see error"
