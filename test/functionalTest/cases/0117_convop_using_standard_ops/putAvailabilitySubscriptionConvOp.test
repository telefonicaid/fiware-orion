# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
ConvOp putAvailabilitySubscriptionConvOp: PUT /v1/registry/contextAvailabilitySubscriptions/{subscriptionId}

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Try to update a non-existing subscription
# 02. subscriptionId in payload not matching subscriptionId in URL
# 03. Invalid subscriptionId
# 04. Subscribe to E1/A1
# 05. Update the subscription to E1/A1 to be E1/A2 instead
# 06. Register E1/A2
# 07. See notification of E1/A2 in accumulator
# 08. Register E1/A1
# 09. See no notification of E1/A1 in accumulator
#


echo "01. Try to update a non-existing subscription"
echo "============================================="
payload='{
  "entities": [
    {
      "type": "T1",
      "isPattern": "false",
      "id": "E1"
    }
  ],
  "attributes": [
    "A2"
  ],
  "duration": "PT1M", 
  "subscriptionId" : "012345678901234567890123"
}'
orionCurl --url /v1/registry/contextAvailabilitySubscriptions/012345678901234567890123 --payload "$payload" -X PUT
echo
echo


echo "02. subscriptionId in payload not matching subscriptionId in URL"
echo "================================================================"
payload='{
  "entities": [
    {
      "type": "T1",
      "isPattern": "false",
      "id": "E1"
    }
  ],
  "attributes": [
    "A2"
  ],
  "duration": "PT1M", 
  "subscriptionId" : "012345678901234567890123"
}'
orionCurl --url /v1/registry/contextAvailabilitySubscriptions/012345678901234567890124 --payload "$payload" -X PUT
echo
echo


echo "03. Invalid subscriptionId"
echo "=========================="
payload='{
  "entities": [
    {
      "type": "T1",
      "isPattern": "false",
      "id": "E1"
    }
  ],
  "attributes": [
    "A2"
  ],
  "duration": "PT1M", 
  "subscriptionId" : "0123456789"
}'
orionCurl --url /v1/registry/contextAvailabilitySubscriptions/0123456789 --payload "$payload" -X PUT
echo
echo


echo "04. Subscribe to E1/A1"
echo "======================"
payload='{
  "entities": [
    {
      "type": "T1",
      "isPattern": "false",
      "id": "E1"
    }
  ],
  "attributes": [
    "A1"
  ], 
  "reference": "http://localhost:'${LISTENER_PORT}'/notify",
  "duration": "PT1M"
}'
orionCurl --url /v1/registry/subscribeContextAvailability --payload "$payload"
SUB_ID=$(echo "$_response" | grep subscriptionId | awk -F\" '{ print $4}')
echo
echo


echo "05. Update the subscription to E1/A1 to be E1/A2 instead"
echo "========================================================"
payload='{
  "entities": [
    {
      "type": "T1",
      "isPattern": "false",
      "id": "E1"
    }
  ],
  "attributes": [
    "A2"
  ],
  "duration": "PT1M", 
  "subscriptionId" : "'$SUB_ID'"
}'
orionCurl --url /v1/registry/contextAvailabilitySubscriptions/$SUB_ID --payload "$payload" -X PUT
echo
echo


echo "06. Register E1/A2"
echo "=================="
payload='{
  "contextRegistrations": [
  {
    "entities": [
      {
         "type": "T1",
         "isPattern": "false",
         "id": "E1"
      }
    ],
    "attributes": [
      {
        "name": "A2",
        "type": "string",
        "isDomain": "false"
      }
    ],
    "providingApplication": "http://localhost:'${LISTENER_PORT}'/notify"
    }
 ],
 "duration": "P1M"
}'
orionCurl --url /v1/registry/registerContext --payload "$payload"
echo
echo


echo "07. See notification of E1/A2 in accumulator"
echo "============================================"
accumulatorDump
echo
echo



echo "08. Register E1/A1"
echo "=================="
payload='{
  "contextRegistrations": [
  {
    "entities": [
      {
         "type": "T1",
         "isPattern": "false",
         "id": "E1"
      }
    ],
    "attributes": [
      {
        "name": "A1",
        "type": "string",
        "isDomain": "false"
      }
    ],
    "providingApplication": "http://localhost:'${LISTENER_PORT}'/notify"
    }
 ],
 "duration": "P1M"
}'
orionCurl --url /v1/registry/registerContext --payload "$payload"
echo
echo


echo "09. See no notification of E1/A1 in accumulator"
echo "==============================================="
accumulatorDump
echo
echo


--REGEXPECT--
01. Try to update a non-existing subscription
=============================================
HTTP/1.1 200 OK
Content-Length: 114
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "errorCode": {
        "code": "404", 
        "reasonPhrase": "No context element found"
    }, 
    "subscriptionId": "REGEX([0-9a-f]{24})"
}


02. subscriptionId in payload not matching subscriptionId in URL
================================================================
HTTP/1.1 200 OK
Content-Length: 209
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "errorCode": {
        "code": "400", 
        "details": "unmatching subscriptionId URI/payload: /012345678901234567890124/ vs /012345678901234567890123/", 
        "reasonPhrase": "Bad Request"
    }, 
    "subscriptionId": "000000000000000000000000"
}


03. Invalid subscriptionId
==========================
HTTP/1.1 200 OK
Content-Length: 130
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "errorCode": {
        "code": "400", 
        "details": "bad length - 24 chars expected", 
        "reasonPhrase": "Bad Request"
    }, 
    "subscriptionId": "0123456789"
}


04. Subscribe to E1/A1
======================
HTTP/1.1 200 OK
Content-Length: 63
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "PT1M", 
    "subscriptionId": "REGEX([0-9a-f]{24})"
}


05. Update the subscription to E1/A1 to be E1/A2 instead
========================================================
HTTP/1.1 200 OK
Content-Length: 63
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "PT1M", 
    "subscriptionId": "REGEX([0-9a-f]{24})"
}


06. Register E1/A2
==================
HTTP/1.1 200 OK
Content-Length: 62
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "P1M", 
    "registrationId": "REGEX([0-9a-f]{24})"
}


