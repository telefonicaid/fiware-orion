# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
updateContext actionType APPEND with Context Provider Registration

--SHELL-INIT--
dbInit CB
dbInit CP1
brokerStart CB
brokerStart CP1

--SHELL--
#
# 01. Register CP1
# 02. Creating an entity in CB with actionType APPEND by using NGSIv1
# 03. Query CP: see nothing (that ensures the APPEND wasn't forwarded).
# 04. Query CB: see the entity (it was created locally).
#

echo "01. Register CP1."
echo "================="
payload='{
  "contextRegistrations": [
    {
      "entities": [
        {
          "type": "Floor",
          "isPattern": "false",
          "id": "Floor1"
        }
      ],
      "attributes": [
        {
          "name": "temperature",
          "type": "degree"
        }
      ],
      "providingApplication": "http://localhost:'${CP1_PORT}'/v1"
    }
  ],
  "duration": "P1M"
}'
orionCurl --url /v1/registry/registerContext --payload "$payload"
echo
echo


echo "02. Creating an entity in CB with actionType APPEND by using NGSIv1."
echo "===================================================================="
payload='{
    "contextElements": [
        {
            "type": "Floor",
            "isPattern": "false",
            "id": "Floor1",
            "attributes": [
                {
                    "name": "temperature",
                    "type": "degree",
                    "value": "12"
                }
            ]
        }
    ],
    "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "03. Query CP: see nothing (that's ensures the APPEND wasn't forwarded)."
echo "=========================================================================="
payload='{
    "entities": [
        {
            "type": "Floor",
            "isPattern": "false",
            "id": "Floor1"
        }
    ],
    "attributes": [
        "temperature"
    ]
}'
orionCurl --url /v1/queryContext --payload "$payload" --port $CP1_PORT
echo
echo


echo "04. Query CB: see the entity (it was created locally)."
echo "========================================================="
payload='{
    "entities": [
        {
            "type": "Floor",
            "isPattern": "false",
            "id": "Floor1"
        }
    ],
    "attributes": [
        "temperature"
    ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


--REGEXPECT--
01. Register CP1.
=================
HTTP/1.1 200 OK
Content-Length: 62
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "P1M",
    "registrationId": "REGEX([0-9a-f]{24})"
}


02. Creating an entity in CB with actionType APPEND by using NGSIv1.
====================================================================
HTTP/1.1 200 OK
Content-Length: 205
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "temperature",
                        "type": "degree",
                        "value": ""
                    }
                ],
                "id": "Floor1",
                "isPattern": "false",
                "type": "Floor"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


03. Query CP: see nothing (that's ensures the APPEND wasn't forwarded).
==========================================================================
HTTP/1.1 200 OK
Content-Length: 70
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "errorCode": {
        "code": "404",
        "reasonPhrase": "No context element found"
    }
}


04. Query CB: see the entity (it was created locally).
=========================================================
HTTP/1.1 200 OK
Content-Length: 207
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "temperature",
                        "type": "degree",
                        "value": "12"
                    }
                ],
                "id": "Floor1",
                "isPattern": "false",
                "type": "Floor"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


--TEARDOWN--
brokerStop CB
brokerStop CP1
dbDrop CB
dbDrop CP1
