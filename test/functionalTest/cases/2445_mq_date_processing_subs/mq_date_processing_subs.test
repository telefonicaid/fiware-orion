# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
MQ with DateTime in subscriptions

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create subscription
# 02. Create entity
# 03. Dump accumulator, see one notification
#

echo "01. Create subscription"
echo "======================="
payload='{
  "subject": {
    "entities": [
      {
        "idPattern": ".*"
      }
    ],
    "condition": {
      "attrs": [
        "temperature"
      ],
      "expression": {
        "mq": "timestamp.meta_timestamp==2016-06-16T07:21:24.000Z..2026-06-16T07:21:24.000Z"
      }
    }
  },
  "notification": {
    "http": {
      "url": "http://localhost:'$LISTENER_PORT'/notify"
    },
    "attrs": [
      "temperature",
      "pressure",
      "humidity",
      "timestamp",
      "value_str",
      "value_bool"
    ]
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo '02. Create entity'
echo '================='
payload='{
  "type": "Ph9h",
  "id": "room4",
  "temperature": {
    "type": "celsius",
    "metadata": {
      "meta_temperature": {
        "value": 34,
        "type": "alarm"
      }
    },
    "value": 34
  },
  "pressure": {
    "metadata": {
      "meta_pressure": {
        "value": "high"
      }
    },
    "value": 35
  },
  "humidity": {
    "type": "porcent",
    "metadata": {
      "meta_humidity": {
        "value": "air,density"
      }
    },
    "value": 36
  },
  "timestamp": {
    "type": "nothing",
    "metadata": {
      "meta_timestamp": {
        "value": "2017-06-15T07:21:24.000Z",
        "type": "DateTime"
      }
    },
    "value": 37
  },
  "value_str": {
    "metadata": {
      "meta_value_str": {
        "value": "true"
      }
    },
    "value": 38
  },
  "value_bool": {
    "metadata": {
      "meta_value_bool": {
        "value": true,
        "type": "alarm"
      }
    },
    "value": 39
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo



echo "03. Dump accumulator, see one notification"
echo "=========================================="
accumulatorDump
echo
echo


--REGEXPECT--
