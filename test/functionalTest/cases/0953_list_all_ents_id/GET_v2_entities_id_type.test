# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entities V2 with id and type
--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/entities, creating E1/T1
# 02. POST /v2/entities, creating E2/T1
# 03. POST /v2/entities, creating E3/T2
# 04. POST /v2/entities, creating E1/T3
# 05. POST /v2/entities, creating E2/T3
# 06. GET /v2/entities?id=E1,E2&type=T1
# 07. GET /v2/entities?id=E1&type=T3
#

echo "01. POST /v2/entities, creating E1/T1"
echo "====================================="
payload='
    {
      "id":   "E1",
      "type": "T1"
    }'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "02. POST /v2/entities, creating E2/T1"
echo "====================================="
payload='
    {
      "id":   "E2",
      "type": "T1"
    }'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "03. POST /v2/entities, creating E3/T2"
echo "====================================="
payload='
    {
      "id":   "E3",
      "type": "T2"
    }'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "04. POST /v2/entities, creating E1/T3"
echo "====================================="
payload='
    {
      "id":   "E1",
      "type": "T3"
    }'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "05. POST /v2/entities, creating E2/T3"
echo "====================================="
payload='
    {
      "id":   "E2",
      "type": "T3"
    }'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "06. GET /v2/entities?id=E1,E2&type=T1"
echo "====================================="
orionCurl --url '/v2/entities?id=E1,E2&type=T1' --json
echo
echo


echo "07. GET /v2/entities?id=E1&type=T3"
echo "=================================="
orionCurl --url '/v2/entities?id=E1&type=T3' --json
echo
echo


--REGEXPECT--
01. POST /v2/entities, creating E1/T1
=====================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. POST /v2/entities, creating E2/T1
=====================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E2?type=T1
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. POST /v2/entities, creating E3/T2
=====================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E3?type=T2
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



04. POST /v2/entities, creating E1/T3
=====================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T3
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



05. POST /v2/entities, creating E2/T3
=====================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E2?type=T3
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



06. GET /v2/entities?id=E1,E2&type=T1
=====================================
HTTP/1.1 200 OK
Content-Length: 49
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

