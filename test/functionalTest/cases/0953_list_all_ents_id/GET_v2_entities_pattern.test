# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entities V2 by idPattern

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. GET /v2/entities?idPattern=E.*
# 02. POST /v2/entities, creating E1
# 03. GET /v2/entities?idPattern=E.*
# 04. GET /v2/entities?idPattern=E1&options=count,normalized
# 05. POST /v2/entities, creating E2 with compound attribute value
# 06. GET /v2/entities?idPattern=E(1|2)
# 07. GET /v2/entities?idPattern=E[2-3]

echo "01. GET /v2/entities?idPattern=E.*"
echo "=================================="
orionCurl --url '/v2/entities?idPattern=E.*' --json
echo
echo


echo "02. POST /v2/entities, creating E1"
echo "=================================="
payload='
{
   "id":"E1",
   "type":"T1",
   "A0":{
      "value":"E1/T1/A2",
      "type":"AT2"
   }
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "03. GET /v2/entities?idPattern=E.*"
echo "=================================="
orionCurl --url '/v2/entities?idPattern=E.*' --json
echo
echo


echo "04. GET /v2/entities?idPattern=E1&options=count,normalized"
echo "=========================================================="
orionCurl --url '/v2/entities?idPattern=E1&options=count,normalized' --json
echo
echo


echo "05. POST /v2/entities, creating E2 with compound attribute value"
echo "================================================================="
payload='
    {
      "id":   "E2",
      "type": "T1",
      "A0" :
        {
          "value" : { "i1": 1, "s1": "s" }
        }
    }
'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "06. GET /v2/entities?idPattern=E(1|2)"
echo "====================================="
orionCurl --url '/v2/entities?idPattern=E(1|2)' --json
echo
echo


echo "07. GET /v2/entities?idPattern=E\[23\]"
echo "======================================"
orionCurl --url '/v2/entities?idPattern=E\[23\]' --json
echo
echo


--REGEXPECT--
01. GET /v2/entities?idPattern=E.*
==================================
HTTP/1.1 200 OK
Content-Length: 2
Content-Type: application/json
Date: REGEX(.*)

[]


02. POST /v2/entities, creating E1
==================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1
Date: REGEX(.*)



03. GET /v2/entities?idPattern=E.*
==================================
HTTP/1.1 200 OK
Content-Length: 78
Content-Type: application/json
Date: REGEX(.*)

[
    {
        "A0": {
            "metadata": {},
            "type": "AT2",
            "value": "E1/T1/A2"
        },
        "id": "E1",
        "type": "T1"
    }
]


04. GET /v2/entities?idPattern=E1&options=count,normalized
==========================================================
HTTP/1.1 200 OK
Content-Length: 78
Content-Type: application/json
X-Total-Count: 1
Date: REGEX(.*)

[
    {
        "A0": {
            "metadata": {},
            "type": "AT2",
            "value": "E1/T1/A2"
        },
        "id": "E1",
        "type": "T1"
    }
]


05. POST /v2/entities, creating E2 with compound attribute value
=================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E2
Date: REGEX(.*)



06. GET /v2/entities?idPattern=E(1|2)
=====================================
HTTP/1.1 200 OK
Content-Length: 168
Content-Type: application/json
Date: REGEX(.*)

[
    {
        "A0": {
            "metadata": {},
            "type": "AT2",
            "value": "E1/T1/A2"
        },
        "id": "E1",
        "type": "T1"
    },
    {
        "A0": {
            "metadata": {},
            "type": null,
            "value": {
                "i1": 1.0,
                "s1": "s"
            }
        },
        "id": "E2",
        "type": "T1"
    }
]


07. GET /v2/entities?idPattern=E\[23\]
======================================
HTTP/1.1 200 OK
Content-Length: 91
Content-Type: application/json
Date: REGEX(.*)

[
    {
        "A0": {
            "metadata": {},
            "type": null,
            "value": {
                "i1": 1.0,
                "s1": "s"
            }
        },
        "id": "E2",
        "type": "T1"
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB
