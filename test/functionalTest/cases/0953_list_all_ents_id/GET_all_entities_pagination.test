Content-Length: 73
Content-Type: application/json
Date: REGEX(.*)

[
    {
        "id": "E3", 
        "type": "T3"
    }, 
    {
        "id": "E4", 
        "type": "T4"
    }, 
    {
        "id": "E5", 
        "type": "T5"
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB

