# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entities V2 with pattern and type

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/entities, creating E1/T1
# 02. POST /v2/entities, creating E2/T1
# 03. POST /v2/entities, creating E3/T2
# 04. POST /v2/entities, creating E1/T3
# 05. POST /v2/entities, creating E2/T3
# 06. GET /v2/entities?idPattern=E.*&type=T1
# 07. GET /v2/entities?idPattern=E.*&type=T3
#

echo "01. POST /v2/entities, creating E1/T1"
echo "====================================="
payload='
    {
      "id":   "E1",
      "type": "T1"
    }'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. POST /v2/entities, creating E2/T1"
echo "====================================="
payload='
    {
      "id":   "E2",
      "type": "T1"
    }'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. POST /v2/entities, creating E3/T2"
echo "====================================="
payload='
    {
      "id":   "E3",
      "type": "T2"
    }'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "04. POST /v2/entities, creating E1/T3"
echo "====================================="
payload='
    {
      "id":   "E1",
      "type": "T3"
    }'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "05. POST /v2/entities, creating E2/T3"
echo "====================================="
payload='
    {
      "id":   "E2",
      "type": "T3"
    }'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "06. GET /v2/entities?idPattern=E.*&type=T1"
echo "=========================================="
orionCurl --url '/v2/entities?idPattern=E.*&type=T1'
echo
echo


echo "07. GET /v2/entities?idPattern=E.*&type=T3"
echo "=========================================="
orionCurl --url '/v2/entities?idPattern=E.*&type=T3'
echo
echo


--REGEXPECT--
01. POST /v2/entities, creating E1/T1
=====================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/E1?type=T1
Content-Length: 0



02. POST /v2/entities, creating E2/T1
=====================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/E2?type=T1
Content-Length: 0



03. POST /v2/entities, creating E3/T2
=====================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/E3?type=T2
Content-Length: 0



04. POST /v2/entities, creating E1/T3
=====================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/E1?type=T3
Content-Length: 0



05. POST /v2/entities, creating E2/T3
=====================================
HTTP/1.1 201 Created
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Location: /v2/entities/E2?type=T3
Content-Length: 0



06. GET /v2/entities?idPattern=E.*&type=T1
==========================================
HTTP/1.1 200 OK
Date: REGEX(.*)
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Content-Type: application/json
Content-Length: 49

[
    {
        "id": "E1",
        "type": "T1"
    },
    {
        "id": "E2",
        "type": "T1"
    }
]


07. GET /v2/entities?idPattern=E.*&type=T3
==========================================
