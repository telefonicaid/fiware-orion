orionCurl --url /v2/op/query --payload "$payload"
echo
echo


echo "14. POST /v2/op/query, with geometry not a string - see error"
echo "============================================================="
payload='{
  "expression": {
    "geometry": 42
  }
}'
orionCurl --url /v2/op/query --payload "$payload"
echo
echo


echo "15. POST /v2/op/query, with geometry empty - see error"
echo "======================================================"
payload='{
  "expression": {
    "geometry": ""
  }
