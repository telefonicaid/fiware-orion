# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Native JSON types in NGSIv1

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Subscribe to E1, using V1
# 02. Create an entity, using NGSIv2, with all possible attribute types
# 03. GET the entity using /v1/queryContext
# 04. Dump accumulator
#


echo "01. Subscribe to E1, using V1"
echo "============================="
payload='{
  "entities": [
    {
      "type": "T",
      "id": "E1"
    }
  ],
  "attributes": [],
  "reference": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
  "duration": "PT1H",
  "notifyConditions": [
    {
      "type": "ONCHANGE",
      "condValues": [ "String" ]
    }
  ]
}'
orionCurl --url /v1/subscribeContext --payload "$payload"
echo
echo


echo "02. Create an entity, using NGSIv2, with all possible attribute types"
echo "====================================================================="
payload='{
  "id": "E1",
  "type": "T",
  "String":  { "value": "string" },
  "Integer": { "value": 3 },
  "Float":   { "value": 3.14 },
  "Bool":    { "value": true },
  "Null":    { "value": null },
  "NumVec":  { "value": [ 1,2,3 ] },
  "BoolVec": { "value": [ true, false, true ] },
  "NullVec": { "value": [ null, null, null ] },
  "Object":  {
    "value": {
      "String": "string",
      "Integer":  3,
      "Float": 3.14,
      "Bool": true,
      "Null": null,
      "NumVec": [ 1,2,3 ],
      "BoolVec": [ true, false, true ],
      "NullVec": [ null, null, null  ],
      "Object": {
        "String": "string",
        "Integer":  3,
        "Float": 3.14,
        "Bool": true,
        "Null": null,
        "NumVec": [ 1,2,3 ],
        "BoolVec": [ true, false, true ],
        "NullVec": [ null, null, null  ],
        "Object": {
          "a": "1",
          "b": null,
          "c": true,
          "d": 3.14
        }
      }
    }
  },
  "attrWithMetadata": {
    "value": 14,
    "type": "mixed",
    "metadata": {
      "String":  { "value": "string" },
      "Integer": { "value": 3        },
      "Float":   { "value": 3.14     },
      "Bool":    { "value": true     },
      "Null":    { "value": null     }
    }
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. GET the entity using /v1/queryContext"
echo "========================================="
payload='{
  "entities": [
    {
      "type": "T",
      "id": "E1"
    }
  ]
}'
orionCurl --url /v1/queryContext --payload "$payload"
echo
echo


echo "04. Dump accumulator"
echo "===================="
accumulatorDump
echo
echo


