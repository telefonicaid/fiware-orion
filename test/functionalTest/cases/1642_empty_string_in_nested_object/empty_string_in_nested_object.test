# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Empty string in nested object of entity

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v1/updateContext with empty string in nested object
# 02. GET /v1/contextEntities/E1
#

echo "01. POST /v1/updateContext with empty string in nested object"
echo "============================================================="
payload='{
    "contextElements": [
        {
            "type": "MyEntity",
            "isPattern": "false",
            "id": "E1",
            "attributes": [
                {
                    "name": "name",
                    "type": "string",
                    "value": "test"
                },
                {
                    "name": "empty",
                    "type": "string",
                    "value": ""
                },
                {
                    "name" : "objectWithEmptyString",
                    "type" : "T",
                    "value" : [{
                        "key": ""
                    }]
                }
            ]
        }
    ],
    "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload"
echo
echo


echo "02. GET /v1/contextEntities/E1"
echo "=============================="
orionCurl --url /v1/contextEntities/E1
echo
echo


--REGEXPECT--
01. POST /v1/updateContext with empty string in nested object
=============================================================
HTTP/1.1 200 OK
Content-Length: 296
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "name",
                        "type": "string",
                        "value": ""
                    },
                    {
                        "name": "empty",
                        "type": "string",
                        "value": ""
                    },
                    {
                        "name": "objectWithEmptyString",
                        "type": "T",
                        "value": ""
                    }
                ],
                "id": "E1",
                "isPattern": "false",
                "type": "MyEntity"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


02. GET /v1/contextEntities/E1
==============================
HTTP/1.1 200 OK
Content-Length: 287
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "contextElement": {
        "attributes": [
            {
                "name": "empty",
                "type": "string",
                "value": ""
            },
            {
                "name": "name",
                "type": "string",
                "value": "test"
            },
            {
                "name": "objectWithEmptyString",
                "type": "T",
                "value": [
                    {
                        "key": ""
                    }
                ]
            }
        ],
        "id": "E1",
        "isPattern": "false",
        "type": "MyEntity"
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}


--TEARDOWN--
brokerStop CB
dbDrop CB
