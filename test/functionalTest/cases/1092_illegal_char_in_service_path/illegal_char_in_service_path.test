# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST /v2/entities with invalid service-path

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/entities with invalid service-path
#

echo "01. POST /v2/entities with invalid service-path"
echo "==============================================="
payload='{
  "type": "room",
  "id": "room_0",
  "timestamp_0":
  {
    "type": "date",
    "value": "017-06-17T07:21:24.238Z",
    "very_hot_1": 
    {
      "type": "alarm",
      "value": "Afe1BuMTcf"
    },
    "very_hot_0": 
    {
      "type": "alarm",
      "value": "Afe1BuMTcf"
    }
  }
}'
orionCurl --url /v2/entities --payload "$payload" --servicePath "/test.2" --json
echo
echo


--REGEXPECT--
01. POST /v2/entities with invalid service-path
===============================================
HTTP/1.1 400 Bad Request
Content-Length: 95
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "a component of ServicePath contains an illegal character", 
    "error": "BadRequest"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
