# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
ONANYCHANGE with empty cond values without subs cache

--SHELL-INIT--
dbInit CB
brokerStart CB 0 IPv4 -noCache
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create ONANYCHANGE subscription
# 02. Create entity E2 not covered by subscription (no notification)
# 03. Create entity E1 covered by subscription with attributes A1 and A2 (notification)
# 04. Update A1 (notification)
# 05. Update A2 (notification)
# 06. Append A3 (notification)
# 07. Get accumulator dump (4 notifications)
#

echo "01. Create ONANYCHANGE subscription"
echo "==================================="
payload1='{
  "entities": [
    {
        "type": "T",
        "isPattern": "false",
        "id": "E1"
    }
  ],
  "reference": "http://localhost:'$LISTENER_PORT'/notify",
  "duration": "P1M",
  "notifyConditions": [
    {
        "type": "ONCHANGE",
        "condValues": [ ]
    }
  ]
}'
orionCurl --url /v1/subscribeContext --payload "$payload1"
echo
echo


echo "02. Create entity E2 not covered by subscription (no notification)"
echo "=================================================================="
payload2='{
    "id": "E2",
    "type": "T",
    "isPattern": "false",
    "attributes": [
        {
            "name": "A1",
            "value": "10"
        }
    ]
}'
orionCurl --url /v1/contextEntities --payload "${payload2}"
echo
echo


echo "03. Create entity E1 covered by subscription with attributes A1 and A2 (notification)"
echo "====================================================================================="
payload3='{
    "id": "E1",
    "type": "T",
    "isPattern": "false",
    "attributes": [
        {
            "name": "A1",
            "value": "10"
        },
        {
            "name": "A2",
            "value": "20"
        }
    ]
}'
orionCurl --url /v1/contextEntities --payload "${payload3}"
echo
echo


echo "04. Update A1 (notification)"
echo "============================"
payload4='{
    "value": "aa"
}'
orionCurl --url /v1/contextEntities/E1/attributes/A1 --payload "$payload4" -X PUT
echo
echo


echo "05. Update A2 (notification)"
echo "============================"
payload5='{
    "value": "bb"
}'
orionCurl --url /v1/contextEntities/E1/attributes/A2 --payload "$payload5" -X PUT
echo
echo


echo "06. Append A3 (notification)"
echo "============================"
payload6='{
    "value": "cc"
}'
orionCurl --url /v1/contextEntities/E1/attributes/A3 --payload "$payload6" -X POST
echo
echo


echo "07. Get accumulator dump (4 notifications)"
echo "=========================================="
accumulatorDump
echo
echo


