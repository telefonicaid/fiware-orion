# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
PUT /v2/entities/E1 a A1 no location attribute on entity that has already A1 as location attribute

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create E1/A1+A2
# 02. Modify E1 to E1/A1 with A1 no location attribute
# 03. Make sure E1 is as modified
#

echo "01. Create E1/A1+A2"
echo "==================="
payload='
{
   "A1": {
      "type": "geo:point",
       "value": "-5, 2"
   },
   "A2": {
      "type": "TA2",
       "value": "noloc"
   },
   "id": "E1",
   "type": "T1"
}
'
orionCurl --url '/v2/entities' --payload "$payload"
echo
echo


echo "02. Modify E1 to E1/A1 with A1 no location attribute"
echo "================================================="
payload='
{
	"A1": {
      "type": "TA1",
       "value": "noLoc"
   }
}
'
orionCurl --url '/v2/entities/E1/attrs' --payload "$payload" -X PUT
echo
echo


echo "03. Make sure E1 is as modified"
echo "==============================="
orionCurl --url /v2/entities/E1
echo
echo


--REGEXPECT--
01. Create E1/A1+A2
===================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Modify E1 to E1/A1 with A1 no location attribute
=================================================
HTTP/1.1 204 No Content
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Make sure E1 is as modified
===============================
HTTP/1.1 200 OK
Content-Length: 73
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "A1": {
        "metadata": {},
        "type": "TA1",
        "value": "noLoc"
    },
    "id": "E1",
    "type": "T1"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
