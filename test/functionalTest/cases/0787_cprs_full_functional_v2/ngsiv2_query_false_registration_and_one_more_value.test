# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Query With a False Registration And With One More Value No Avoid The 404

--SHELL-INIT--
dbInit CB
dbInit CP1
brokerStart CB
brokerStart CP1

--SHELL--

#
# 01. Register E1/T1/A1-CP1 in CB
# 02. Update/APPEND E1/T1/A2 in CB
# 03. Query E1/T1/A1+A2 in CB
#

echo "01. Register E1/T1/A1-CP1 in CB"
echo "==============================="
payload='{
  "contextRegistrations": [
    {
      "entities": [
        {
           "type": "T1",
           "isPattern": "false",
           "id": "E1"
        }
      ],
      "attributes": [
        {
          "name": "A1",
          "type": "string"
        }
      ],
      "providingApplication": "http://localhost:'${CP1_PORT}'/v1"
    }
 ],
 "duration": "P1M"
}'
orionCurl --url /v1/registry/registerContext --payload "$payload"
echo
echo


echo "02. Update/APPEND E1/T1/A2 in CB"
echo "================================"
payload='{
  "type": "T1",
  "id":   "E1",
  "A2": {
    "type": "string",
    "value": "A2 in CB"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "03. Query E1/T1/A1+A2 in CB"
echo "==========================="
payload='{
  "entities": [
    {
      "id":   "E1",
      "type": "T1"
    }
  ],
  "attributes": [
    "A1",
    "A2"
  ]
}'
orionCurl --url /v2/op/query --payload "$payload"
echo
echo


--REGEXPECT--
01. Register E1/T1/A1-CP1 in CB
===============================
HTTP/1.1 200 OK
Content-Length: 62
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "duration": "P1M",
    "registrationId": "REGEX([0-9a-f]{24})"
}


02. Update/APPEND E1/T1/A2 in CB
================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



03. Query E1/T1/A1+A2 in CB
===========================
HTTP/1.1 200 OK
Content-Length: 81
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "A2": {
            "metadata": {},
            "type": "string",
            "value": "A2 in CB"
        },
        "id": "E1",
        "type": "T1"
    }
]


--TEARDOWN--
brokerStop CB
brokerStop CP1
dbDrop CB
dbDrop CP1
