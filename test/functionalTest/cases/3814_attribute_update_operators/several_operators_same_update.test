--NAME--
Several operators in the same update operation

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create entity
# 02. Create sub for entity E
# 03. Update entity using all the operators
# 04. Get entity
# 05. Dump accumulator
#


echo '01. Create entity'
echo '================='
payload='{
  "id": "E",
  "type": "T",
  "A01": {
    "value": 1,
    "type": "Number"
  },
  "A02": {
    "value": 5,
    "type": "Number"
  },
  "A03": {
    "value": 5,
    "type": "Number"
  },
  "A04": {
    "value": 3,
    "type": "Number"
  },
  "A05": {
    "value": [ "foo" ],
    "type": "StructuredValue"
  },
  "A06": {
    "value": [ "foo" ],
    "type": "StructuredValue"
  },
  "A07": {
    "value": [ 1, 2, 3, 4],
    "type": "StructuredValue"
  },
  "A08": {
    "value": [ 1, 2, 3, 4],
    "type": "StructuredValue"
  },
  "A09": {
    "value": {"X": 1, "Y": 2},
    "type": "StructuredValue"
  },
  "A10": {
    "value": {"X": 1, "Y": 2},
    "type": "StructuredValue"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo '02. Create sub for entity E'
echo '==========================='
payload='{
  "subject": {
    "entities": [
      {
        "id": "E",
        "type": "T"
      }
    ]
   },
  "notification": {
    "http": {
      "url": "http://localhost:'$LISTENER_PORT'/notify"
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo '03. Update entity using all the operators'
echo '========================================='
payload='{
  "A01": {
    "value": { "$inc": 2 },
    "type": "Number"
  },
  "A02": {
    "value": { "$min": 0 },
    "type": "Number"
  },
  "A03": {
    "value": { "$max": 8 },
    "type": "Number"
  },
  "A04": {
    "value": { "$mul": 5 },
    "type": "Number"
  },
  "A05": {
    "value": { "$push": "bar" },
    "type": "StructuredValue"
  },
  "A06": {
    "value": { "$addToSet": "foo" },
    "type": "StructuredValue"
  },
  "A07": {
    "value": { "$pull": 2 },
    "type": "StructuredValue"
  },
  "A08": {
    "value": { "$pullAll": [2, 4] },
    "type": "StructuredValue"
  },
  "A09": {
    "value": { "$set": {"Y": 20, "Z": 30} },
    "type": "StructuredValue"
  },
  "A10": {
    "value": { "$unset": {"Y": 1} },
    "type": "StructuredValue"
  }
}'
orionCurl --url /v2/entities/E/attrs --payload "$payload"
echo
echo


echo '04. Get entity'
echo '=============='
orionCurl --url /v2/entities/E
echo
echo


echo '05. Dump accumulator'
echo '===================='
accumulatorDump
echo
echo


