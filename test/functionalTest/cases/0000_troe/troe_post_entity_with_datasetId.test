# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Simple test of creation of an Entity with attributes with datasetId

--SHELL-INIT--
export BROKER=orionld
dbInit CB
pgInit $CB_DB_NAME
brokerStart CB 100 IPv4 -troe

--SHELL--

#
# 01. Create an entity E1 with a property P1
# 02. Update E1/P1, adding two datasetId instances of P1 - replacing the old P1
# 03. GET the entity to see the 3 instances of P1
# 04. See E1 in the temporal database
# 05. See the attributes in the temporal database, with special care to the datasetIds
# 06. See the sub-attributes in the temporal database
#

echo "01. Create an entity E1 with a property P1"
echo "=========================================="
payload='{
  "id": "urn:ngsi-ld:entities:E1",
  "type": "T",
  "P1": {
    "type": "Property",
    "value": "ID1_DEFAULT",
    "observedAt": "2020-12-30T16:00:00.001Z"
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. Update E1/P1, adding two datasetId instances of P1 - replacing the old P1"
echo "============================================================================="
payload='{
  "P1": [
    {
      "type": "Property",
      "value": "ID1_DEFAULT-2",
      "observedAt": "2020-12-30T16:00:00.001Z"
    },
    {
      "type": "Property",
      "value": "ID2",
      "observedAt": "2020-12-30T16:00:00.002Z",
      "datasetId": "urn:ngsi-ld:datasetId:2"
    },
    {
      "type": "Property",
      "value": "ID3",
      "observedAt": "2020-12-30T16:00:00.003Z",
      "datasetId": "urn:ngsi-ld:datasetId:3"
    }
  ]
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1/attrs --payload "$payload"
echo
echo


echo "03. GET the entity to see the 3 instances of P1"
echo "==============================================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1
echo
echo


echo "04. See E1 in the temporal database"
echo "==================================="
postgresCmd -sql "SELECT opMode,id,type FROM entities"
echo
echo


echo "05. See the attributes in the temporal database, with special care to the datasetIds"
echo "===================================================================================="
postgresCmd -sql "SELECT opMode,id,valueType,entityId,subProperties,unitcode,text,number,boolean,datasetid,observedAt FROM attributes"
echo
echo


echo "06. See the sub-attributes in the temporal database"
echo "==================================================="
postgresCmd -sql "SELECT id,valueType,entityId,attrInstanceId,unitcode,text,number,boolean,observedAt FROM subAttributes"
echo
echo


--REGEXPECT--
01. Create an entity E1 with a property P1
==========================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1
Date: REGEX(.*)



02. Update E1/P1, adding two datasetId instances of P1 - replacing the old P1
=============================================================================
HTTP/1.1 204 No Content
Date: REGEX(.*)



03. GET the entity to see the 3 instances of P1
===============================================
HTTP/1.1 200 OK
Content-Length: 358
Content-Type: application/json
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "P1": [
        {
            "observedAt": "2020-12-30T16:00:00.001Z",
            "type": "Property",
            "value": "ID1_DEFAULT-2"
        },
        {
            "datasetId": "urn:ngsi-ld:datasetId:2",
            "observedAt": "2020-12-30T16:00:00.002Z",
            "type": "Property",
            "value": "ID2"
        },
        {
            "datasetId": "urn:ngsi-ld:datasetId:3",
            "observedAt": "2020-12-30T16:00:00.003Z",
            "type": "Property",
            "value": "ID3"
        }
    ],
    "id": "urn:ngsi-ld:entities:E1",
    "type": "T"
}


04. See E1 in the temporal database
===================================
opmode,id,type
Create,urn:ngsi-ld:entities:E1,https://uri.etsi.org/ngsi-ld/default-context/T


05. See the attributes in the temporal database, with special care to the datasetIds
====================================================================================
opmode,id,valuetype,entityid,subproperties,unitcode,text,number,boolean,datasetid,observedat
Create,https://uri.etsi.org/ngsi-ld/default-context/P1,String,urn:ngsi-ld:entities:E1,f,,ID1_DEFAULT,,,,2020-12-30 16:00:00.001
Replace,https://uri.etsi.org/ngsi-ld/default-context/P1,String,urn:ngsi-ld:entities:E1,f,,ID1_DEFAULT-2,,,,2020-12-30 16:00:00.001
Replace,https://uri.etsi.org/ngsi-ld/default-context/P1,String,urn:ngsi-ld:entities:E1,f,,ID2,,,urn:ngsi-ld:datasetId:2,2020-12-30 16:00:00.002
Replace,https://uri.etsi.org/ngsi-ld/default-context/P1,String,urn:ngsi-ld:entities:E1,f,,ID3,,,urn:ngsi-ld:datasetId:3,2020-12-30 16:00:00.003


06. See the sub-attributes in the temporal database
===================================================
id,valuetype,entityid,attrinstanceid,unitcode,text,number,boolean,observedat


--TEARDOWN--
brokerStop CB
dbDrop CB
