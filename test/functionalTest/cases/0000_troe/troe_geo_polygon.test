# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Geo::Polygon

--SHELL-INIT--
export BROKER=orionld
dbInit CB
pgInit $CB_DB_NAME
brokerStart CB 100 IPv4 -troe

--SHELL--

#
# 01. Create an entity E1 with a GeoProperty named 'pol' that is a polygon
# 02. See E1 in the temporal database
# 03. See the attributes in the temporal database
# 04. See the sub-attributes in the temporal database
# 05. GET the entity
# 06. GET the attribute from TRoE
# 07. GET the attribute from TRoE using postgis
# 08. GET nothing from TRoE using postgis
#

echo "01. Create an entity E1 with a GeoProperty named 'pol' that is a polygon"
echo "========================================================================"
payload='{
  "id": "urn:ngsi-ld:entities:E1",
  "type": "T",
  "pol": {
    "type": "GeoProperty",
    "value": {
      "type": "Polygon",
      "coordinates": [[ [0,0], [4,0], [4,-2], [0,-2], [0,0] ]]
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. See E1 in the temporal database"
echo "==================================="
postgresCmd -sql "SELECT opMode,id,type FROM entities"
echo
echo


echo "03. See the attributes in the temporal database"
echo "==============================================="
postgresCmd -sql "SELECT opMode,id,valueType,entityId,subProperty,unitcode,datasetid,geoPolygon,observedAt FROM attributes"
echo
echo


echo "04. See the sub-attributes in the temporal database"
echo "==================================================="
postgresCmd -sql "SELECT id,valueType,entityId,attributeid,unitcode,text,number,boolean,observedAt FROM subAttributes"
echo
echo


echo "05. GET the entity"
echo "=================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1
echo
echo


echo "06. GET the attribute from TRoE"
echo "==============================="
postgresCmd -sql "SELECT opMode,valueType,entityId,id,unitcode,geoPolygon,observedAt FROM attributes"
echo
echo


echo "07. GET the attribute from TRoE using postgis"
echo "============================================="
postgresCmd -sql "SELECT opMode,valueType,entityId,id,unitcode,geoPolygon,observedAt FROM attributes WHERE ST_DWithin(geoPolygon, 'SRID=4267;POINT(2 2)'::geography, 10000000)"
echo
echo


echo "08. GET nothing from TRoE using postgis"
echo "======================================="
postgresCmd -sql "SELECT valueType,entityId,id,unitcode,geoPolygon,observedAt FROM attributes WHERE ST_DWithin(geoPolygon, 'SRID=4267;POINT(11 12)'::geography, 10)"
echo
echo


