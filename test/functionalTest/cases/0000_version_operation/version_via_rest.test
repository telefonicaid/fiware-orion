--NAME--
broker version via REST

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "01. Getting version via REST"
echo "============================"
orionCurl --url /version --noPayloadCheck
echo
echo


--REGEXPECT--
01. Getting version via REST
============================
HTTP/1.1 200 OK
Content-Length: REGEX(\d+)
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
"orion" : {
  "version" : "1.8.0-next",
  "uptime" : "0 d, 0 h, 0 m, 1 s",
  "git_hash" : "10cbb3898840f49e93bf804e22e627e3a60edbad",
  "compile_time" : "Tue Sep 12 20:40:09 CEST 2017",
  "compiled_by" : "kz",
  "compiled_in" : "malika"
}
}


--TEARDOWN--
brokerStop CB
dbDrop CB
