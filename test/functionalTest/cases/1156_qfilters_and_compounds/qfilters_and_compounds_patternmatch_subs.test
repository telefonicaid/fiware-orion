--NAME--
String filters for compound values of attributes: string match in subscriptions

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create E1 with A1 with compound value containing String, Integer and Float
# 02. Beginning: Create subscription 1 for q=A1.s~=test - notification
# 03. Dump and reset accumulator, see one notification
# 04. End: Create subscription 2 for q=A1.s~=ing - notification
# 05. Dump and reset accumulator, see one notification
# 06. Single-char: Create subscription 3 for q=A1.s~=_ - notification
# 07. Dump and reset accumulator, see one notification
# 08. No match: Create subscription 4 for q=A1.s~=fest_string - NO notification
# 09. Dump and reset accumulator, see no notification
# 10. Modify E1/A1 - provoke 3 notifications
# 11. Dump and reset accumulator, see 3 notifications
# 

echo "01. Create E1 with A1 with compound value containing String, Integer and Float"
echo "=============================================================================="
payload='{
  "id": "E1",
  "A1": {
    "value": {
      "i": 10,
      "f": 3.14,
      "s": "test_string",
      "modified": false
    }
  }
}'
orionCurl --url /v2/entities --payload "${payload}"
echo
echo


echo "02. Beginning: Create subscription 1 for q=A1.s~=test - notification"
echo "===================================================================="
payload='{
    "subject": {
        "entities": [
            {
                "idPattern": "E.*"
            }
        ],
        "condition": {
            "attrs": [ ],
            "expression": {
               "q": "A1.s~=test"
            }
         }
    },
    "notification": {
        "http": { "url": "http://localhost:'$LISTENER_PORT'/notify" },
        "attrs": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}'
orionCurl --url /v2/subscriptions --payload "${payload}"
echo
echo


echo "03. Dump and reset accumulator, see one notification"
echo "===================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "04. End: Create subscription 2 for q=A1.s~=ing - notification"
echo "============================================================="
payload='{
    "subject": {
        "entities": [
            {
                "idPattern": "E.*"
            }
        ],
        "condition": {
            "attrs": [ ],
            "expression": {
               "q": "A1.s~=ing"
            }
         }
    },
    "notification": {
        "http": { "url": "http://localhost:'$LISTENER_PORT'/notify" },
        "attrs": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}'
orionCurl --url /v2/subscriptions --payload "${payload}"
echo
echo


echo "05. Dump and reset accumulator, see one notification"
echo "===================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "06. Single-char: Create subscription 3 for q=A1.s~=_ - notification"
echo "==================================================================="
payload='{
    "subject": {
        "entities": [
            {
                "idPattern": "E.*"
            }
        ],
        "condition": {
            "attrs": [ ],
            "expression": {
               "q": "A1.s~=_"
            }
         }
    },
    "notification": {
        "http": { "url": "http://localhost:'$LISTENER_PORT'/notify" },
        "attrs": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}'
orionCurl --url /v2/subscriptions --payload "${payload}"
echo
echo


echo "07. Dump and reset accumulator, see one notification"
echo "===================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "08. No match: Create subscription 4 for q=A1.s~=fest_string - NO notification"
echo "============================================================================="
payload='{
    "subject": {
        "entities": [
            {
                "idPattern": "E.*"
            }
        ],
        "condition": {
            "attrs": [ ],
            "expression": {
               "q": "A1.s~=fest_string"
            }
         }
    },
    "notification": {
        "http": { "url": "http://localhost:'$LISTENER_PORT'/notify" },
        "attrs": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}'
orionCurl --url /v2/subscriptions --payload "${payload}"
echo
echo


echo "09. Dump and reset accumulator, see no notification"
echo "==================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "10. Modify E1/A1 - provoke 3 notifications"
echo "=========================================="
payload='{
  "A1": {
    "value": {
      "i": 10,
      "f": 3.14,
      "s": "test_string",
      "modified": true
    }
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "${payload}" -X PUT
echo
echo


echo "11. Dump and reset accumulator, see 3 notifications"
echo "==================================================="
accumulatorDump
accumulatorReset
echo
echo


