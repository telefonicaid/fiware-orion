# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entity Attribute V2 Entity not found

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. GET /v2/entities/NONE/attrs/ANY
#

echo "02. GET /v2/entities/NONE/attrs/ANY"
echo "==================================="
orionCurl --url /v2/entities/NONE/attrs/ANY --json
echo
echo

--REGEXPECT--
02. GET /v2/entities/NONE/attrs/ANY
===================================
HTTP/1.1 404 Not Found
Content-Length: 95
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "The requested entity has not been found. Check type and id",
    "error": "NotFound"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

