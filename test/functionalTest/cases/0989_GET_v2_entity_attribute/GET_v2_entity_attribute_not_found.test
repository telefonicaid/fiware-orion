# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entity Attribute V2 Attribute not found

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/entities
# 02. GET /v2/entities/E1/attrs/NONE
#


echo "01. POST /v2/entities"
echo "=========================="
payload='{

      "id":   "E1",
      "type": "T1",
      "A0" :
        {
          "type": "number",
          "value" : 255
        }

}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "02. GET /v2/entities/E1/attrs/NONE"
echo "=================================="
orionCurl --url /v2/entities/E1/attrs/NONE
echo
echo


--REGEXPECT--
01. POST /v2/entities
==========================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. GET /v2/entities/E1/attrs/NONE
==================================
HTTP/1.1 404 Not Found
Content-Length: 79
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "description": "The entity does not have such an attribute",
    "error": "NotFound"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

