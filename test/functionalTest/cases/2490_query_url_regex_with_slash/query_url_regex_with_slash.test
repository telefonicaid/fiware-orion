# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
V2 batch query with slash in pattern

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create 4 entities
# 02. Query for numerics, get only one
#

echo "01. Create 4 entities"
echo "====================="
payload1='{
  "id": "room1",
  "type": "house",
  "temperature": 24
}'
payload2='{
  "id": "car",
  "type": "vehicle",
  "temperature": 34
}'
payload3='{
  "id": "nothing",
  "type": "tetetete",
  "temperature": 44
}'
payload4='{
  "id": "numeric",
  "type": "12345678",
  "temperature": 54
}'
orionCurl --url /v2/entities?options=keyValues --payload "$payload1"
orionCurl --url /v2/entities?options=keyValues --payload "$payload2"
orionCurl --url /v2/entities?options=keyValues --payload "$payload3"
orionCurl --url /v2/entities?options=keyValues --payload "$payload4"
echo
echo


echo "02. Query for numeric id in the URL"
echo "==================================="
orionCurl --url '/v2/entities?idPattern=\d%2B&options=keyValues'
echo
echo


echo "03. Query for numeric type in the URL"
echo "====================================="
orionCurl --url '/v2/entities?typePattern=\d%2B&options=keyValues'
echo
echo


--REGEXPECT--
01. Create 4 entities
=====================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/room1?type=house
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/car?type=vehicle
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/nothing?type=tetetete
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/numeric?type=12345678
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)



02. Query for numeric id in the URL
===================================
HTTP/1.1 200 OK
Content-Length: 48
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "id": "room1",
        "temperature": 24,
        "type": "house"
    }
]


03. Query for numeric type in the URL
=====================================
HTTP/1.1 200 OK
Content-Length: 53
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

[
    {
        "id": "numeric",
        "temperature": 54,
        "type": "12345678"
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB
