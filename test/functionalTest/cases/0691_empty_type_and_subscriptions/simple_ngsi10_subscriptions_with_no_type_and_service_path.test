# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Simple NGSI10 subscriptions with service path

--SHELL-INIT--
dbInit CB
brokerStart CB 0-255
accumulatorStart --pretty-print

--SHELL--

#
# 01. Make accumulator subscribe to all entities with a Service Path exact or under '/Madrid'
# 02. Create entity E/T with Service Path /Madrid
# 03. Create entity E/T with Service Path /Barcelona
# 04. Check that the accumulator received the notification of E/T Madrid only
#


echo "01. Make accumulator subscribe to all entities with a Service Path exact or under '/Madrid'"
echo "==========================================================================================="
payload='{
  "entities": [
    {
        "isPattern": "false",
        "id": "E"
    }
  ],
  "attributes": [
    "A1"
  ],
  "reference": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
  "duration": "P1M",
  "throttling": "PT1S",
  "notifyConditions": [
    {
        "type": "ONCHANGE",
        "condValues": [
            "A1"
        ]
    }
  ]
}'
orionCurl --url /v1/subscribeContext --payload "${payload}" --servicePath "/Madrid/#"
echo
echo


echo "02. Create entity E/T with Service Path /Madrid"
echo "==============================================="
payload='{
  "attributes" : [
    {
      "name" : "A1",
      "type" : "AT",
      "value" : "Madrid"
    }
  ]
}'
orionCurl --url /v1/contextEntities/type/T/id/E --payload "${payload}" --servicePath /Madrid
echo
echo


echo "03. Create entity E/T with Service Path /Barcelona"
echo "=================================================="
payload='{
  "attributes" : [
    {
      "name" : "A1",
      "type" : "AT",
      "value" : "Barcelona"
    }
  ]
}'
orionCurl --url /v1/contextEntities/type/T/id/E --payload "${payload}" --servicePath /Barcelona
echo
echo


echo "04. Check that the accumulator received the notification of E/T Madrid only"
echo "==========================================================================="
sleep 1
curl localhost:${LISTENER_PORT}/dump -s -S
echo
echo


