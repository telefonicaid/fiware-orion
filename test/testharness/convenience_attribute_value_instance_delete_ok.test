# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Convenience Attribute Value Instance - DELETE OK

--SHELL-INIT--
source harnessFunctions.sh

dbInit CB
brokerStart CB

--SHELL--
echo "+++++ 1. register an entity +++++"
(curl localhost:${BROKER_PORT}/NGSI10/contextEntities/Room1 -s -S --header 'Content-Type: application/json' --header 'Accept: application/json' -d @- | python -mjson.tool) <<EOF
{
  "attributes" : [
  {
    "name" : "temperature",
    "type" : "centigrade",
    "value" : "23",
    "metadatas" : [
      {
        "name" : "ID",
        "type" : "string",
        "value" : "ground"
      }
    ]
  },
  {
    "name" : "temperature",
    "type" : "centigrade",
    "value" : "23.5",
    "metadatas" : [
      {
        "name" : "ID",
        "type" : "string",
        "value" : "wall"
      }
    ]
  }
  ]
}
EOF

echo "+++++ 2. delete an attribute by valueID +++++"
curl localhost:${BROKER_PORT}/ngsi10/contextEntities/Room1/attributes/temperature/ground -s -S --header 'Content-Type: application/json' --header 'Accept: application/json' -X DELETE | python -mjson.tool

echo "+++++ 3. lookup the entity +++++"
curl localhost:${BROKER_PORT}/NGSI10/contextEntities/Room1 -s -S --header 'Content-Type: application/json' --header 'Accept: application/json' | python -mjson.tool

--REGEXPECT--
+++++ 1. register an entity +++++
{
    "contextResponses": [
        {
            "attributes": [
                {
                    "metadatas": [
                        {
                            "name": "ID",
                            "type": "string",
                            "value": "ground"
                        }
                    ],
                    "name": "temperature",
                    "type": "centigrade",
                    "value": ""
                },
                {
                    "metadatas": [
                        {
                            "name": "ID",
                            "type": "string",
                            "value": "wall"
                        }
                    ],
                    "name": "temperature",
                    "type": "centigrade",
                    "value": ""
                }
            ],
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}
+++++ 2. delete an attribute by valueID +++++
{
    "code": "200",
    "reasonPhrase": "OK"
}
+++++ 3. lookup the entity +++++
{
    "contextElement": {
        "attributes": [
            {
                "name": "temperature",
                "type": "centigrade",
                "value": "23.5"
            }
        ],
        "id": "Room1",
        "isPattern": "false",
        "type": ""
    },
    "statusCode": {
        "code": "200",
        "reasonPhrase": "OK"
    }
}
--TEARDOWN--
source harnessFunctions.sh
brokerStop CB
