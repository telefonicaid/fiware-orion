--NAME--
Accept header fail

--SHELL-INIT--
source harnessFunctions.sh

dbInit CB
brokerStart CB

--SHELL--
source harnessFunctions.sh

# Note that curl by default uses "Accept: */*" so this step is testing that "no header" is interpreted as
# "Accept: */*" according to HTTP RFC
url='/NGSI10/queryContext'
payload='<?xml version="1.0"?>
<queryContextRequest>
  <entityIdList>
        <entityId type="Room" isPattern="false">
          <id>OfficeRoom</id>
        </entityId>
  </entityIdList>
  <attributeList/>
</queryContextRequest>'
curlxml ${url} "${payload}" "Content-Type: application/xml" "Accept:"
echo "1: ++++++++++++++++++++"

# This test will always fail
url="/NGSI10/queryContext"
payload="no meaningful payload (failing tests)"
curlxml ${url} "${payload}" "Content-Type: application/xml" "Accept: text/plain"
echo "2: ++++++++++++++++++++"

# This test that explicit "Accept: application/xml" is ok
url="/NGSI10/queryContext"
payload='<?xml version="1.0" encoding="UTF-8"?>
<queryContextRequest>
  <entityIdList>
        <entityId type="Room" isPattern="false">
          <id>OfficeRoom</id>
        </entityId>
  </entityIdList>
  <attributeList/>
</queryContextRequest>'
curlxml ${url} "${payload}" "Content-Type: application/xml" "Accept: application/xml"
echo "3: ++++++++++++++++++++"

# This test uses a list in Accept which a valid type is found is ok
url="/NGSI10/queryContext"
payload='<?xml version="1.0" encoding="UTF-8"?>
<queryContextRequest>
  <entityIdList>
        <entityId type="Room" isPattern="false">
          <id>OfficeRoom</id>
        </entityId>
  </entityIdList>
  <attributeList/>
</queryContextRequest>'
curlxml ${url} "${payload}" "Content-Type: application/xml" "Accept: text/plain, application/xml"
echo "4: ++++++++++++++++++++"

# This test uses a list in Accept which a valid type is found is ok (with extra encoding after ";")
url="/NGSI10/queryContext"
payload='<?xml version="1.0" encoding="UTF-8"?>
<queryContextRequest>
  <entityIdList>
        <entityId type="Room" isPattern="false">
          <id>OfficeRoom</id>
        </entityId>
  </entityIdList>
  <attributeList/>
</queryContextRequest>'
curlxml ${url} "${payload}" "Content-Type: application/xml" "Accept: text/plain, application/xml; charset=UTF-8"
echo "5: ++++++++++++++++++++"

# This test uses a list in Accept which no valid types
url="/NGSI10/queryContext"
payload='no meaningful payload (failing tests)'
curlxml ${url} "${payload}" "Content-Type: application/xml" "Accept: text/plain, image/jpeg"
echo "6: ++++++++++++++++++++"

# This test uses a list in Accept which no valid type (with extra encoding after ";")
url="/NGSI10/queryContext"
payload='no meaningful payload (failing tests)'
curlxml ${url} "${payload}" "Content-Type: application/xml" "Accept: text/plain, image/jpeg; charset=UTF-8"
echo "7: ++++++++++++++++++++"

